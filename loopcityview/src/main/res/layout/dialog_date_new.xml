<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape_birth_bg"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="14dp"
            android:layout_marginBottom="12dp"
            android:text="选择地址"
            android:textColor="#ff000000"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/iv_close"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="18dp"
            android:layout_marginRight="18dp"
            android:src="@drawable/img_bg_qur_close" />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="#fff"
        android:orientation="horizontal"
        android:paddingTop="10dp"
        android:paddingBottom="10dp">

        <com.weigan.loopview.LoopView
            android:id="@+id/loop_year"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:awv_centerTextColor="#333333"
            app:awv_outerTextColor="#666666"
            app:awv_textsize="13sp" />

        <com.weigan.loopview.LoopView
            android:id="@+id/loop_month"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:awv_centerTextColor="#333333"
            app:awv_outerTextColor="#666666"
            app:awv_textsize="13sp" />

        <com.weigan.loopview.LoopView
            android:id="@+id/loop_day"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:awv_centerTextColor="#333333"
            app:awv_outerTextColor="#666666"
            app:awv_textsize="13sp" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="12dp"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_club_blue_littile_stroke"
            android:paddingLeft="65dp"
            android:paddingTop="12dp"
            android:paddingRight="65dp"
            android:paddingBottom="12dp"
            android:text="取消"
            android:textColor="#ff3e8bd6"
            android:textSize="14sp" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/tv_sure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_club_blue"
            android:paddingLeft="65dp"
            android:paddingTop="12dp"
            android:paddingRight="65dp"
            android:paddingBottom="12dp"
            android:text="确定"
            android:textColor="#FFFFFF"
            android:textSize="14sp" />
    </LinearLayout>
</LinearLayout>