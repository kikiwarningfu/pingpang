<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/rl_content"

        android:background="@color/empty"
        android:orientation="vertical">

    <LinearLayout
            android:id="@+id/contents"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentBottom="true">

        <LinearLayout
                android:id="@+id/box_body"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <RelativeLayout
                    android:id="@+id/box_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_white_corners"


                    android:layout_marginBottom="10dp"

                    android:orientation="vertical">

                <LinearLayout

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                    <TextView
                            android:id="@+id/txt_title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="25dp"
                            android:layout_marginTop="15dp"
                            android:layout_marginRight="25dp"
                            android:layout_marginBottom="15dp"
                            android:gravity="center_horizontal"
                            android:text=""
                            android:textColor="@color/tipTextColor"
                            android:textSize="12dp"
                            android:textStyle="bold"
                            android:visibility="gone" />

                    <RelativeLayout
                            android:id="@+id/box_custom"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:visibility="gone"></RelativeLayout>

                    <ImageView
                            android:id="@+id/title_split_line"
                            android:layout_width="match_parent"
                            android:layout_height="1px"
                            android:background="@color/dialogSplitIOSLight"
                            android:visibility="gone" />

                    <ListView
                            android:id="@+id/list_wrap_menu"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:clipToPadding="false"
                            android:divider="@color/dialogSplitIOSLight"
                            android:dividerHeight="1px"
                            android:listSelector="@android:color/transparent"
                            android:overScrollMode="never"
                            android:scrollbarSize="7dp"
                            android:scrollbarThumbVertical="@drawable/scrollbar_vertical_track"></ListView>

                </LinearLayout>

            </RelativeLayout>

            <RelativeLayout
                    android:background="@drawable/shape_white_corners"
                    android:id="@+id/box_cancel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_marginTop="-2dp"
               >

                <TextView
                        android:id="@+id/btn_cancel"
                        android:layout_width="match_parent"
                        android:layout_height="53dp"
                        android:background="@drawable/button_menu_ios_light"
                        android:gravity="center"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:singleLine="true"
                        android:text="CANCEL"
                        android:textColor="@color/dialogButtonIOSNormal"
                        android:textSize="19dp"
                        android:textStyle="bold" />

            </RelativeLayout>


        </LinearLayout>


    </LinearLayout>


</RelativeLayout>