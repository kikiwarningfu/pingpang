<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_marginRight="@dimen/dp_5"
        android:layout_height="@dimen/dp_100"
        android:id="@+id/card_view"
        android:layout_marginTop="@dimen/dp_15"
        app:cardElevation="@dimen/dp_4"
        app:cardMaxElevation="@dimen/dp_2"
        app:cardCornerRadius="@dimen/dp_8"
        android:background="@drawable/img_one_referee"
        >

        <LinearLayout
            android:id="@+id/ll_content"

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:layout_marginTop="@dimen/dp_4"
                android:layout_marginBottom="@dimen/dp_5"
                android:id="@+id/tv_position"
                android:layout_marginLeft="@dimen/dp_2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="#ff4795ed"
                android:gravity="center"
                android:text="1"
                android:textColor="#FFFFFFFF"
                android:textSize="@dimen/sp_12" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3.1"
                android:orientation="vertical"
                android:paddingTop="@dimen/dp_20">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_left_name_one"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_9"
                            android:ellipsize="end"
                            android:gravity="center"
                            android:lines="1"
                            android:text="洪亮俱乐部乐部/一"
                            android:textColor="#ff333333"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <ImageView
                        android:layout_width="@dimen/dp_19"
                        android:layout_height="@dimen/dp_10"
                        android:layout_marginLeft="@dimen/dp_7"
                        android:layout_marginRight="@dimen/dp_7"
                        android:src="@drawable/img_versus_icon" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_right_name_one"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_7"
                            android:ellipsize="end"
                            android:gravity="center"
                            android:lines="1"
                            android:text="洪亮俱乐部乐部/一"
                            android:textColor="#ff333333"
                            android:textSize="12sp" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_marginTop="@dimen/dp_23"
                        android:ellipsize="end"
                        android:lines="1"
                        android:text="成人组女"
                        android:textColor="#ff333333"
                        android:textSize="11sp" />


                </LinearLayout>
            </LinearLayout>


            <View
                android:layout_width="@dimen/dp_0_5"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginBottom="@dimen/dp_15"
                android:background="#FFCCCCCC" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.1"

                android:orientation="vertical">
                <TextView
                    android:layout_marginTop="@dimen/dp_12"
                    android:gravity="center_horizontal"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2020.01.06"
                    android:textColor="#ff666666"
                    android:textSize="11sp"
                    />
                <TextView
                    android:gravity="center_horizontal"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0 : 3"
                    android:textColor="#ff333333"
                    android:textSize="18sp"
                    />


                <TextView
                    android:id="@+id/tv_game_end_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:gravity="center_horizontal"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/shape_club_blue_5"
                    android:paddingLeft="@dimen/dp_9"
                    android:paddingTop="@dimen/dp_6"
                    android:paddingRight="@dimen/dp_9"
                    android:paddingBottom="@dimen/dp_6"
                    android:text="详情"
                    android:textColor="#ff0d3078"
                    android:textSize="11sp" />

            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</layout>