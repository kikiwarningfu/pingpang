<?xml version="1.0" encoding="utf-8"?>
<layout>


<LinearLayout
        android:orientation="vertical"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent" android:layout_height="wrap_content">
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/dp_15"
            android:paddingBottom="@dimen/dp_15"
            android:background="@color/white">

        <TextView
                android:id="@+id/tv_grade_level"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:paddingLeft="@dimen/dp_24"

                android:text="7"
                android:textColor="#ff000000"
                android:textSize="18sp" />

        <ImageView
                android:id="@+id/iv_avatar_default"
                android:layout_width="@dimen/dp_41"
                android:layout_height="@dimen/dp_41"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_27"
                android:layout_toRightOf="@id/tv_grade_level"
                android:src="@drawable/img_default_avatar" />

        <TextView
                android:layout_alignTop="@id/iv_avatar_default"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_toRightOf="@id/iv_avatar_default"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="王朝"
                android:textColor="#ff343434"
                android:textSize="15sp"
                />
        <ImageView
                android:src="@drawable/img_sex_avatar"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_toRightOf="@id/iv_avatar_default"
                android:layout_alignBottom="@id/iv_avatar_default"
                android:layout_width="@dimen/dp_16"
                android:layout_height="@dimen/dp_16"/>

        <TextView
                android:id="@+id/tv_ranking_number"
                android:layout_marginRight="@dimen/dp_12"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="9994"
                android:textColor="#ff303030"
                android:textSize="15sp"
                />
        <TextView
                android:visibility="gone"
                android:layout_marginRight="@dimen/dp_42"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/tv_ranking_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="（我的排名）"
                android:textColor="#ff4795ed"
                android:textSize="15sp"
                />
    </RelativeLayout>
</LinearLayout>
</layout>