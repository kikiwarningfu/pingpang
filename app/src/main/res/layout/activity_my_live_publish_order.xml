<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="listener"
            type="android.view.View.OnClickListener" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_f5"
        android:orientation="vertical"
        tools:context=".ui.homepage.activity.CreateEventsActivity">


        <heyong.handong.framework.widget.TopBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:centerText="直播订单" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="#F6F6F6" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white">

                <View
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp_1"
                    android:layout_weight="30" />

                <LinearLayout
                    android:id="@+id/ll_all"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_horizontal"
                    android:onClick="@{v->listener.onClick(v)}"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_all"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_13"
                        android:layout_marginBottom="@dimen/dp_13"
                        android:text="全部"
                        android:textColor="#ff666666"
                        android:textSize="14sp" />

                    <View
                        android:id="@+id/view_all"
                        android:layout_width="@dimen/dp_20"
                        android:layout_height="@dimen/dp_2"
                        android:background="#4795ED" />
                </LinearLayout>

                <View
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp_1"
                    android:layout_weight="55" />

                <LinearLayout
                    android:id="@+id/ll_to_pay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_horizontal"
                    android:onClick="@{v->listener.onClick(v)}"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_to_pay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_13"
                        android:layout_marginBottom="@dimen/dp_13"
                        android:text="待支付"
                        android:textColor="#ff666666"
                        android:textSize="14sp" />

                    <View
                        android:id="@+id/view_to_pay"
                        android:layout_width="@dimen/dp_20"
                        android:layout_height="@dimen/dp_2"
                        android:background="#4795ED" />
                </LinearLayout>

                <View
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp_1"
                    android:layout_weight="55" />

                <LinearLayout
                    android:id="@+id/ll_to_be_completed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_horizontal"
                    android:onClick="@{v->listener.onClick(v)}"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_to_be_completed"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_13"
                        android:layout_marginBottom="@dimen/dp_13"
                        android:text="待完成"
                        android:textColor="#ff666666"
                        android:textSize="14sp" />

                    <View
                        android:id="@+id/view_to_be_completed"
                        android:layout_width="@dimen/dp_20"
                        android:layout_height="@dimen/dp_2"
                        android:background="#4795ED" />
                </LinearLayout>

                <View
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp_1"
                    android:layout_weight="55" />

                <LinearLayout
                    android:id="@+id/ll_to_be_confirmed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_horizontal"
                    android:onClick="@{v->listener.onClick(v)}"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_to_be_confirmed"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_13"
                        android:layout_marginBottom="@dimen/dp_13"
                        android:text="待确认"
                        android:textColor="#ff666666"
                        android:textSize="14sp" />

                    <View
                        android:id="@+id/view_to_be_confirmed"
                        android:layout_width="@dimen/dp_20"
                        android:layout_height="@dimen/dp_2"
                        android:background="#4795ED" />
                </LinearLayout>

                <View
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp_1"
                    android:layout_weight="55" />

                <LinearLayout
                    android:id="@+id/ll_completed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_horizontal"
                    android:onClick="@{v->listener.onClick(v)}"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_completed"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_13"
                        android:layout_marginBottom="@dimen/dp_13"
                        android:text="已完成"
                        android:textColor="#ff666666"
                        android:textSize="14sp" />

                    <View
                        android:id="@+id/view_completed"
                        android:layout_width="@dimen/dp_20"
                        android:layout_height="@dimen/dp_2"
                        android:background="#4795ED" />
                </LinearLayout>

                <View
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp_1"
                    android:layout_weight="30" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0_5"
                android:background="@color/color_f5" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_18"
                    android:layout_marginTop="@dimen/dp_14"
                    android:layout_marginBottom="@dimen/dp_14"
                    android:text="日期"
                    android:textColor="#ff333333"
                    android:textSize="13sp" />

                <LinearLayout
                    android:id="@+id/ll_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_13"
                    android:layout_marginTop="@dimen/dp_8"
                    android:background="@drawable/shape_order_date_birth"
                    android:onClick="@{v->listener.onClick(v)}"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_day_month"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/dp_8"
                        android:paddingTop="@dimen/dp_7"
                        android:paddingRight="@dimen/dp_7"
                        android:paddingBottom="@dimen/dp_6"
                        android:text="2021-08"
                        android:textColor="#ff333333"
                        android:textSize="12sp" />

                    <ImageView
                        android:layout_width="@dimen/dp_13"
                        android:layout_height="@dimen/dp_8"
                        android:layout_marginTop="@dimen/dp_8"
                        android:layout_marginRight="@dimen/dp_4"
                        android:src="@drawable/img_jiantou_xia" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0_5"
                android:background="@color/color_f5" />

            <androidx.viewpager.widget.ViewPager
                android:id="@+id/viewPager"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@color/color_f5" />

        </LinearLayout>
    </LinearLayout>
</layout>