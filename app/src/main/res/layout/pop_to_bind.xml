<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent_20">

    <LinearLayout
        android:id="@+id/ll_out"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/dp_42"
        android:layout_marginRight="@dimen/dp_42"
        android:background="@drawable/shape_message_dialog"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_explain"
            android:layout_marginTop="@dimen/dp_28"
            android:layout_marginBottom="@dimen/dp_59"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center"
            android:text="您尚未绑定微信（支付宝）账号，无法
提现，请先绑定提现账号"
            android:textColor="#ff333333"
            android:textSize="16sp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_20"

            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_cancel"
                android:background="@drawable/shape_cancel_corners_bg"
                android:paddingTop="@dimen/dp_10"
                android:paddingBottom="@dimen/dp_10"

                android:layout_marginLeft="@dimen/dp_20"
                android:layout_width="@dimen/dp_100"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:text="取消"
                android:textColor="#666666"
                android:textSize="16sp"
                />
            <View
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_1"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/tv_submit"
                android:background="@drawable/shape_club_blue"
                android:paddingTop="@dimen/dp_10"
                android:paddingBottom="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_20"
                android:layout_width="@dimen/dp_100"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:text="去绑定"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>