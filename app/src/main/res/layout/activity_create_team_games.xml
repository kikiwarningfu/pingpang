<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="listener"
            type="android.view.View.OnClickListener" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical"
        tools:context=".ui.homepage.activity.CreateEventsActivity">


        <heyong.handong.framework.widget.TopBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:centerText="创建队内比赛" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="#F6F6F6" />

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_12"

                    android:layout_marginTop="@dimen/dp_15"
                    android:layout_marginBottom="@dimen/dp_20"
                    android:text="赛事名称"
                    android:textColor="#ff333333"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/et_saishi_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_12"
                    android:layout_marginRight="@dimen/dp_12"
                    android:layout_marginBottom="@dimen/dp_14"
                    android:background="@null"
                    android:hint="请输入赛事名称"
                    android:textColorHint="#FFB3B3B3"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_15" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:layout_marginLeft="@dimen/dp_12"
                    android:layout_marginRight="@dimen/dp_12"
                    android:background="#FFF6F6F6" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_12"
                    android:layout_marginTop="@dimen/dp_15"
                    android:layout_marginBottom="@dimen/dp_19"
                    android:text="开始时间"
                    android:textColor="#ff333333"
                    android:textSize="15sp" />

                <LinearLayout
                    android:id="@+id/ll_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp_14"
                    android:gravity="center_vertical"
                    android:onClick="@{v->listener.onClick(v)}"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tv_start_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_12"
                        android:layout_marginRight="@dimen/dp_12"
                        android:text="请选择比赛开始时间"
                        android:textColor="#FFB3B3B3"
                        android:drawableRight="@drawable/icon_right_back"
                        android:textSize="@dimen/sp_15" />

                    <!--<LinearLayout
                        android:id="@+id/ll_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_40"
                        android:layout_marginRight="@dimen/dp_40"
                        android:background="@drawable/shape_solid_blue"
                        android:onClick="@{v->listener.onClick(v)}"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_start_time"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:paddingTop="@dimen/dp_12"
                            android:paddingBottom="@dimen/dp_12"
                            android:text="开始时间"
                            android:textColor="#ffb3b3b3"
                            android:textSize="15sp" />

                        <ImageView
                            android:layout_width="@dimen/dp_21"
                            android:layout_height="@dimen/dp_14"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/dp_17"
                            android:layout_marginRight="@dimen/dp_17"
                            android:src="@drawable/icon_right_empty_back" />

                        <TextView
                            android:id="@+id/tv_end_time"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:paddingTop="@dimen/dp_12"
                            android:paddingBottom="@dimen/dp_12"
                            android:text="结束时间"
                            android:textColor="#999999"
                            android:textSize="15sp" />
                    </LinearLayout>-->

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:layout_marginLeft="@dimen/dp_12"
                    android:layout_marginRight="@dimen/dp_12"
                    android:background="#FFF6F6F6" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_14"
                    android:layout_marginBottom="@dimen/dp_14"
                    android:visibility="gone"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_12"
                        android:text="球台数"
                        android:textColor="#ff333333"
                        android:textSize="15sp" />

                    <EditText
                        android:id="@+id/et_qiutai_num"
                        android:layout_width="0dp"
                        android:inputType="number"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_marginRight="@dimen/dp_12"
                        android:layout_weight="1"
                        android:background="@null"
                        android:gravity="right"
                        android:hint="请输入球台数"
                        android:textColor="@color/black"
                        android:textColorHint="#FFB2B2B2"
                        android:textSize="@dimen/sp_15" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="#FFF6F6F6" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_12"
                    android:layout_marginTop="@dimen/dp_14"
                    android:layout_marginRight="@dimen/dp_12"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="比赛类型"
                        android:textColor="#ff333333"
                        android:textSize="15sp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_weight="1"
                        android:gravity="right">

                        <LinearLayout
                            android:id="@+id/ll_game_type_team"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:onClick="@{v->listener.onClick(v)}"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="@dimen/dp_8"
                                android:text="团体"
                                android:textColor="#ff666666"
                                android:textSize="15sp" />

                            <CheckBox
                                android:id="@+id/cb_game_type_team"
                                android:layout_width="@dimen/dp_16"
                                android:layout_height="@dimen/dp_16"
                                android:layout_marginRight="@dimen/dp_34"
                                android:background="@null"
                                android:button="@null"
                                android:drawableLeft="@drawable/check_log"
                                android:onClick="@{v->listener.onClick(v)}" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ll_game_type_single"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:onClick="@{v->listener.onClick(v)}"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="@dimen/dp_9"
                                android:text="单打"
                                android:textColor="#ff666666"
                                android:textSize="15sp" />

                            <CheckBox
                                android:id="@+id/cb_game_type_single"
                                android:layout_width="@dimen/dp_16"
                                android:layout_height="@dimen/dp_16"
                                android:layout_marginRight="@dimen/dp_34"
                                android:background="@null"
                                android:button="@null"
                                android:drawableLeft="@drawable/check_log"
                                android:onClick="@{v->listener.onClick(v)}" />
                        </LinearLayout>


                    </LinearLayout>


                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:layout_marginLeft="@dimen/dp_12"
                    android:layout_marginTop="@dimen/dp_19"
                    android:layout_marginRight="@dimen/dp_12"
                    android:layout_marginBottom="@dimen/dp_15"
                    android:background="#FFF6F6F6" />

                <LinearLayout
                    android:id="@+id/ll_game_method"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_12"
                        android:layout_marginBottom="@dimen/dp_20"
                        android:text="比赛方法"
                        android:textColor="#ff333333"
                        android:textSize="15sp" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_12"
                        android:layout_marginRight="@dimen/dp_12"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/ll_two_winner"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:onClick="@{v->listener.onClick(v)}"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv_two_winners"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="@dimen/dp_10"
                                android:text="三局二胜"
                                android:textColor="#ff666666"
                                android:textSize="15sp" />

                            <CheckBox
                                android:id="@+id/cb_two_winer"
                                android:layout_width="@dimen/dp_16"
                                android:layout_height="@dimen/dp_16"
                                android:layout_marginRight="@dimen/dp_34"
                                android:background="@null"
                                android:button="@null"
                                android:drawableLeft="@drawable/check_log"
                                android:clickable="false"
                                android:enabled="false" />
                        </LinearLayout>


                        <LinearLayout
                            android:id="@+id/ll_three_winner"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:onClick="@{v->listener.onClick(v)}"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv_three_winner"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="@dimen/dp_10"
                                android:text="五局三胜"
                                android:textColor="#ff666666"
                                android:textSize="15sp" />

                            <CheckBox
                                android:id="@+id/cb_three_winner"
                                android:layout_width="@dimen/dp_16"
                                android:layout_height="@dimen/dp_16"
                                android:layout_marginRight="@dimen/dp_34"
                                android:background="@null"
                                android:button="@null"
                                android:drawableLeft="@drawable/check_log"
                                android:clickable="false"
                                android:enabled="false" />
                        </LinearLayout>


                        <LinearLayout
                            android:id="@+id/ll_four_winner"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:onClick="@{v->listener.onClick(v)}"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv_four_winner"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="@dimen/dp_10"
                                android:text="七局四胜"
                                android:textColor="#ff666666"
                                android:textSize="15sp" />

                            <CheckBox
                                android:id="@+id/cb_four_winner"
                                android:layout_width="@dimen/dp_16"
                                android:layout_height="@dimen/dp_16"
                                android:layout_marginRight="@dimen/dp_34"
                                android:background="@null"
                                android:button="@null"
                                android:drawableLeft="@drawable/check_log"
                                android:clickable="false"
                                android:enabled="false" />
                        </LinearLayout>

                    </LinearLayout>


                </LinearLayout>


                <LinearLayout
                    android:visibility="gone"
                    android:id="@+id/ll_single"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_14"
                    android:layout_marginBottom="@dimen/dp_20"
                    android:background="#FFF6F6F6"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_12"
                            android:layout_marginTop="@dimen/dp_14"
                            android:layout_marginBottom="@dimen/dp_15"
                            android:text="选择参赛队员"
                            android:textColor="#ff333333"
                            android:textSize="15sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_8"
                            android:layout_marginTop="@dimen/dp_14"
                            android:text="（团体每队限制3-10人）"
                            android:textColor="#ffcccccc"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="@dimen/dp_20"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingBottom="@dimen/dp_15">

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <TextView
                                android:id="@+id/tv_red_edit"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/dp_12"
                                android:layout_marginTop="@dimen/dp_28"
                                android:onClick="@{v->listener.onClick(v)}"
                                android:text="编辑"
                                android:textColor="#ffeb2f2f"
                                android:textSize="15sp" />

                            <LinearLayout
                                android:id="@+id/ll_red"
                                android:layout_width="@dimen/dp_100"
                                android:layout_height="@dimen/dp_40"
                                android:layout_alignParentRight="true"
                                android:layout_marginTop="@dimen/dp_15"
                                android:layout_marginRight="@dimen/dp_12"
                                android:background="@drawable/shape_club_red"
                                android:gravity="center"
                                android:onClick="@{v->listener.onClick(v)}"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="红队"
                                    android:textColor="@color/white"
                                    android:textSize="15sp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="16dp"
                                    android:text="+"
                                    android:textColor="@color/white" />
                            </LinearLayout>
                        </RelativeLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="vs"
                            android:textColor="#ff333333"
                            android:textSize="24sp" />


                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <LinearLayout
                                android:id="@+id/ll_blue"
                                android:layout_width="@dimen/dp_100"
                                android:layout_height="@dimen/dp_40"
                                android:layout_alignParentRight="true"
                                android:layout_marginLeft="@dimen/dp_13"
                                android:layout_marginTop="@dimen/dp_15"
                                android:background="@drawable/shape_club_blue"
                                android:gravity="center"
                                android:onClick="@{v->listener.onClick(v)}"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="蓝队"
                                    android:textColor="@color/white"
                                    android:textSize="15sp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="16dp"
                                    android:text="+"
                                    android:textColor="@color/white" />
                            </LinearLayout>

                            <TextView
                                android:id="@+id/tv_blue_edit"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/dp_17"
                                android:layout_marginTop="@dimen/dp_28"
                                android:onClick="@{v->listener.onClick(v)}"
                                android:text="编辑"
                                android:textColor="#FF4795ED"
                                android:textSize="15sp" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_32"
                        android:layout_marginRight="@dimen/dp_32"
                        android:layout_marginBottom="@dimen/dp_15"
                        android:orientation="horizontal"
                        android:visibility="visible">

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rv_team_number_red"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/dp_10"
                            android:layout_weight="1" />

                        <View
                            android:layout_width="@dimen/dp_1"
                            android:layout_height="match_parent"
                            android:layout_marginTop="@dimen/dp_5"
                            android:background="#FF999999" />

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rv_team_number_blue"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_10"
                            android:layout_weight="1" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_team"
                    android:visibility="visible"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_14"
                    android:layout_marginBottom="@dimen/dp_17"
                    android:background="#FFF6F6F6"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_12"
                            android:layout_marginTop="@dimen/dp_14"
                            android:layout_marginBottom="@dimen/dp_15"
                            android:text="选择参赛队员"
                            android:textColor="#ff333333"
                            android:textSize="15sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_8"
                            android:layout_marginTop="@dimen/dp_14"
                            android:text="(单打每组限制3-100人)"
                            android:textColor="#ffcccccc"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/mRecyclerView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_12"
                        android:layout_marginRight="@dimen/dp_12"
                        android:background="#FFF6F6F6" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp_20"
                    android:background="@color/white"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:id="@+id/rl_add"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:onClick="@{v->listener.onClick(v)}">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_marginBottom="@dimen/dp_19"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="@dimen/dp_19"
                                android:layout_height="@dimen/dp_19"
                                android:src="@drawable/img_group_add" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/dp_9"
                                android:text="新增分组"
                                android:textColor="#ff4795ed"
                                android:textSize="15sp" />
                        </LinearLayout>
                    </RelativeLayout>

                    <TextView
                        android:layout_marginTop="@dimen/dp_20"
                        android:id="@+id/tv_create_and_start"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_12"
                        android:layout_marginRight="@dimen/dp_12"
                        android:background="@drawable/shape_club_blue"
                        android:gravity="center"
                        android:onClick="@{v->listener.onClick(v)}"
                        android:paddingTop="@dimen/dp_12"
                        android:paddingBottom="@dimen/dp_12"
                        android:text="创建完成，开始比赛"
                        android:textColor="#fffefefe"
                        android:textSize="15sp" />

                    <TextView
                        android:layout_marginTop="@dimen/dp_10"
                        android:id="@+id/tv_next_step_move"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_12"
                        android:layout_marginRight="@dimen/dp_12"
                        android:background="@drawable/shape_club_blue"
                        android:gravity="center"
                        android:onClick="@{v->listener.onClick(v)}"
                        android:paddingTop="@dimen/dp_12"
                        android:visibility="gone"
                        android:paddingBottom="@dimen/dp_12"
                        android:text="下一步"
                        android:textColor="#fffefefe"
                        android:textSize="15sp" />
                </LinearLayout>


            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

    </LinearLayout>

</layout>