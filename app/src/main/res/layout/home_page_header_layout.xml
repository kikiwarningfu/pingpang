<?xml version="1.0" encoding="utf-8"?>
<layout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  xmlns:app="http://schemas.android.com/apk/res-auto"
                  android:orientation="vertical"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content">


        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
        >

            <com.google.android.material.tabs.TabLayout
                    android:id="@+id/tabLayout"
                    android:layout_width="@dimen/dp0"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    app:tabIndicatorHeight="@dimen/dp2"
                    app:tabIndicatorColor="#FF2B39"
                    app:tabIndicatorFullWidth="false"
                    app:tabMode="scrollable"
                    app:tabUnboundedRipple="false"
                    app:tabSelectedTextColor="#FF414141"
                    app:tabTextColor="#FFB3B3B3"
            />

            <ImageView
                    android:id="@+id/image_more"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/gengduo_3"
                    android:paddingRight="@dimen/dp15"
                    android:paddingLeft="@dimen/dp10"
            />


        </LinearLayout>

        <com.youth.banner.Banner
                android:id="@+id/banner"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp200"
                app:indicator_width="@dimen/dp16"
                app:indicator_height="@dimen/dp4"
                app:indicator_drawable_selected="@drawable/banner_indicator_selected"
                app:indicator_drawable_unselected="@drawable/banner_indicator_unselected"
        />


        <androidx.viewpager.widget.ViewPager
                android:id="@+id/viewPager"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp50"/>

    </LinearLayout>

</layout>
