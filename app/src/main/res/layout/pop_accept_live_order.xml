<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent_20">

    <LinearLayout
        android:id="@+id/ll_out"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/dp_42"
        android:layout_marginRight="@dimen/dp_42"
        android:background="@drawable/shape_message_dialog"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_order_logo"
            android:layout_width="@dimen/dp_39"
            android:layout_height="@dimen/dp_39"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_19"
            android:layout_marginBottom="@dimen/dp_20"
            android:src="@drawable/img_accept_success" />

        <TextView
            android:id="@+id/tv_order_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_28"
            android:layout_marginRight="@dimen/dp_29"
            android:layout_marginBottom="@dimen/dp_28"
            android:lineSpacingExtra="@dimen/dp_5"
            android:text="您已成功接取此订单，请您按照约定时间
完成分拍摄，拍摄完成获得赏金"
            android:textColor="#ff333333"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv_submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/dp_19"
            android:background="@drawable/shape_accept_blue_corners"
            android:paddingLeft="@dimen/dp_60"
            android:paddingTop="@dimen/dp_10"
            android:paddingRight="@dimen/dp_60"
            android:paddingBottom="@dimen/dp_10"
            android:text="好的"
            android:textColor="#ffffffff"
            android:textSize="16sp" />
    </LinearLayout>

</LinearLayout>