<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="listener"
            type="android.view.View.OnClickListener" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">


        <RelativeLayout
            android:id="@+id/top_bar_relative"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:background="@color/white"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/iv_left_back"
                android:onClick="@{v->listener.onClick(v)}"
                android:layout_width="@dimen/dp_12"
                android:layout_height="@dimen/dp_21"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_12"
                android:src="@drawable/img_left_back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="选择参赛队员"
                android:textColor="#ff333333"
                android:textSize="@dimen/sp_19" />

            <TextView
                android:id="@+id/tv_submit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_12"
                android:onClick="@{v->listener.onClick(v)}"
                android:text="确定"
                android:textColor="#ff4795ed"
                android:textSize="15sp" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="#F6F6F6" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_club_members"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <heyong.intellectPinPang.widget.CharIndexView
                android:id="@+id/iv_main"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                app:charTextColor="#000000"
                app:indexTextColor="#ff00ff"
                app:indexTextSize="@dimen/sp_15" />
        </RelativeLayout>

    </LinearLayout>
</layout>