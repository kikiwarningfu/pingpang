<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
                name="listener"
                type="android.view.View.OnClickListener" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical"
            tools:context=".ui.homepage.activity.GameDetailActivity">

        <RelativeLayout
                android:id="@+id/top_bar_relative"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:background="@color/white">

            <ImageView
                    android:id="@+id/iv_finish"
                android:onClick="@{v->listener.onClick(v)}"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingLeft="@dimen/page_padding"
                    android:paddingRight="@dimen/page_padding"
                    android:src="@drawable/icon_left_back" />

            <TextView
                    android:id="@+id/tv_center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="50dp"
                    android:ellipsize="marquee"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="选择参赛人员"
                    android:textColor="#FF333333"
                    android:textSize="17sp" />

            <ImageView
                    android:id="@+id/iv_right_add"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:layout_toLeftOf="@+id/iv_right"
                    android:padding="@dimen/dp_13"
                    android:scaleType="center"
                    android:visibility="gone"
                    tools:src="@drawable/morentouxiang" />

            <ImageView
                    android:id="@+id/iv_right"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:padding="@dimen/dp_13"
                    android:scaleType="center"
                    android:visibility="gone"
                    tools:src="@drawable/morentouxiang" />

            <TextView
                    android:id="@+id/tv_right"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:gravity="center_vertical"
                    android:onClick="@{v->listener.onClick(v)}"
                    android:paddingLeft="@dimen/page_padding"
                    android:paddingRight="@dimen/page_padding"
                    android:text="确定"
                    android:textColor="#4795ED"
                    android:textSize="14sp" />

            <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:layout_alignParentBottom="true"
                    android:background="@color/divider"
                    android:visibility="gone" />

        </RelativeLayout>

        <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/color_f5" />

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_30"
                android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_left_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_12"
                    android:text="教练员"
                    android:textColor="#ff333333"
                    android:textSize="15sp" />

            <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginRight="@dimen/dp_12"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:orientation="horizontal">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/dp_14"
                        android:text="已选择"
                        android:textColor="#ff333333"
                        android:textSize="15sp" />

                <TextView
                    android:id="@+id/tv_already_select_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="#ff333333"
                    android:textSize="15sp" />
            </LinearLayout>

        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_coach"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_12"
                android:layout_marginTop="@dimen/dp_14"
                android:layout_marginRight="@dimen/dp_12" />
    </LinearLayout>
</layout>