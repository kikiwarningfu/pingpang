<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.mcxtzhang.swipemenulib.SwipeMenuLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:ios="true"
        app:leftSwipe="true"
        app:swipeEnable="true">

        <RelativeLayout
            android:id="@+id/rl_container"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_63"
            android:visibility="visible">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/iv_logo"
                android:layout_width="@dimen/dp_49"
                android:layout_height="@dimen/dp_49"
                android:layout_marginLeft="@dimen/dp_12"
                android:layout_marginTop="@dimen/dp_7"
                android:layout_marginBottom="@dimen/dp_7"
                android:src="@drawable/img_default_avatar" />

            <TextView
                android:id="@+id/tv_title"
                android:lines="1"
                android:ellipsize="end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_9"
                android:layout_marginTop="@dimen/dp_13"
                android:layout_toRightOf="@id/iv_logo"
                android:layout_marginRight="@dimen/dp_40"
                android:text="洪亮俱乐部洪亮俱乐部洪亮俱乐部洪亮俱乐部洪亮俱乐部洪亮俱乐部洪亮俱乐部洪亮俱乐部洪亮俱乐部"
                android:textColor="#ff333333"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/iv_logo"
                android:layout_marginLeft="@dimen/dp_9"
                android:layout_marginRight="@dimen/dp_40"
                android:layout_toRightOf="@id/iv_logo"
                android:ellipsize="end"
                android:lines="1"
                android:text="【张三】申请加入俱乐部申请加入俱乐部申请加入俱乐部申请加入俱乐部申请加入俱乐部"
                android:textColor="#ff999999"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_12"
                android:text="12:40"
                android:textColor="#ff999999"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_unread_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_time"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/dp_7"
                android:layout_marginRight="@dimen/dp_12"
                android:background="@drawable/shape_red_circle_corners"
                android:gravity="center"
                android:minWidth="@dimen/dp_18"
                android:minHeight="@dimen/dp_18"
                android:padding="@dimen/dp_2"
                android:text="11"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_10" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="@dimen/dp_9"
                android:layout_toRightOf="@id/iv_logo"
                android:background="#F6F6F6" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/ll_del"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/rl_zhiding"
                android:layout_width="@dimen/dp_73"
                android:layout_height="@dimen/dp_64"
                android:orientation="vertical"
                android:visibility="visible">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="center"
                    android:background="#EFB322"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/tv_cancel_zhiding"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dp_5"
                        android:text="取消置顶"
                        android:textColor="#FFFFFFFF"
                        android:textSize="@dimen/sp_15" />
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_delete"
                android:layout_width="@dimen/dp_82"
                android:layout_height="@dimen/dp_64"
                android:layout_marginBottom="@dimen/dp_1"
                android:orientation="vertical"
                android:visibility="visible">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="center"
                    android:background="#FFFF3E00"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dp_5"
                        android:text="删除"
                        android:textColor="#FFFFFFFF"
                        android:textSize="@dimen/sp_15" />
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>

    </com.mcxtzhang.swipemenulib.SwipeMenuLayout>
</layout>