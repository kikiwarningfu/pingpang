<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="listener"
            type="android.view.View.OnClickListener" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_f5"
        android:orientation="vertical"
        tools:context=".ui.mine.activity.live.OrderTackerSettingActivity">


        <heyong.handong.framework.widget.TopBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:centerText="支付" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="#F6F6F6" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_5"
            android:background="@color/white"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/pay_logo"
                android:src="@drawable/img_accept_fail"
                android:layout_width="@dimen/dp_39"
                android:layout_height="@dimen/dp_39"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dp_29"
                android:layout_marginBottom="@dimen/dp_28" />

            <TextView
                android:id="@+id/pay_text_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/dp_19"
                android:text="支付失败"
                android:textColor="#fff33e3e"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/pay_reason"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/dp_20"
                android:gravity="center_horizontal"
                android:text="您的订单支付失败，为了不影响您的体验请尽快支付"
                android:textColor="#fff33e3e"
                android:textSize="12sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_5"
                android:background="@color/color_f5" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_order_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_13"
                    android:layout_marginTop="@dimen/dp_13"
                    android:layout_marginBottom="@dimen/dp_14"
                    android:text="订单类型：赛事直播下单"
                    android:textColor="#ff333333"
                    android:textSize="13sp" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_0_5"
                    android:layout_marginLeft="@dimen/dp_14"
                    android:layout_marginRight="@dimen/dp_11"
                    android:background="#E5E5E5"/>
                <TextView
                    android:id="@+id/tv_order_no"
                    android:layout_marginTop="@dimen/dp_13"
                    android:layout_marginBottom="@dimen/dp_12"
                    android:layout_marginLeft="@dimen/dp_13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="订单编号：123456789edqwerwqeqweweqwewe"
                    android:textColor="#ff333333"
                    android:textSize="13sp"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_0_5"
                    android:layout_marginLeft="@dimen/dp_14"
                    android:layout_marginRight="@dimen/dp_11"
                    android:background="#E5E5E5"/>
                <TextView
                    android:id="@+id/tv_money"
                    android:layout_marginTop="@dimen/dp_13"
                    android:layout_marginBottom="@dimen/dp_12"
                    android:layout_marginLeft="@dimen/dp_13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="订单金额：¥ 50.00"
                    android:textColor="#ff333333"
                    android:textSize="13sp"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_0_5"
                    android:layout_marginLeft="@dimen/dp_14"
                    android:layout_marginRight="@dimen/dp_11"
                    android:background="#E5E5E5"/>
                <TextView
                    android:id="@+id/tv_xiadan_time"
                    android:layout_marginTop="@dimen/dp_13"
                    android:layout_marginBottom="@dimen/dp_12"
                    android:layout_marginLeft="@dimen/dp_13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="下单时间：2021-08-30"
                    android:textColor="#ff333333"
                    android:textSize="13sp"
                    />
            </LinearLayout>


        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="@dimen/dp_40"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_reply_pay"
                android:onClick="@{v->listener.onClick(v)}"
                android:paddingTop="@dimen/dp_13"
                android:paddingBottom="@dimen/dp_13"
                android:layout_marginLeft="@dimen/dp_50"
                android:layout_marginRight="@dimen/dp_50"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="重新支付"
                android:background="@drawable/shape_orange_corners_4"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="#ffffffff"
                android:textSize="15sp"
                />
            <TextView
                android:id="@+id/tv_see_order"
                android:layout_marginLeft="@dimen/dp_50"
                android:layout_marginRight="@dimen/dp_50"
                android:onClick="@{v->listener.onClick(v)}"
                android:layout_marginTop="@dimen/dp_15"
                android:paddingTop="@dimen/dp_13"
                android:paddingBottom="@dimen/dp_13"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="查看订单"
                android:background="@drawable/shape_gray_stroke_4"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="#666666"
                android:textSize="15sp"
                />
        </LinearLayout>

    </LinearLayout>
</layout>