<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="listener"
            type="android.view.View.OnClickListener" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_f5"
        android:orientation="vertical"
        tools:context=".ui.mine.activity.live.OrderTackerSettingActivity">


        <heyong.handong.framework.widget.TopBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:centerText="解除接单员身份" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="#F6F6F6" />

        <LinearLayout
            android:id="@+id/ll_container_apply"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="visible">

            <LinearLayout
                android:visibility="gone"
                android:id="@+id/ll_container_result"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_marginTop="@dimen/dp_16"
                    android:src="@drawable/img_explain_unbind"
                    android:layout_width="@dimen/dp_38"
                    android:layout_height="@dimen/dp_38" />
                <TextView
                    android:layout_marginTop="@dimen/dp_13"
                    android:layout_marginBottom="@dimen/dp_15"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="您已提交解除接单员身份，系统审核中"
                    android:textColor="#ff333333"
                    android:textSize="14sp"
                    />
                <TextView
                    android:gravity="center"
                    android:layout_marginBottom="@dimen/dp_60"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="您的申请已受理，我们将在1～3工作日内为您审核，请耐心等待"
                    android:textColor="#ff999999"
                    android:textSize="11sp"
                    />
            </LinearLayout>

            <LinearLayout

                android:id="@+id/ll_submit_explain"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@color/white"
                android:orientation="vertical"
                android:visibility="visible">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_13"
                    android:layout_marginTop="@dimen/dp_15"
                    android:text="解除原因"
                    android:textColor="#ff333333"
                    android:textSize="12sp" />

                <EditText
                    android:hint="为什么要解除接单员身份？"
                    android:id="@+id/et_explain"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_115"
                    android:padding="@dimen/dp_9"
                    android:gravity="top|left"
                    android:layout_marginLeft="@dimen/dp_12"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_12"
                    android:layout_marginBottom="@dimen/dp_20"
                    android:textSize="@dimen/sp_12"
                    android:background="@drawable/shape_jiedan_bg_setting">

                </EditText>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_44"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@color/white">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_12"
                    android:text="应退押金（元）"
                    android:textColor="#ff333333"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/tv_cash_pledge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp_12"
                    android:text="¥ 99"
                    android:textColor="#fff15131"
                    android:textSize="13sp" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/tv_submit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_15"
                android:layout_marginBottom="@dimen/dp_14"
                android:background="@drawable/shape_order_track_red_bg"
                android:gravity="center"
                android:onClick="@{v->listener.onClick(v)}"
                android:paddingTop="@dimen/dp_14"
                android:paddingBottom="@dimen/dp_14"
                android:text="提交"
                android:textColor="#ffffffff"
                android:textSize="16sp" />

        </LinearLayout>


    </LinearLayout>
</layout>