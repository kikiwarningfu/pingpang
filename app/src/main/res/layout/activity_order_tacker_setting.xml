<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="listener"
            type="android.view.View.OnClickListener" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical"
        tools:context=".ui.mine.activity.live.OrderTackerSettingActivity">


        <heyong.handong.framework.widget.TopBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:centerText="接单员设置" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="#F6F6F6" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <RelativeLayout
                android:id="@+id/rl_content"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_137"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_14"
                android:layout_marginRight="@dimen/dp_10"
                android:background="@drawable/shape_order_taker_bg">
                <ImageView
                    android:id="@+id/iv_logo"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_18"
                    android:src="@drawable/img_jiedan_zhanwei"
                    android:layout_width="@dimen/dp_65"
                    android:layout_height="@dimen/dp_65"/>

                <TextView
                    android:id="@+id/tv_nick_name"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_22"
                    android:layout_toRightOf="@id/iv_logo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="张三"
                    android:textColor="#ffffffff"
                    android:textSize="15sp"
                    />
                <TextView
                    android:id="@+id/tv_tel"
                    android:layout_toRightOf="@id/iv_logo"
                    android:layout_marginTop="@dimen/dp_26"
                    android:layout_marginLeft="@dimen/dp_13"
                    android:layout_below="@id/tv_nick_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="17863272939"
                    android:textColor="#ffffffff"
                    android:textSize="13sp"
                    />

                <ImageView
                    android:id="@+id/iv_jiedanren"
                    android:layout_marginTop="@dimen/dp_11"
                    android:layout_marginRight="@dimen/dp_28"
                    android:layout_alignParentRight="true"
                    android:layout_width="@dimen/dp_72"
                    android:layout_height="@dimen/dp_68"
                    android:src="@drawable/img_jiedanren"/>
                <View
                    android:layout_marginTop="@dimen/dp_9"
                    android:layout_below="@id/iv_jiedanren"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="#FFFFFF"/>

                <TextView
                    android:id="@+id/tv_cash_pledge"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginBottom="@dimen/dp_11"
                    android:layout_alignParentBottom="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="押金（元）：¥ 90"
                    android:textColor="#ffffffff"
                    android:textSize="13sp"
                    />
            </RelativeLayout>
            <TextView
                android:id="@+id/tv_explain"
                android:layout_marginTop="@dimen/dp_19"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/rl_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="解除接单员身份后返还押金"
                android:textColor="#ff999999"
                android:textSize="13sp"
                />

            <TextView
                android:layout_marginTop="@dimen/dp_9"
                android:layout_below="@id/tv_explain"
                android:id="@+id/tv_unbind_identify"
                android:onClick="@{v->listener.onClick(v)}"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginBottom="@dimen/dp_14"
                android:layout_marginRight="@dimen/dp_15"
                android:paddingTop="@dimen/dp_14"
                android:paddingBottom="@dimen/dp_14"
                android:gravity="center"
                android:background="@drawable/shape_order_tack_bg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="解除接单员身份"
                android:textColor="#ffffffff"
                android:textSize="16sp"
                />
        </RelativeLayout>


    </LinearLayout>
</layout>
