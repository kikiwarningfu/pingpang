<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
                name="listener"
                type="android.view.View.OnClickListener" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/gray_bg"
            android:orientation="vertical"
            tools:context=".ui.homepage.activity.CreateEventsActivity">


        <heyong.handong.framework.widget.TopBar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:centerText="赛事报名" />

        <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="#F6F6F6" />

        <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fillViewport="true">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_saishi_bg"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_160"
                        android:scaleType="centerCrop"
                        android:src="@drawable/icon_test_one" />

                <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_58"
                        android:background="#666666">

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/dp_12"
                            android:text="报名赛事"
                            android:textColor="#ffffffff"
                            android:textSize="22sp" />

                    <TextView
                        android:lines="2"
                        android:ellipsize="end"
                        android:layout_marginLeft="@dimen/dp_110"
                        android:id="@+id/tv_match_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="@dimen/dp_10"
                        android:layout_marginRight="@dimen/dp_12"
                        android:textColor="#ffffffff"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tv_saishi_free"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginRight="@dimen/dp_12"
                        android:layout_marginBottom="@dimen/dp_9"
                        android:textColor="#fffcd465"
                        android:textSize="14sp" />
                </RelativeLayout>

                <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dp_15">

                    <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_marginTop="@dimen/dp_15"
                            android:layout_marginRight="@dimen/dp_12"
                            android:orientation="horizontal">

                        <ImageView
                                android:layout_width="@dimen/dp_16"
                                android:layout_height="@dimen/dp_16"
                                android:layout_marginRight="@dimen/dp_5"
                                android:src="@drawable/img_gantanhao" />

                        <LinearLayout
                                android:id="@+id/ll_notes_registration"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:onClick="@{v->listener.onClick(v)}"
                                android:orientation="vertical">

                            <TextView
                                android:id="@+id/tv_sign_up_xuzhi"
                                android:onClick="@{v->listener.onClick(v)}"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="报名须知"
                                    android:textColor="#ff4795ed"
                                    android:textSize="14sp" />

                            <View
                                    android:layout_width="@dimen/dp_55"
                                    android:layout_height="@dimen/dp_1"
                                    android:layout_marginLeft="@dimen/dp_1"
                                    android:layout_marginTop="@dimen/dp_3"
                                    android:background="#4795ED" />
                        </LinearLayout>

                    </LinearLayout>
                </RelativeLayout>
<!--
-->
                <RelativeLayout
                    android:id="@+id/rl_individual_entry"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_93"
                    android:layout_marginLeft="@dimen/dp_12"
                    android:layout_marginRight="@dimen/dp_12"
                    android:background="@drawable/shape_club_red_8"

                    android:onClick="@{v->listener.onClick(v)}"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/tv_user_individual_entry"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_25"
                        android:layout_marginTop="@dimen/dp_24"
                        android:text="仅代表个人报名参赛"
                        android:textColor="#ffffffff"
                        android:textSize="18sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_user_individual_entry"
                        android:layout_marginLeft="@dimen/dp_25"
                        android:layout_marginTop="@dimen/dp_15"
                        android:text="（由个人直接向主办方提交报名）"
                        android:textColor="#ffffffff"
                        android:textSize="12sp" />

                    <ImageView
                        android:layout_width="@dimen/dp_16"
                        android:layout_height="@dimen/dp_28"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="@dimen/dp_33"
                        android:layout_marginRight="@dimen/dp_20"
                        android:src="@drawable/img_right_back_white" />
                </RelativeLayout>
<!--                        android:id="@+id/rl_personal_to_club"
-->
                <RelativeLayout
android:visibility="gone"
                        android:layout_marginTop="@dimen/dp_15"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_93"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/dp_12"
                        android:layout_marginRight="@dimen/dp_12"
                        android:background="@drawable/shape_club_blue_8"

                        android:onClick="@{v->listener.onClick(v)}"
                        android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_personal_to_club"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_25"
                        android:layout_marginTop="@dimen/dp_24"
                        android:text="运动员向俱乐部提交报名申请"
                        android:textColor="#ffffffff"
                        android:textSize="18sp" />

                    <TextView
                            android:layout_marginLeft="@dimen/dp_25"
                            android:layout_marginTop="@dimen/dp_15"
                            android:layout_below="@id/tv_personal_to_club"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="（个人先报名至俱乐部再由俱乐部向主办方报名）"
                            android:textColor="#ffffffff"
                            android:textSize="12sp" />
                    <ImageView
                            android:layout_marginRight="@dimen/dp_20"
                            android:layout_marginTop="@dimen/dp_33"
                            android:src="@drawable/img_right_back_white"
                            android:layout_alignParentRight="true"
                            android:layout_width="@dimen/dp_16"
                            android:layout_height="@dimen/dp_28"/>
                </RelativeLayout>

                <RelativeLayout
                        android:id="@+id/rl_club_manager_channel"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_93"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/dp_12"
                        android:layout_marginTop="@dimen/dp_15"
                        android:layout_marginRight="@dimen/dp_12"
                        android:background="@drawable/shape_club_big_purose_8"

                        android:onClick="@{v->listener.onClick(v)}"
                        android:orientation="vertical">

                    <TextView
                            android:id="@+id/tv_club_manager_channel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_25"
                            android:layout_marginTop="@dimen/dp_24"
                            android:text="俱乐部（管理人员）报名通道"
                            android:textColor="#ffffffff"
                            android:textSize="18sp" />

                    <TextView
                            android:layout_marginLeft="@dimen/dp_25"
                            android:layout_marginTop="@dimen/dp_15"
                            android:layout_below="@id/tv_club_manager_channel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="（俱乐部负责人/教练员向主办方提交报名）"
                            android:textColor="#ffffffff"
                            android:textSize="12sp" />
                    <ImageView
                            android:layout_marginRight="@dimen/dp_20"
                            android:layout_marginTop="@dimen/dp_33"
                            android:src="@drawable/img_right_back_white"
                            android:layout_alignParentRight="true"
                            android:layout_width="@dimen/dp_16"
                            android:layout_height="@dimen/dp_28"/>
                </RelativeLayout>

                <RelativeLayout
                        android:id="@+id/rl_referee_registration_channel"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_93"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/dp_12"
                        android:layout_marginTop="@dimen/dp_15"
                        android:layout_marginRight="@dimen/dp_12"
                        android:layout_marginBottom="@dimen/dp_22"
                        android:background="@drawable/shape_club_big_blue_8"
                        android:onClick="@{v->listener.onClick(v)}"
                        android:orientation="vertical">

                    <TextView
                            android:id="@+id/tv_referee_registration_channel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_25"
                            android:layout_marginTop="@dimen/dp_24"
                            android:text="裁判员报名通道（免报名费）"
                            android:textColor="#ffffffff"
                            android:textSize="18sp" />

                    <TextView
                            android:layout_marginLeft="@dimen/dp_25"
                            android:layout_marginTop="@dimen/dp_15"
                            android:layout_below="@id/tv_referee_registration_channel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="（申请成为本次比赛裁判员）"
                            android:textColor="#ffffffff"
                            android:textSize="12sp" />
                    <ImageView
                            android:layout_marginRight="@dimen/dp_20"
                            android:layout_marginTop="@dimen/dp_33"
                            android:src="@drawable/img_right_back_white"
                            android:layout_alignParentRight="true"
                            android:layout_width="@dimen/dp_16"
                            android:layout_height="@dimen/dp_28"/>
                </RelativeLayout>

            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

    </LinearLayout>
</layout>