<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent_20"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_212"
        android:layout_centerInParent="true"
        android:layout_marginLeft="@dimen/dp_27"
        android:layout_marginRight="@dimen/dp_27"
        android:background="@drawable/shape_write_corners_5"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20"
            android:gravity="center"
            android:text="是否换下本台裁判员？"
            android:textColor="#ff333333"
            android:textSize="18sp" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_logo"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_50"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginBottom="@dimen/dp_14"
            android:src="@drawable/img_default_avatar" />

        <TextView
            android:id="@+id/tv_table_num"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="5台裁判员：刘能"
            android:textColor="#ff666666"
            android:textSize="15sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_16"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_submit"
                android:background="@drawable/shape_club_blue"
                android:gravity="center"
                android:text="确定"
                android:textColor="#ffffffff"
                android:textSize="18sp"
                android:layout_marginLeft="@dimen/dp_30"
                android:layout_width="@dimen/dp_110"
                android:layout_height="@dimen/dp_40" />

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/tv_cancel"
                android:gravity="center"
                android:background="@drawable/shape_club_gray"
                android:text="取消"
                android:textColor="#ffffffff"
                android:textSize="18sp"
                android:layout_marginRight="@dimen/dp_30"
                android:layout_width="@dimen/dp_110"
                android:layout_height="@dimen/dp_40" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>