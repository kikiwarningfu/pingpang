<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="listener"
            type="android.view.View.OnClickListener" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:gravity="right"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="@dimen/dp_21"
                android:layout_height="@dimen/dp_21"
                android:layout_marginTop="@dimen/dp_14"
                android:layout_marginRight="@dimen/dp_12"
                android:onClick="@{v->listener.onClick(v)}"
                android:src="@drawable/icon_black_close"
                android:visibility="visible" />

        </LinearLayout>

        <ImageView
            android:layout_width="@dimen/dp_95"
            android:layout_height="@dimen/dp_27"
            android:layout_marginLeft="@dimen/dp_24"
            android:layout_marginTop="@dimen/dp_4"
            android:layout_marginBottom="@dimen/dp_12"
            android:src="@drawable/icon_login_logo" />

        <TextView
            android:id="@+id/tv_password_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_25"
            android:layout_marginBottom="@dimen/dp_13"
            android:text="找回密码"
            android:textColor="#ff333333"
            android:textSize="21sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_50"
            android:layout_marginTop="@dimen/dp_53"
            android:layout_marginRight="@dimen/dp_50"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/et_tel_number"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dp_20"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="手机号"
                    android:inputType="number"
                    android:maxLength="11"
                    android:textColor="#333333"
                    android:textColorHint="#B2B2B2"
                    android:textSize="@dimen/sp_15" />

                <ImageView
                    android:id="@+id/iv_tel_phone_clear"
                    android:layout_width="@dimen/dp_16"
                    android:layout_height="@dimen/dp_16"
                    android:layout_marginTop="@dimen/dp_6"
                    android:src="@drawable/img_clear_empty"
                    android:visibility="gone" />

                <heyong.handong.framework.widget.CountDownButton
                    android:id="@+id/btn_get_verify_code"
                    android:layout_width="@dimen/dp_90"
                    android:layout_height="@dimen/dp_32"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:background="@drawable/shape_solid_gray"
                    android:gravity="center"
                    android:onClick="@{v->listener.onClick(v)}"
                    android:text="获取验证码"
                    android:textColor="#cccccc"
                    android:textSize="@dimen/sp_15" />


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:layout_marginTop="@dimen/dp_8"
                android:background="@color/color_f5" />

            <TextView
                android:id="@+id/tv_tel_number_error"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_3"
                android:text="手机号不正确"
                android:textColor="#fff0180d"
                android:textSize="10sp"
                android:visibility="gone" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_15">

                <EditText
                    android:id="@+id/et_tel_code"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dp_60"
                    android:background="@null"
                    android:hint="验证码"
                    android:inputType="number"
                    android:maxLength="6"
                    android:paddingBottom="@dimen/dp_13"
                    android:textColor="#333333"
                    android:textColorHint="#B2B2B2"
                    android:textSize="@dimen/sp_15"></EditText>

                <ImageView
                    android:id="@+id/iv_tel_code_clear"
                    android:layout_width="@dimen/dp_16"
                    android:layout_height="@dimen/dp_16"
                    android:layout_alignBottom="@id/et_tel_code"
                    android:layout_alignParentRight="true"
                    android:layout_marginBottom="@dimen/dp_13"
                    android:src="@drawable/img_clear_empty"
                    android:visibility="gone" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0_5"
                android:layout_marginBottom="@dimen/dp_25"
                android:background="@color/color_f5" />

            <TextView
                android:id="@+id/tv_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/shape_club_blue"
                android:gravity="center"
                android:onClick="@{v->listener.onClick(v)}"
                android:paddingTop="@dimen/dp_14"
                android:paddingBottom="@dimen/dp_13"
                android:text="确定"
                android:textColor="#ffffffff"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>
</layout>
