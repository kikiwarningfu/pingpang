<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="listener"
            type="android.view.View.OnClickListener" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_f5"
        android:orientation="vertical"
        tools:context=".ui.homepage.activity.GameDetailActivity">

        <RelativeLayout
            android:id="@+id/top_bar_relative"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:background="@color/white">

            <ImageView
                android:id="@+id/iv_finish"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/page_padding"
                android:paddingRight="@dimen/page_padding"
                android:src="@drawable/icon_left_back"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:ellipsize="marquee"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:gravity="center"
                android:singleLine="true"
                android:text="单打比赛成绩"
                android:textColor="#FF333333"
                android:textSize="17sp" />

            <ImageView
                android:id="@+id/iv_right_add"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_toLeftOf="@+id/iv_right"
                android:padding="@dimen/dp_13"
                android:scaleType="center"
                android:visibility="gone"
                tools:src="@drawable/morentouxiang" />

            <ImageView
                android:id="@+id/iv_right"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:padding="@dimen/dp_13"
                android:scaleType="center"
                android:visibility="gone"
                tools:src="@drawable/morentouxiang" />

            <TextView
                android:id="@+id/tv_right"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/page_padding"
                android:paddingRight="@dimen/page_padding"
                android:text="申请修改比分"
                android:textColor="#4795ED"
                android:textSize="15sp"
                android:visibility="gone" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:layout_alignParentBottom="true"
                android:background="@color/divider"
                android:visibility="gone" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="@color/color_f5" />

        <androidx.core.widget.NestedScrollView
            android:fillViewport="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_165"
                        android:layout_marginBottom="@dimen/dp_20"
                        android:background="@drawable/img_sports_bg">

                        <LinearLayout
                            android:gravity="center"
                            android:layout_marginLeft="@dimen/dp_50"
                            android:layout_width="wrap_content"

                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <de.hdodenhof.circleimageview.CircleImageView
                                android:id="@+id/view_left_oval"
                                android:layout_width="@dimen/dp_50"
                                android:layout_height="@dimen/dp_50"
                                android:layout_marginTop="@dimen/dp_18"
                                android:src="@drawable/img_default_avatar" />

                            <TextView
                                android:id="@+id/tv_left_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/view_right_oval"
                                android:layout_alignLeft="@id/view_right_oval"
                                android:layout_alignParentRight="true"
                                android:layout_marginTop="@dimen/dp_17"
                                android:gravity="center"
                                android:maxEms="5"
                                android:ellipsize="end"
                                android:layout_gravity="center"
                                android:text=""
                                android:textColor="#ff333333"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/tv_left_club_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/tv_right_name"
                                android:layout_alignParentRight="true"
                                android:layout_gravity="center"
                                android:layout_marginTop="@dimen/dp_8"
                                android:text=""
                                android:textColor="#ff999999"
                                android:textSize="12sp"
                                android:visibility="visible" />
                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="@dimen/dp_48"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv_left_win_count"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="@dimen/dp_14"
                                android:text="0"
                                android:textColor="#ff333333"
                                android:textSize="40sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=":"
                                android:textColor="#ff333333"
                                android:textSize="40sp" />

                            <TextView
                                android:id="@+id/tv_right_win_count"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/dp_14"
                                android:text="0"
                                android:textColor="#ff333333"
                                android:textSize="40sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="@dimen/dp_50"
                            android:orientation="vertical">

                            <de.hdodenhof.circleimageview.CircleImageView
                                android:id="@+id/view_right_oval"
                                android:layout_width="@dimen/dp_50"

                                android:layout_height="@dimen/dp_50"
                                android:layout_marginTop="@dimen/dp_18"
                                android:src="@drawable/img_default_avatar" />

                            <TextView
                                android:id="@+id/tv_right_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/view_right_oval"
                                android:layout_alignLeft="@id/view_right_oval"
                                android:layout_alignParentRight="true"
                                android:maxEms="5"
                                android:ellipsize="end"
                                android:layout_gravity="center"
                                android:layout_marginTop="@dimen/dp_17"
                                android:gravity="center"
                                android:text=""
                                android:textColor="#ff333333"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/tv_right_club_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/tv_right_name"
                                android:layout_alignParentRight="true"
                                android:layout_gravity="center"
                                android:layout_marginTop="@dimen/dp_8"
                                android:text=""
                                android:textColor="#ff999999"
                                android:textSize="12sp"
                                android:visibility="visible" />
                        </LinearLayout>
                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_36"
                        android:layout_marginTop="@dimen/dp_145"
                        android:orientation="horizontal">
                        <LinearLayout

                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1">

                            <TextView
                                android:id="@+id/tv_left_pause"
                                android:onClick="@{v->listener.onClick(v)}"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:layout_marginLeft="@dimen/dp_12"
                                android:layout_weight="1"
                                android:background="#FFCD66"
                                android:gravity="center"
                                android:orientation="horizontal"
                                android:text="暂 停"
                                android:textColor="#FFFFFF"
                                android:textSize="@dimen/sp_16">

                            </TextView>

                            <View
                                android:layout_width="@dimen/dp_5"
                                android:layout_height="match_parent" />

                            <TextView
                                android:id="@+id/tv_left_waiver"
                                android:onClick="@{v->listener.onClick(v)}"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:layout_marginRight="@dimen/dp_4"
                                android:layout_weight="1"
                                android:background="@drawable/img_left_blue_rect"
                                android:gravity="center"
                                android:text="弃权"
                                android:textColor="@color/white"
                                android:textSize="@dimen/sp_16" />
                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1">


                            <TextView
                                android:id="@+id/tv_right_wavier"
                                android:onClick="@{v->listener.onClick(v)}"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:layout_marginLeft="@dimen/dp_4"
                                android:layout_weight="1"
                                android:background="@drawable/img_right_blue_rect"
                                android:gravity="center"
                                android:text="弃权"
                                android:textColor="@color/white"
                                android:textSize="@dimen/sp_16" />

                            <View
                                android:layout_width="@dimen/dp_5"
                                android:layout_height="match_parent" />

                            <TextView
                                android:id="@+id/tv_right_pause"
                                android:onClick="@{v->listener.onClick(v)}"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:layout_marginRight="@dimen/dp_12"
                                android:layout_weight="1"
                                android:background="#FFCD66"
                                android:gravity="center"
                                android:orientation="horizontal"
                                android:text="暂 停"
                                android:textColor="#FFFFFF"
                                android:textSize="@dimen/sp_16">

                            </TextView>
                        </LinearLayout>


                    </LinearLayout>
                </FrameLayout>


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_list"
                    android:layout_width="match_parent"
                    android:overScrollMode="never"
                    android:scrollbars="vertical"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_weight="1" />

                <!--上传图片相关-->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cl_pre_add_pic"
                    android:layout_width="match_parent"
                    android:layout_marginBottom="20dp"
                    android:background="#E5E5E5"
                    android:layout_marginLeft="27dp"
                    android:layout_marginRight="27dp"
                    android:onClick="@{v->listener.onClick(v)}"
                    android:layout_height="180dp">
                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/aiv_add_pic"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:src="@drawable/ic_add_pic_contest"/>
                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="点击上传比赛图片（选填）"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/aiv_add_pic"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:textSize="13sp"
                        android:textColor="#999999"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/aiv_pic_contest"
                    android:layout_width="match_parent"
                    android:layout_marginLeft="27dp"
                    android:layout_marginRight="27dp"
                    android:layout_height="180dp"
                    android:visibility="gone"/>
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/atv_reload_pic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="18.5dp"
                    android:layout_marginTop="11.5dp"
                    android:text="点击重新上传"
                    android:visibility="gone"
                    android:textSize="13sp"
                    android:onClick="@{v->listener.onClick(v)}"
                    android:textColor="#999999"
                    android:drawableLeft="@drawable/ic_reload"/>
                <TextView
                    android:id="@+id/tv_confirm_grade_end"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_40"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/dp_12"
                    android:layout_marginRight="@dimen/dp_12"
                    android:layout_marginBottom="@dimen/dp_20"
                    android:background="@drawable/shape_club_blue_3"
                    android:gravity="center"
                    android:onClick="@{v->listener.onClick(v)}"
                    android:text="结束比赛"
                    android:textColor="#ffffffff"
                    android:textSize="15sp" />

                <!--<LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_26"
                    android:layout_marginRight="@dimen/dp_26"
                    android:layout_marginBottom="@dimen/dp_20"
                    android:background="@color/color_f5"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="@dimen/dp_110"
                            android:layout_height="@dimen/dp_50"
                            android:scaleType="centerCrop"
                            android:src="@drawable/icon_test_one" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_20"
                            android:text="教练员签名"
                            android:textColor="#ff333333"
                            android:textSize="15sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_10"
                            android:text="（宏亮俱乐部）"
                            android:textColor="#ff999999"
                            android:textSize="10sp" />
                    </LinearLayout>

                    <View
                        android:layout_width="@dimen/dp_30"
                        android:layout_height="10dp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="@dimen/dp_110"
                            android:layout_height="@dimen/dp_50"
                            android:scaleType="centerCrop"
                            android:src="@drawable/icon_test_one" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_20"
                            android:text="裁判员签名"
                            android:textColor="#ff333333"
                            android:textSize="15sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_10"
                            android:text="（宏亮俱乐部）"
                            android:textColor="#ff999999"
                            android:textSize="10sp" />
                    </LinearLayout>

                    <View
                        android:layout_width="@dimen/dp_30"
                        android:layout_height="10dp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/dp_50"
                            android:scaleType="centerCrop"
                            android:src="@drawable/icon_test_one" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_20"
                            android:text="教练员签名"
                            android:textColor="#ff333333"
                            android:textSize="15sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_10"
                            android:text="（宏亮俱乐部）"
                            android:textColor="#ff999999"
                            android:textSize="10sp" />
                    </LinearLayout>
                </LinearLayout>-->
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </LinearLayout>
</layout>