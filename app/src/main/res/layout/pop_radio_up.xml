<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:background="@color/transparent_20">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="@dimen/dp_27"
            android:layout_marginRight="@dimen/dp_27"
            android:background="@drawable/shape_write_corners_5"
            android:orientation="vertical">

        <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_add_people"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_marginBottom="@dimen/dp_20"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_120">

        </androidx.recyclerview.widget.RecyclerView>
        <TextView
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="设置比赛时间"
                android:textColor="#ff666666"
                android:textSize="12sp"
                />
        <LinearLayout
                android:id="@+id/timepicker"
                android:layout_marginLeft="@dimen/dp_60"
                android:layout_width="@dimen/dp_200"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:orientation="horizontal">



            <com.bigkoo.pickerview.lib.WheelView
                    android:id="@+id/hour"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.1" />

            <com.bigkoo.pickerview.lib.WheelView
                    android:id="@+id/min"

                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.1" />


        </LinearLayout>
        <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="#F6F6F6" />

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_19"
                android:layout_marginBottom="@dimen/dp_20"
                android:orientation="horizontal">

            <TextView
                    android:id="@+id/btnSubmit"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_30"
                    android:layout_marginRight="@dimen/dp_20"
                    android:layout_weight="1.1"
                    android:background="@drawable/shape_club_blue"
                    android:gravity="center"
                    android:paddingTop="@dimen/dp_11"
                    android:paddingBottom="@dimen/dp_11"
                    android:text="确定"
                    android:textColor="#ffffffff"
                    android:textSize="18sp" />

            <View
                    android:id="@+id/view_divider"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp_40"
                    android:layout_weight="0.4"
                    android:visibility="visible" />

            <TextView
                    android:id="@+id/btnCancel"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_marginRight="@dimen/dp_30"
                    android:layout_weight="1.1"
                    android:background="@drawable/shape_club_gray"
                    android:gravity="center"
                    android:paddingTop="@dimen/dp_11"
                    android:paddingBottom="@dimen/dp_11"
                    android:text="取消"
                    android:textColor="#ffffffff"
                    android:textSize="18sp"
                    android:visibility="visible" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>