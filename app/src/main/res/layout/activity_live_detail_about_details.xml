<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="listener"
            type="android.view.View.OnClickListener" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_f5"
        android:orientation="vertical">

        <heyong.handong.framework.widget.TopBar
            android:id="@+id/top_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:centerText="订单详情" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="#F6F6F6" />

        <LinearLayout
            android:visibility="visible"
            android:id="@+id/ll_container_normal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_logo"
                android:layout_width="@dimen/dp_62"
                android:layout_height="@dimen/dp_69"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_marginBottom="@dimen/dp_19"
                android:src="@drawable/img_ruzhang_chenggong">

            </ImageView>

            <TextView
                android:id="@+id/tv_text_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/dp_14"
                android:text="订单已处理"
                android:textColor="#ff4795ed"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_explain_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_11"
                android:layout_marginRight="@dimen/dp_11"
                android:layout_marginBottom="@dimen/dp_14"
                android:lineSpacingExtra="@dimen/dp_3"
                android:text="根据审核结果，您的订单不存在违规行为，赏金会在1-3个工作日
发放到您的账户，请注意查收"
                android:textColor="#ff999999"
                android:textSize="12sp" />

            <LinearLayout
                android:id="@+id/ll_cancel_order"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_0_5"
                    android:background="#E6E6E6"/>
                <TextView
                    android:layout_marginTop="@dimen/dp_14"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginBottom="@dimen/dp_20"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="取消原因"
                    android:textColor="#ff333333"
                    android:textSize="14sp"
                    />
                <TextView
                    android:layout_marginBottom="@dimen/dp_20"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="接单员取消订单"
                    android:textColor="#ff666666"
                    android:textSize="13sp"
                    />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0_5"
                android:background="#E6E6E6" />

            <TextView
                android:id="@+id/tv_deal_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginBottom="@dimen/dp_15"
                android:text="处理时间：    2021-08-29   18:02:05"
                android:textColor="#ff666666"
                android:textSize="13sp" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_unusual_order"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_marginBottom="@dimen/dp_14"
                android:layout_marginTop="@dimen/dp_14"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="订单异常，系统审核中"
                android:textColor="#ff333333"
                android:textSize="15sp"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0_5"
                android:background="#E6E6E6"/>
            <TextView
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginBottom="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="您的订单可能存在以下问题："
                android:textColor="#ff666666"
                android:textSize="13sp"
                />
            <TextView
                android:layout_marginBottom="@dimen/dp_19"
                android:layout_marginLeft="@dimen/dp_11"
                android:id="@+id/tv_reason"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1、订单未正常完成（未在规定时间内完成直播）"
                android:textColor="#fff33e3e"
                android:textSize="13sp"
                />
            <View
                android:layout_marginBottom="@dimen/dp_15"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0_5"
                android:background="#E6E6E6"/>

            <TextView
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_9"
                android:layout_marginBottom="@dimen/dp_15"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="订单系统审核中，1-3个工作日处理完成，请耐心等待，如有
疑问请店家下方按钮，联系客服咨询"
                android:textColor="#ff999999"
                android:textSize="13sp"
                />
        </LinearLayout>
        <TextView
            android:id="@+id/tv_tel"
            android:onClick="@{v->listener.onClick(v)}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dp_30"
            android:background="@drawable/shape_order_track_blue"
            android:gravity="center"
            android:paddingLeft="@dimen/dp_89"
            android:paddingTop="@dimen/dp_12"
            android:paddingRight="@dimen/dp_90"
            android:paddingBottom="@dimen/dp_13"
            android:text="联系客服"
            android:textColor="#ffffffff"
            android:textSize="15sp" />
    </LinearLayout>
</layout>