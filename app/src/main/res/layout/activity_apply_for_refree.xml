<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="listener"
            type="android.view.View.OnClickListener" />
    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical"
        tools:context=".ui.homepage.activity.CreateEventsActivity">


        <heyong.handong.framework.widget.TopBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:centerText="裁判员详情" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="#F6F6F6" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/rl_referee_level"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:layout_marginLeft="@dimen/dp_17"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_17"
                android:background="@drawable/shape_entry_fee"
                android:onClick="@{v->listener.onClick(v)}">

                <TextView
                    android:id="@+id/tv_caipan_level"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="请选择裁判员等级"
                    android:textColor="#ff666666"
                    android:textSize="15sp" />

                <ImageView
                    android:layout_width="@dimen/dp_16"
                    android:layout_height="@dimen/dp_10"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp_14"
                    android:src="@drawable/img_black_down_arrow" />
            </RelativeLayout>

            <ImageView
                android:id="@+id/iv_upload"
                android:onClick="@{v->listener.onClick(v)}"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_140"
                android:layout_marginLeft="@dimen/dp_12"
                android:layout_marginTop="@dimen/dp_90"
                android:layout_marginRight="@dimen/dp_12"
                android:scaleType="centerCrop"
                android:src="@drawable/img_upload_referee_image" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_commit"
            android:onClick="@{v->listener.onClick(v)}"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_marginRight="@dimen/dp_12"
            android:layout_marginBottom="@dimen/dp_20"
            android:background="@drawable/shape_club_blue"
            android:gravity="center"
            android:text="提交"
            android:textColor="@color/white" />
    </LinearLayout>
</layout>