<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="listener"
            type="android.view.View.OnClickListener" />
    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_f5"
        android:orientation="vertical"
        tools:context=".ui.homepage.activity.CreateEventsActivity">


        <heyong.handong.framework.widget.TopBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:centerText="投诉" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="#F6F6F6" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/dp_5"
            android:background="@color/white">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_14"
                android:layout_marginTop="@dimen/dp_19"
                android:layout_marginBottom="@dimen/dp_25"
                android:text="您对此订单有什么疑问？"
                android:textColor="#ff333333"
                android:textSize="15sp" />

            <LinearLayout
                android:id="@+id/ll_buwanzheng"
                android:onClick="@{v->listener.onClick(v)}"
                android:layout_marginBottom="@dimen/dp_20"
                android:layout_marginLeft="@dimen/dp_13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_buwancheng"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/img_tousu_select"
                    android:layout_width="@dimen/dp_12"
                    android:layout_height="@dimen/dp_12"/>

                <TextView
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dp_14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="视频不完整"
                    android:textColor="#ff333333"
                    android:textSize="13sp"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_xuqiu"
                android:onClick="@{v->listener.onClick(v)}"
                android:layout_marginBottom="@dimen/dp_20"
                android:layout_marginLeft="@dimen/dp_13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_xuqiu"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/img_tousu_no_select"
                    android:layout_width="@dimen/dp_12"
                    android:layout_height="@dimen/dp_12"/>

                <TextView
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dp_14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="视频内容与下单需求不符"
                    android:textColor="#ff333333"
                    android:textSize="13sp"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_not_play"
                android:onClick="@{v->listener.onClick(v)}"
                android:layout_marginBottom="@dimen/dp_20"
                android:layout_marginLeft="@dimen/dp_13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_not_play"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/img_tousu_no_select"
                    android:layout_width="@dimen/dp_12"
                    android:layout_height="@dimen/dp_12"/>

                <TextView
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dp_14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="视频无法正常播放"
                    android:textColor="#ff333333"
                    android:textSize="13sp"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_qita"
                android:onClick="@{v->listener.onClick(v)}"

                android:layout_marginBottom="@dimen/dp_10"
                android:layout_marginLeft="@dimen/dp_13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_qita"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/img_tousu_no_select"
                    android:layout_width="@dimen/dp_12"
                    android:layout_height="@dimen/dp_12"/>

                <TextView
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dp_14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="其它"
                    android:textColor="#ff333333"
                    android:textSize="13sp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_120"
                android:background="@drawable/shape_compalin_bg"
                android:layout_marginLeft="@dimen/dp_39"
                android:layout_marginRight="@dimen/dp_35"
                android:layout_marginBottom="@dimen/dp_27"
                android:orientation="vertical">
                <EditText
                    android:id="@+id/et_text_hint"
                    android:background="@null"
                    android:paddingTop="@dimen/dp_12"
                    android:paddingBottom="@dimen/dp_12"
                    android:paddingLeft="@dimen/dp_14"
                    android:paddingRight="@dimen/dp_14"
                    android:hint="请输入您的理由"
                    android:textSize="@dimen/sp_12"
                    android:gravity="top|left"
                    android:textColorHint="#999999"
                    android:textColor="#333333"
                    android:textCursorDrawable="@drawable/my_et_cursor"

                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                </EditText>
            </LinearLayout>


        </LinearLayout>
        <TextView
            android:id="@+id/tv_submit"
            android:onClick="@{v->listener.onClick(v)}"
            android:background="@drawable/shape_order_track_red_bg"
            android:layout_marginTop="@dimen/dp_38"
            android:paddingTop="@dimen/dp_12"
            android:layout_gravity="center"
            android:paddingBottom="@dimen/dp_13"
            android:paddingLeft="@dimen/dp_100"
            android:paddingRight="@dimen/dp_99"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="确认投诉"
            android:textColor="#ffffffff"
            android:textSize="15sp"
            />

    </LinearLayout>
</layout>