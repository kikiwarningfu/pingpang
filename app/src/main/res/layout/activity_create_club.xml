<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="listener"
            type="android.view.View.OnClickListener" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/gray_bg"
        android:orientation="vertical"
        tools:context=".ui.homepage.activity.CreateEventsActivity">


        <heyong.handong.framework.widget.TopBar
            android:id="@+id/top_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:centerText="创建俱乐部" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="#F6F6F6" />

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_12"
                    android:layout_marginTop="@dimen/dp_19"
                    android:layout_marginBottom="@dimen/dp_17"
                    android:text="封面logo"
                    android:textColor="#ff333333"
                    android:textSize="15sp" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/iv_upload_cover_logo"
                    android:layout_width="@dimen/dp_76"
                    android:layout_height="@dimen/dp_76"
                    android:layout_marginLeft="@dimen/dp_11"
                    android:layout_marginBottom="@dimen/dp_14"
                    android:onClick="@{v->listener.onClick(v)}"
                    android:src="@drawable/img_upload_image" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="#F6F6F6" />

                <LinearLayout
                    android:layout_width="match_parent"

                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_12"
                    android:layout_marginTop="@dimen/dp_15"
                    android:layout_marginBottom="@dimen/dp_20"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="团队类型"
                        android:textColor="#ff333333"
                        android:textSize="15sp" />

                    <TextView
                        android:visibility="gone"
                        android:id="@+id/tv_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:text="自由团体无法创建比赛 最多成员10人"
                        android:textColor="#ff0000"
                        android:textSize="15sp" />
                </LinearLayout>


                <RelativeLayout
                    android:id="@+id/rl_team_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_12"
                    android:layout_marginRight="@dimen/dp_12"
                    android:onClick="@{v->listener.onClick(v)}">

                    <TextView
                        android:id="@+id/tv_team_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="每种类型俱乐部只能拥有一个，选定后不可更改"
                        android:textColor="#ffb2b2b2"
                        android:textSize="15sp" />

                    <ImageView
                        android:layout_width="@dimen/dp_10"
                        android:layout_height="@dimen/dp_16"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/icon_right_back_black" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_0_5"
                    android:layout_marginLeft="@dimen/dp_12"
                    android:layout_marginTop="@dimen/dp_15"
                    android:layout_marginRight="@dimen/dp_12"
                    android:layout_marginBottom="@dimen/dp_16"
                    android:background="#F6F6F6" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_12"
                    android:layout_marginBottom="@dimen/dp_20"
                    android:text="团队名称"
                    android:textColor="#ff333333"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/et_team_mingcheng"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_12"
                    android:layout_marginRight="@dimen/dp_12"
                    android:background="@null"
                    android:hint="请输入团队名称"
                    android:inputType="text"
                    android:maxLines="1"
                    android:textColor="@color/black"
                    android:textColorHint="#B3B3B3"
                    android:textSize="@dimen/sp_15" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_0_5"
                    android:layout_marginLeft="@dimen/dp_12"
                    android:layout_marginTop="@dimen/dp_15"
                    android:layout_marginRight="@dimen/dp_12"
                    android:layout_marginBottom="@dimen/dp_15"
                    android:background="#F6F6F6" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_12"
                    android:layout_marginBottom="@dimen/dp_20"
                    android:text="团队简称"
                    android:textColor="#ff333333"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/et_jiancheng"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_12"
                    android:layout_marginRight="@dimen/dp_12"
                    android:background="@null"
                    android:hint="请输入5个字以内的队伍简称"
                    android:inputType="text"
                    android:maxLength="5"
                    android:maxLines="1"
                    android:textColor="@color/black"
                    android:textColorHint="#B3B3B3"
                    android:textSize="@dimen/sp_15" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_0_5"
                    android:layout_marginLeft="@dimen/dp_12"
                    android:layout_marginTop="@dimen/dp_15"
                    android:layout_marginRight="@dimen/dp_12"
                    android:layout_marginBottom="@dimen/dp_15"
                    android:background="#F6F6F6" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_12"
                        android:layout_marginRight="@dimen/dp_7"
                        android:layout_marginBottom="@dimen/dp_20"
                        android:text="负责人"
                        android:textColor="#ff333333"
                        android:textSize="15sp" />

                </LinearLayout>


                <EditText
                    android:id="@+id/et_in_charge"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_12"
                    android:layout_marginRight="@dimen/dp_12"
                    android:background="@null"
                    android:hint="请输入负责人姓名"
                    android:inputType="text"
                    android:maxLines="1"
                    android:textColor="@color/black"
                    android:textColorHint="#B3B3B3"
                    android:textSize="@dimen/sp_15" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_0_5"
                    android:layout_marginLeft="@dimen/dp_12"
                    android:layout_marginTop="@dimen/dp_15"
                    android:layout_marginRight="@dimen/dp_12"
                    android:layout_marginBottom="@dimen/dp_15"
                    android:background="#F6F6F6" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_12"
                    android:layout_marginBottom="@dimen/dp_20"
                    android:text="联系方式"
                    android:textColor="#ff333333"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/et_tel_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_12"
                    android:layout_marginRight="@dimen/dp_12"
                    android:background="@null"
                    android:hint="请输入联系方式"
                    android:inputType="number"
                    android:maxLines="1"
                    android:textColor="@color/black"
                    android:textColorHint="#B3B3B3"
                    android:textSize="@dimen/sp_15" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_0_5"
                    android:layout_marginLeft="@dimen/dp_12"
                    android:layout_marginTop="@dimen/dp_15"
                    android:layout_marginRight="@dimen/dp_12"
                    android:layout_marginBottom="@dimen/dp_15"
                    android:background="#F6F6F6" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_12"
                    android:layout_marginBottom="@dimen/dp_20"
                    android:text="所在城市"
                    android:textColor="#ff333333"
                    android:textSize="15sp" />

                <RelativeLayout
                    android:id="@+id/rl_select_city"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_12"
                    android:layout_marginRight="@dimen/dp_12"
                    android:onClick="@{v->listener.onClick(v)}">

                    <TextView
                        android:id="@+id/tv_select_city"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="请选择"
                        android:textColor="#ffb2b2b2"
                        android:textSize="15sp" />

                    <ImageView
                        android:layout_width="@dimen/dp_10"
                        android:layout_height="@dimen/dp_16"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/icon_right_back_black" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_0_5"
                    android:layout_marginLeft="@dimen/dp_12"
                    android:layout_marginTop="@dimen/dp_15"
                    android:layout_marginRight="@dimen/dp_12"
                    android:layout_marginBottom="@dimen/dp_14"
                    android:background="#F6F6F6" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_12"
                    android:layout_marginBottom="@dimen/dp_20"
                    android:text="俱乐部照片"
                    android:textColor="#ff333333"
                    android:textSize="15sp" />

                <FrameLayout
                    android:id="@+id/fl_club_image"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_140"
                    android:layout_marginLeft="@dimen/dp_12"
                    android:layout_marginRight="@dimen/dp_12"
                    android:layout_marginBottom="@dimen/dp_30">

                    <RelativeLayout
                        android:id="@+id/rl_club_image"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_140"

                        android:background="@drawable/shape_create_club_add_image"
                        android:onClick="@{v->listener.onClick(v)}">

                        <ImageView
                            android:id="@+id/img_club_image"
                            android:layout_width="@dimen/dp_30"
                            android:layout_height="@dimen/dp_26"
                            android:layout_centerInParent="true"
                            android:src="@drawable/img_the_picture_icon" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/img_club_image"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="@dimen/dp_15"
                            android:text="点击上传"
                            android:textColor="#ffb2b2b2"
                            android:textSize="15sp" />
                    </RelativeLayout>

                    <ImageView
                        android:id="@+id/iv_club_image"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_140"
                        android:scaleType="centerCrop"
                        android:visibility="gone" />
                </FrameLayout>

                <LinearLayout
                    android:id="@+id/ll_club_zhengshu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_12"
                            android:layout_marginRight="@dimen/dp_7"
                            android:layout_marginBottom="@dimen/dp_20"
                            android:text="俱乐部资格证书"
                            android:textColor="#ff333333"
                            android:textSize="15sp" />
                    </LinearLayout>


                    <FrameLayout
                        android:id="@+id/fl_club_image_certificate"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_150"
                        android:layout_marginLeft="@dimen/dp_12"
                        android:layout_marginRight="@dimen/dp_12"

                        android:layout_marginBottom="@dimen/dp_15">

                        <RelativeLayout
                            android:id="@+id/rl_club_image_certificate"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_150"
                            android:background="@drawable/shape_create_club_add_image"
                            android:onClick="@{v->listener.onClick(v)}">

                            <ImageView
                                android:id="@+id/img_club_image_certificate"
                                android:layout_width="@dimen/dp_30"
                                android:layout_height="@dimen/dp_26"
                                android:layout_centerInParent="true"
                                android:src="@drawable/img_the_picture_icon" />

                            <TextView
                                android:id="@+id/tv_upload_certificate"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/img_club_image_certificate"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="@dimen/dp_14"
                                android:text="点击上传"
                                android:textColor="#ffb2b2b2"
                                android:textSize="15sp" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/tv_upload_certificate"
                                android:layout_marginTop="@dimen/dp_10"
                                android:gravity="center"
                                android:text="（自由团体可不用上传俱乐部资质证书）"
                                android:textColor="#ffb2b2b2"
                                android:textSize="10sp" />
                        </RelativeLayout>

                        <ImageView
                            android:id="@+id/iv_club_image_certificate"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_150"
                            android:scaleType="centerCrop"
                            android:visibility="gone" />
                    </FrameLayout>
                </LinearLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_0_5"
                    android:layout_marginBottom="@dimen/dp_15"
                    android:background="#F6F6F6" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_12"
                    android:layout_marginBottom="@dimen/dp_20"
                    android:text="球台数"
                    android:textColor="#ff333333"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/et_tables_num"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_12"
                    android:layout_marginRight="@dimen/dp_12"
                    android:background="@null"
                    android:hint="请填写"
                    android:inputType="number"
                    android:maxLines="1"
                    android:textColor="@color/black"
                    android:textColorHint="#B3B3B3"
                    android:textSize="@dimen/sp_15" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_0_5"
                    android:layout_marginLeft="@dimen/dp_12"
                    android:layout_marginTop="@dimen/dp_15"
                    android:layout_marginRight="@dimen/dp_12"
                    android:layout_marginBottom="@dimen/dp_15"
                    android:background="#F6F6F6" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_12"
                    android:layout_marginBottom="@dimen/dp_20"
                    android:text="详细地址"
                    android:textColor="#ff333333"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/et_detail_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_12"
                    android:layout_marginRight="@dimen/dp_12"
                    android:background="@null"
                    android:hint="请填写"
                    android:inputType="text"
                    android:maxLines="1"
                    android:textColor="@color/black"
                    android:textColorHint="#B3B3B3"
                    android:textSize="@dimen/sp_15" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_0_5"
                    android:layout_marginLeft="@dimen/dp_12"
                    android:layout_marginTop="@dimen/dp_15"
                    android:layout_marginRight="@dimen/dp_12"
                    android:layout_marginBottom="@dimen/dp_15"
                    android:background="#F6F6F6" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_12"
                    android:layout_marginBottom="@dimen/dp_20"
                    android:text="团队简介"
                    android:textColor="#ff333333"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/et_team_introduce"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_12"
                    android:layout_marginRight="@dimen/dp_12"
                    android:background="@null"
                    android:hint="请填写"
                    android:inputType="textMultiLine"
                    android:textColor="@color/black"
                    android:textColorHint="#B3B3B3"
                    android:textSize="@dimen/sp_15" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_0_5"
                    android:layout_marginLeft="@dimen/dp_12"
                    android:layout_marginTop="@dimen/dp_15"
                    android:layout_marginRight="@dimen/dp_12"
                    android:layout_marginBottom="@dimen/dp_40"
                    android:background="#F6F6F6" />

                <TextView
                    android:id="@+id/tv_submit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/dp_12"
                    android:layout_marginRight="@dimen/dp_12"
                    android:layout_marginBottom="@dimen/dp_40"
                    android:background="@drawable/shape_club_blue"
                    android:gravity="center"
                    android:onClick="@{v->listener.onClick(v)}"
                    android:paddingTop="@dimen/dp_14"
                    android:paddingBottom="@dimen/dp_13"
                    android:text="提交"
                    android:textColor="#ffffffff"
                    android:textSize="14sp" />
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </LinearLayout>
</layout>