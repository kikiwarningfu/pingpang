<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent_20">

    <LinearLayout
        android:id="@+id/ll_out"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/dp_42"
        android:layout_marginRight="@dimen/dp_42"
        android:background="@drawable/shape_message_dialog"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <ImageView
            android:layout_marginTop="@dimen/dp_19"
            android:layout_marginBottom="@dimen/dp_16"
            android:layout_gravity="center_horizontal"
            android:layout_width="@dimen/dp_47"
            android:layout_height="@dimen/dp_47"
            android:src="@drawable/chenggong"/>

        <TextView
            android:id="@+id/tv_bind_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/dp_26"
            android:gravity="center_horizontal"
            android:text="绑定成功"
            android:textColor="#ff333333"
            android:textSize="16sp" />
        <TextView
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:layout_marginBottom="@dimen/dp_24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="页面自动跳转中..."
            android:textColor="#ff999999"
            android:textSize="12sp"
            />
    </LinearLayout>

</LinearLayout>