<?xml version="1.0" encoding="utf-8"?>
<layout>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginBottom="@dimen/dp_25"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="visible">

        <TextView
                android:id="@+id/tv_position"
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"
                android:layout_marginLeft="@dimen/dp_12"
                android:layout_marginRight="@dimen/dp_20"
                android:background="#FF4795ED"
                android:gravity="center"
                android:text="1"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_12" />

        <LinearLayout
                android:id="@+id/ll_select_people"
                android:layout_width="0dp"
            android:layout_weight="1"
                android:layout_height="@dimen/dp_40"
                android:layout_gravity="center"
                android:background="@drawable/shape_red_corners_5"
                android:gravity="center">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dp_20"
                    android:text="选择参赛队员"
                    android:textColor="#fffefefe"
                    android:textSize="15sp" />

            <ImageView
                    android:layout_width="@dimen/dp_17"
                    android:layout_height="@dimen/dp_17"
                    android:src="@drawable/img_write_add" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center"
                android:layout_marginLeft="@dimen/dp_24"
                android:layout_marginRight="@dimen/dp_13"
                android:gravity="right"
                android:text="编辑"
                android:textColor="#ffeb2f2f"
                android:textSize="18sp" />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_responity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_22"
            android:layout_marginRight="@dimen/dp_22"
            android:layout_marginBottom="@dimen/dp_14" />

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_17"
            android:layout_marginBottom="@dimen/dp_15"
            android:orientation="horizontal">

        <View
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

        <ImageView
                android:id="@+id/iv_del"
                android:layout_width="@dimen/dp_15"
                android:layout_height="@dimen/dp_16"
                android:layout_marginRight="@dimen/dp_22"
                android:src="@drawable/img_trash_can" />
    </LinearLayout>

    <View
            android:id="@+id/view_divider"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_2"
            android:background="#FFCCCCCC" />

</LinearLayout>

</layout>