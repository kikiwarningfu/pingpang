<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_9"
            android:background="@color/color_f5" />

        <TextView
            android:id="@+id/tv_match_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_marginTop="@dimen/dp_13"
            android:layout_marginRight="@dimen/dp_23"
            android:layout_marginBottom="@dimen/dp_14"
            android:text="2021年“小亮杯”北京市大兴区荣华北路林肯公园乒乓公..."
            android:textColor="#ff333333"
            android:textSize="13sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0_5"
            android:background="#F4F4F4" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingRight="@dimen/dp_13">

            <ImageView
                android:id="@+id/iv_logo"
                android:layout_width="@dimen/dp_180"
                android:layout_height="@dimen/dp_102"
                android:layout_marginLeft="@dimen/dp_11"
                android:layout_marginTop="@dimen/dp_8"
                android:layout_marginBottom="@dimen/dp_9"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_launcher_background" />

            <LinearLayout
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:id="@+id/ll_left_container"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_7"
                    android:layout_marginTop="@dimen/dp_18"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:layout_toRightOf="@id/iv_logo"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_left_user_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/dp_10"
                        android:layout_marginBottom="@dimen/dp_10"
                        android:gravity="center"
                        android:text="苏察哈尔灿"
                        android:textColor="#ff333333"
                        android:textSize="11sp" />

                    <TextView
                        android:id="@+id/tv_left_club_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_left_user_name"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="洪亮俱乐部/一"
                        android:textColor="#ffcccccc"
                        android:textSize="10sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_vs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_8"
                    android:layout_marginTop="@dimen/dp_37"
                    android:layout_toRightOf="@id/ll_left_container"
                    android:text="VS"
                    android:textColor="#ff333333"
                    android:textSize="13sp" />

                <LinearLayout

                    android:id="@+id/ll_right_container"
                    android:layout_marginRight="@dimen/dp_10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_8"
                    android:layout_marginTop="@dimen/dp_18"
                    android:layout_toRightOf="@id/tv_vs"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_right_user_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/dp_10"
                        android:layout_marginBottom="@dimen/dp_10"
                        android:gravity="center"
                        android:text="苏察哈尔灿"
                        android:textColor="#ff333333"
                        android:textSize="11sp" />

                    <TextView
                        android:id="@+id/tv_right_club_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_right_user_name"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="洪亮俱乐部/一"
                        android:textColor="#ffcccccc"
                        android:textSize="10sp" />
                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/iv_logo"
                android:layout_marginLeft="@dimen/dp_21"
                android:layout_toRightOf="@id/iv_logo"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_table_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp_1"
                    android:text="3台"
                    android:textColor="#ff333333"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_17"
                    android:text="08:00"
                    android:textColor="#ff333333"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_order_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_24"
                    android:background="@drawable/shape_gray_solid_corners"
                    android:paddingLeft="@dimen/dp_12"
                    android:paddingTop="@dimen/dp_7"
                    android:paddingRight="@dimen/dp_12"
                    android:paddingBottom="@dimen/dp_7"
                    android:text="待开播"
                    android:textColor="#ffffffff"
                    android:textSize="10sp" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</layout>
