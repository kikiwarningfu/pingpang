<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="listener"
            type="android.view.View.OnClickListener" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/top_bar_relative"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:background="@color/white">

            <ImageView
                android:id="@+id/iv_finish"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:onClick="@{v->listener.onClick(v)}"
                android:paddingLeft="@dimen/page_padding"
                android:paddingRight="@dimen/page_padding"
                android:src="@drawable/icon_left_back" />

            <TextView
                android:id="@+id/tv_center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:ellipsize="marquee"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:gravity="center"
                android:singleLine="true"
                android:text="弃权"
                android:textColor="#FF333333"
                android:textSize="17sp" />

            <ImageView
                android:id="@+id/iv_right_add"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_toLeftOf="@+id/iv_right"
                android:padding="@dimen/dp_13"
                android:scaleType="center"
                android:visibility="gone"
                tools:src="@drawable/morentouxiang" />

            <ImageView
                android:id="@+id/iv_right"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:padding="@dimen/dp_13"
                android:scaleType="center"
                android:visibility="gone"
                tools:src="@drawable/morentouxiang" />


            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:layout_alignParentBottom="true"
                android:background="@color/divider"
                android:visibility="gone" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="@color/color_f5" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/rl_left_give_up"
                android:onClick="@{v->listener.onClick(v)}"
                android:background="@drawable/shape_solid_gray_0_5"
                android:layout_marginTop="@dimen/dp_35"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:layout_marginLeft="@dimen/dp_37"
                android:layout_marginRight="@dimen/dp_37">

                <TextView
                    android:id="@+id/tv_left_give_up"
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="“宏亮俱乐部/一”弃权"
                    android:textColor="#FF666666"
                    android:textSize="13sp"
                    />

                <ImageView
                    android:visibility="gone"
                    android:id="@+id/iv_left_give_up"
                    android:layout_marginRight="@dimen/dp_15"
                    android:layout_centerVertical="true"
                    android:src="@drawable/icon_login_selected"
                    android:layout_width="@dimen/dp_16"
                    android:layout_height="@dimen/dp_16"
                    android:layout_alignParentRight="true"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_right_give_up"
                android:onClick="@{v->listener.onClick(v)}"
                android:background="@drawable/shape_solid_gray_0_5"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:layout_marginLeft="@dimen/dp_37"
                android:layout_marginRight="@dimen/dp_37">

                <TextView
                    android:id="@+id/tv_right_give_up"
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="“宏亮俱乐部/一”弃权"
                    android:textColor="#FF666666"
                    android:textSize="13sp"
                    />

                <ImageView
                    android:id="@+id/iv_right_give_up"
                    android:visibility="gone"
                    android:layout_marginRight="@dimen/dp_15"
                    android:layout_centerVertical="true"
                    android:src="@drawable/icon_login_selected"
                    android:layout_width="@dimen/dp_16"
                    android:layout_height="@dimen/dp_16"
                    android:layout_alignParentRight="true"/>

            </RelativeLayout>

            <RelativeLayout
                android:onClick="@{v->listener.onClick(v)}"

                android:id="@+id/rl_double_give_up"
                android:background="@drawable/shape_solid_gray_0_5"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:layout_marginLeft="@dimen/dp_37"
                android:layout_marginRight="@dimen/dp_37">

                <TextView
                    android:id="@+id/tv_double_give_up"
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="双弃权"
                    android:textColor="#FF666666"
                    android:textSize="13sp"
                    />

                <ImageView
                    android:id="@+id/iv_double_give_up"
                    android:visibility="invisible"
                    android:layout_marginRight="@dimen/dp_15"
                    android:layout_centerVertical="true"
                    android:src="@drawable/icon_login_selected"
                    android:layout_width="@dimen/dp_16"
                    android:layout_height="@dimen/dp_16"
                    android:layout_alignParentRight="true"/>

            </RelativeLayout>
        </LinearLayout>
        <TextView
            android:id="@+id/tv_commit"
            android:layout_width="@dimen/dp_220"
            android:layout_height="@dimen/dp_40"
            android:layout_marginTop="@dimen/dp_81"
            android:layout_gravity="center"
            android:background="@drawable/shape_croci_corners_25"
            android:gravity="center"
            android:onClick="@{v->listener.onClick(v)}"
            android:text="确定"
            android:textColor="#ffffff"
            android:textSize="@dimen/sp_15" />
    </LinearLayout>
</layout>