<?xml version="1.0" encoding="utf-8"?>
<layout>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_16"
        android:layout_marginBottom="@dimen/dp_10"
        android:gravity="center"
        android:text="2020-09-01  09:30"
        android:textColor="#ff999999"
        android:textSize="12sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_marginRight="@dimen/dp_12"
        android:background="@drawable/shape_write_corners_5"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20"
            android:gravity="center"
            android:text="2020盐湖区乒乓球友谊赛"
            android:textColor="#ff333333"
            android:textSize="15sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_70"
            android:background="@color/white">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/iv_logo"
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                android:layout_marginLeft="@dimen/dp_12"
                android:layout_marginTop="@dimen/dp_15"
                android:src="@drawable/img_default_avatar" />

            <ImageView

                android:id="@+id/iv_sex"
                android:layout_width="@dimen/dp_15"
                android:layout_height="@dimen/dp_15"
                android:layout_alignBottom="@id/iv_logo"
                android:layout_marginLeft="@dimen/dp_45" />

            <TextView
                android:id="@+id/tv_nick_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_toRightOf="@id/iv_sex"
                android:text="放松心情"
                android:textColor="#ff333333"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/iv_logo"
                android:layout_marginLeft="@dimen/dp_72"
                android:text="吴彦祖"
                android:textColor="#ff666666"
                android:textSize="14sp" />


            <TextView
                android:id="@+id/tv_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_21"
                android:text="申请加入俱乐部"
                android:textColor="#ff333333"
                android:textSize="15sp" />
            <TextView
                android:id="@+id/tv_status"
                android:layout_marginRight="@dimen/dp_53"
                android:layout_marginTop="@dimen/dp_9"
                android:layout_below="@+id/tv_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="已同意"
                android:textColor="#ff4795ed"
                android:textSize="13sp"
                />
        </RelativeLayout>

        <RelativeLayout
            android:visibility="visible"
            android:id="@+id/rl_container"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginBottom="@dimen/dp_20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:clickable="true"
                android:id="@+id/ll_argee_with"
                android:layout_marginLeft="@dimen/dp_30"
                android:layout_width="@dimen/dp_110"
                android:layout_height="@dimen/dp_35"
                android:background="@drawable/selector_message_btn_show_agree"

                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/dp_18"
                    android:layout_height="@dimen/dp_12"
                    android:src="@drawable/img_agree_write" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_9"
                    android:text="同意"
                    android:textColor="#ffffffff"
                    android:textSize="15sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_refuse"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_30"
                android:layout_width="@dimen/dp_110"
                android:layout_height="@dimen/dp_35"
                android:background="@drawable/selector_message_btn_show_refuse"

                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/dp_18"
                    android:layout_height="@dimen/dp_12"
                    android:src="@drawable/img_disagree_write" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_9"
                    android:text="拒绝"
                    android:textColor="#ffffffff"
                    android:textSize="15sp" />
            </LinearLayout>
        </RelativeLayout>

    </LinearLayout>
</LinearLayout>


</layout>