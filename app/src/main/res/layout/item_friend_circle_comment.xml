<?xml version="1.0" encoding="utf-8"?>
<layout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_logo"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_marginTop="@dimen/dp_17"
            android:src="@drawable/img_default_avatar"
            android:layout_width="@dimen/dp_38"
            android:layout_height="@dimen/dp_38"/>

        <TextView
            android:id="@+id/tv_user_name"
            android:layout_marginTop="@dimen/dp_29"
            android:layout_marginLeft="@dimen/dp_11"
            android:layout_toRightOf="@id/iv_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="不许凶我"
            android:textColor="#ff666666"
            android:textSize="12sp"
            />
        <LinearLayout
            android:layout_marginTop="@dimen/dp_29"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_12"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/iv_dianzan"
                android:src="@drawable/img_circle_not_agree"
                android:layout_width="@dimen/dp_15"
                android:layout_height="@dimen/dp_17"/>
            <TextView
                android:id="@+id/tv_like_num"
                android:layout_marginLeft="@dimen/dp_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="#ff666666"
                android:textSize="12sp"
                />
        </LinearLayout>
        <TextView
            android:id="@+id/tv_content"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_below="@id/tv_user_name"
            android:layout_marginLeft="@dimen/dp_62"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="哇，好美，你是怎么做到的"
            android:layout_marginBottom="@dimen/dp_9"
            android:textColor="#ff333333"
            android:textSize="14sp"
            />

        <ImageView
            android:id="@+id/iv_picture"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_width="@dimen/dp_80"
            android:layout_height="@dimen/dp_80"
            android:layout_below="@id/tv_content"
            android:layout_marginLeft="@dimen/dp_57"
            android:layout_marginBottom="@dimen/dp_5"
            />
        <LinearLayout
            android:id="@+id/ll_content"
            android:layout_below="@id/iv_picture"
            android:background="@drawable/shape_comment_gray_corners_2"
            android:layout_marginRight="@dimen/dp_12"
            android:layout_marginLeft="@dimen/dp_57"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_31">
            <TextView
                android:id="@+id/tv_reply_num"
                android:layout_marginLeft="@dimen/dp_13"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="共3条回复 ＞"
                android:textColor="#ff3582c9"
                android:textSize="12sp"
                />
        </LinearLayout>
        <TextView
            android:id="@+id/tv_time"
            android:layout_marginTop="@dimen/dp_6"
            android:layout_marginLeft="@dimen/dp_57"
            android:layout_below="@id/ll_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1-16 00:36"
            android:textColor="#ff999999"
            android:textSize="12sp"
            />
        <View
            android:id="@+id/view_divider"
            android:layout_below="@id/tv_time"
            android:layout_marginTop="@dimen/dp_9"
            android:layout_marginRight="@dimen/dp_12"
            android:layout_marginLeft="@dimen/dp_57"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="#FF979797"/>
    </RelativeLayout>
</layout>