<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_f5"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@color/white"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_order_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_12"
                android:layout_marginTop="@dimen/dp_10"
                android:text="订单号：C01254638820"
                android:textColor="#ff999999"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/tv_game_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_order_no"
                android:layout_marginLeft="@dimen/dp_13"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginBottom="@dimen/dp_6"
                android:text="2020盐湖区乒乓球友谊赛"
                android:textColor="#ff333333"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/tv_up_order_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/dp_9"
                android:layout_marginRight="@dimen/dp_12"
                android:text="已完成"
                android:textColor="#ff999999"
                android:textSize="13sp" />

            <View
                android:id="@+id/view_divider"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0_5"
                android:layout_below="@id/tv_game_name"
                android:background="#E5E5E5" />

            <RelativeLayout
                android:id="@+id/rl_center"
                android:background="#ffffff"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/view_divider">
                <RelativeLayout
                    android:id="@+id/iv_logo"
                    android:layout_width="@dimen/dp_50"
                    android:layout_marginLeft="@dimen/dp_12"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:layout_height="@dimen/dp_50">

                    <ImageView
                        android:id="@+id/iv_load_logo"
                        android:layout_width="@dimen/dp_50"
                        android:layout_height="@dimen/dp_50"

                        android:src="@drawable/img_pingpang_ying" />
                    <TextView
                        android:id="@+id/tv_table_num"
                        android:layout_marginTop="@dimen/dp_9"
                        android:layout_centerHorizontal="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="111台"
                        android:textColor="#ffffffff"
                        android:textSize="15sp"
                        />
                </RelativeLayout>


                <LinearLayout
                    android:id="@+id/ll_left_container"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_21"
                    android:layout_toRightOf="@id/iv_logo"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/tv_left_user_name_two"
                        android:layout_width="wrap_content"
                        android:layout_marginBottom="@dimen/dp_4"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="洪亮乒乓/一"
                        android:textColor="#ff333333"
                        android:textSize="13sp" />
                    <TextView
                        android:id="@+id/tv_left_user_name_one"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="洪亮乒乓/一"
                        android:textColor="#ff333333"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/tv_left_club_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/dp_10"
                        android:gravity="center"
                        android:text="洪亮乒乓/一"
                        android:textColor="#ff999999"
                        android:textSize="10sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/iv_vs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:text="VS"
                    android:textColor="#ff333333"
                    android:textSize="15sp" />
                <TextView
                    android:id="@+id/tv_time"
                    android:layout_width="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/dp_12"
                    android:layout_height="wrap_content"
                    android:text="08 : 00"
                    android:textColor="#ff3f6ac3"
                    android:textSize="18sp"
                    />
                <LinearLayout
                    android:layout_marginRight="@dimen/dp_29"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_21"
                    android:layout_toLeftOf="@id/tv_time"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_right_user_name_two"
                        android:layout_width="wrap_content"
                        android:layout_marginBottom="@dimen/dp_4"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="洪亮乒乓/一"
                        android:textColor="#ff333333"
                        android:textSize="13sp" />
                    <TextView
                        android:id="@+id/tv_right_user_name_one"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="洪亮乒乓/一"
                        android:textColor="#ff333333"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/tv_right_club_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/dp_10"
                        android:gravity="center"
                        android:text="洪亮乒乓/一"
                        android:textColor="#ff999999"
                        android:textSize="10sp" />
                </LinearLayout>
            </RelativeLayout>
            <View
                android:id="@+id/view_divider_two"
                android:layout_below="@id/rl_center"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0_5"
                android:background="#E5E5E5"/>
            <RelativeLayout
                android:layout_below="@id/view_divider_two"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_35">
                <TextView
                    android:id="@+id/tv_day"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2021-08-23"
                    android:textColor="#ff333333"
                    android:textSize="12sp"
                    />
                <LinearLayout
                    android:layout_alignParentRight="true"

                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:id="@+id/ll_shangjin"
                        android:visibility="gone"
                        android:gravity="center_vertical"
                        android:layout_gravity="center_vertical"
                        android:layout_toLeftOf="@id/tv_order_detail"
                        android:layout_marginRight="@dimen/dp_21"

                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/tv_shangjin_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="赏金："
                            android:textColor="#ff333333"
                            android:textSize="12sp"
                            />
                        <TextView
                            android:id="@+id/tv_shangjin"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="40¥"
                            android:textColor="#E34749"
                            android:textSize="12sp"
                            />
                    </LinearLayout>
                    <TextView
                        android:id="@+id/tv_text_status"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_vertical"
                        android:layout_marginRight="@dimen/dp_21"
                        android:layout_toLeftOf="@id/tv_order_detail"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="赏金入账中"
                        android:textColor="#fff4be21"
                        android:textSize="12sp"
                        />
                    <TextView
                        android:visibility="gone"
                        android:id="@+id/tv_order_detail"
                        android:layout_marginTop="@dimen/dp_6"
                        android:background="@drawable/shape_red_stroke"
                        android:layout_marginRight="@dimen/dp_12"
                        android:layout_centerVertical="true"
                        android:paddingTop="@dimen/dp_5"
                        android:paddingBottom="@dimen/dp_5"
                        android:paddingLeft="@dimen/dp_10"
                        android:paddingRight="@dimen/dp_10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="订单详情"
                        android:textColor="#ffce2626"
                        android:textSize="13sp"
                        />
                </LinearLayout>


            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>

</layout>
