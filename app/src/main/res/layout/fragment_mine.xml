<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="listener"
            type="android.view.View.OnClickListener" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!--        <com.maotianxia.app.widget.StatusBarView-->
        <!--                android:layout_width="match_parent"-->
        <!--                android:layout_height="wrap_content" />-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/color_f5"
            android:orientation="vertical">

            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fillViewport="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_215">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/iv_bg_url"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/dp_140"
                                android:scaleType="centerCrop"
                                android:src="@drawable/img_mine_bg" />

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/dp_75"
                                android:background="@color/white">

                                <TextView
                                    android:id="@+id/tv_nick_name"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:lines="1"
                                    android:ellipsize="end"
                                    android:layout_marginRight="@dimen/dp_120"
                                    android:layout_marginLeft="@dimen/dp_134"
                                    android:layout_marginTop="@dimen/dp_16"
                                    android:text="放松心情放松心情放松心情放松心情"
                                    android:textColor="#ff333333"
                                    android:textSize="16sp" />

                                <TextView
                                    android:id="@+id/tv_jifen"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@id/tv_nick_name"
                                    android:layout_marginLeft="@dimen/dp_134"
                                    android:layout_marginTop="@dimen/dp_10"
                                    android:text="积分：0"
                                    android:textColor="#ff666666"
                                    android:textSize="14sp" />

                                <TextView
                                    android:id="@+id/tv_update_personal_data"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:layout_centerVertical="true"
                                    android:layout_marginRight="@dimen/dp_23"
                                    android:background="@drawable/shape_solid_stroke_gray_corners_5"
                                    android:onClick="@{v->listener.onClick(v)}"
                                    android:paddingLeft="@dimen/dp_8"
                                    android:paddingTop="@dimen/dp_8"
                                    android:paddingRight="@dimen/dp_8"
                                    android:paddingBottom="@dimen/dp_8"
                                    android:text="完善个人信息"
                                    android:textColor="#ff999999"
                                    android:textSize="14sp" />
                            </RelativeLayout>
                        </LinearLayout>

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:gravity="bottom">

                            <ImageView
                                android:layout_width="@dimen/dp_100"
                                android:layout_height="@dimen/dp_100"
                                android:layout_marginLeft="@dimen/dp_19"
                                android:layout_marginBottom="@dimen/dp_10"
                                android:src="@drawable/img_write_bg" />

                            <de.hdodenhof.circleimageview.CircleImageView
                                android:id="@+id/iv_my_logo"
                                android:layout_width="@dimen/dp_90"
                                android:layout_height="@dimen/dp_90"
                                android:layout_marginLeft="@dimen/dp_24"
                                android:layout_marginTop="@dimen/dp_5"
                                android:src="@drawable/img_default_avatar" />


                            <ImageView
                                android:id="@+id/iv_sex"
                                android:layout_width="@dimen/dp_20"
                                android:layout_height="@dimen/dp_20"
                                android:layout_marginLeft="@dimen/dp_102"
                                android:layout_marginTop="@dimen/dp_85"
                                android:src="@drawable/img_sex_man_blue" />

                        </RelativeLayout>

                    </FrameLayout>

                    <LinearLayout
                        android:id="@+id/ll_role"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginTop="@dimen/dp_13"
                        android:layout_marginBottom="@dimen/dp_19"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="@dimen/dp_26"
                            android:layout_height="@dimen/dp_21"
                            android:layout_marginLeft="@dimen/dp_18"
                            android:src="@drawable/img_diamond_icon" />

                        <TextView
                            android:id="@+id/tv_role"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_10"
                            android:text="国家一级裁判员"
                            android:textColor="#ff4795ed"
                            android:textSize="15sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_12"
                        android:layout_marginRight="@dimen/dp_12"
                        android:background="@drawable/shape_mine_write_corners_5"
                        android:orientation="horizontal"
                        android:paddingLeft="@dimen/dp_34"
                        android:paddingRight="@dimen/dp_34"
                        android:paddingBottom="@dimen/dp_29">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <LinearLayout
                                android:id="@+id/ll_my_event"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="@dimen/dp_24"
                                android:gravity="center_horizontal"
                                android:onClick="@{v->listener.onClick(v)}"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="@dimen/dp_21"
                                    android:layout_height="@dimen/dp_21"
                                    android:src="@drawable/img_my_event" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/dp_19"
                                    android:text="我的赛事"
                                    android:textColor="#ff333333"
                                    android:textSize="12sp" />
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/ll_my_grade"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="@dimen/dp_25"
                                android:gravity="center_horizontal"
                                android:onClick="@{v->listener.onClick(v)}"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="@dimen/dp_21"
                                    android:layout_height="@dimen/dp_21"
                                    android:src="@drawable/img_my_grade" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/dp_19"
                                    android:text="我的成绩"
                                    android:textColor="#ff333333"
                                    android:textSize="12sp" />
                            </LinearLayout>

                            <LinearLayout
                                android:visibility="gone"
                                android:id="@+id/ll_real_name_authentication"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="@dimen/dp_25"
                                android:gravity="center_horizontal"
                                android:onClick="@{v->listener.onClick(v)}"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="@dimen/dp_21"
                                    android:layout_height="@dimen/dp_21"
                                    android:src="@drawable/img_real_name_authentication" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/dp_19"
                                    android:text="实名认证"
                                    android:textColor="#ff333333"
                                    android:textSize="12sp" />
                            </LinearLayout>
                            <LinearLayout
                                android:visibility="gone"
                                android:id="@+id/ll_live"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="@dimen/dp_25"
                                android:gravity="center_horizontal"
                                android:onClick="@{v->listener.onClick(v)}"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="@dimen/dp_21"
                                    android:layout_height="@dimen/dp_21"
                                    android:src="@drawable/img_live" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/dp_19"
                                    android:text="我的直播"
                                    android:textColor="#ff333333"
                                    android:textSize="12sp" />
                            </LinearLayout>
                            <LinearLayout
                                android:id="@+id/ll_my_setting"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="@dimen/dp_24"
                                android:gravity="center_horizontal"
                                android:onClick="@{v->listener.onClick(v)}"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="@dimen/dp_21"
                                    android:layout_height="@dimen/dp_21"
                                    android:src="@drawable/img_my_setting" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/dp_19"
                                    android:text="设置"
                                    android:textColor="#ff333333"
                                    android:textSize="12sp" />
                            </LinearLayout>
                        </LinearLayout>

                        <View
                            android:layout_width="0dp"
                            android:layout_height="@dimen/dp_20"
                            android:layout_weight="1" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <LinearLayout
                                android:id="@+id/ll_my_club"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="@dimen/dp_24"
                                android:gravity="center_horizontal"
                                android:onClick="@{v->listener.onClick(v)}"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="@dimen/dp_21"
                                    android:layout_height="@dimen/dp_21"
                                    android:src="@drawable/img_my_club" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/dp_19"
                                    android:text="我的俱乐部"
                                    android:textColor="#ff333333"
                                    android:textSize="12sp" />
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/ll_my_refree"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="@dimen/dp_24"
                                android:gravity="center_horizontal"
                                android:onClick="@{v->listener.onClick(v)}"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="@dimen/dp_21"
                                    android:layout_height="@dimen/dp_21"
                                    android:src="@drawable/img_mine_refree" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/dp_19"
                                    android:text="裁判员"
                                    android:textColor="#ff333333"
                                    android:textSize="12sp" />
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/ll_my_connect_us"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="@dimen/dp_24"
                                android:gravity="center_horizontal"
                                android:onClick="@{v->listener.onClick(v)}"
                                android:orientation="vertical">


                                <ImageView
                                    android:layout_width="@dimen/dp_21"
                                    android:layout_height="@dimen/dp_21"
                                    android:src="@drawable/img_connect_us" />


                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/dp_19"
                                    android:text="联系我们"
                                    android:textColor="#ff333333"
                                    android:textSize="12sp" />
                            </LinearLayout>
                        </LinearLayout>

                        <View
                            android:layout_width="0dp"
                            android:layout_height="@dimen/dp_20"
                            android:layout_weight="1" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <LinearLayout
                                android:id="@+id/ll_mine_message"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="@dimen/dp_17"
                                android:gravity="center_horizontal"
                                android:onClick="@{v->listener.onClick(v)}"
                                android:orientation="vertical">

                                <RelativeLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content">

                                    <ImageView
                                        android:layout_width="@dimen/dp_21"
                                        android:layout_height="@dimen/dp_21"
                                        android:layout_marginLeft="@dimen/dp_3"
                                        android:layout_marginTop="@dimen/dp_7"
                                        android:src="@drawable/img_my_message_blue" />

                                    <TextView
                                        android:id="@+id/tv_count"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="@dimen/dp_15"
                                        android:background="@drawable/shape_red_circle_corners"
                                        android:gravity="center"
                                        android:minWidth="@dimen/dp_15"
                                        android:minHeight="@dimen/dp_15"
                                        android:text="99"
                                        android:textColor="@color/white"
                                        android:textSize="@dimen/sp_11" />
                                </RelativeLayout>


                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/dp_19"
                                    android:text="我的消息"
                                    android:textColor="#ff333333"
                                    android:textSize="12sp" />
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/ll_my_registration"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="@dimen/dp_24"
                                android:gravity="center_horizontal"
                                android:onClick="@{v->listener.onClick(v)}"
                                android:orientation="vertical">


                                <ImageView
                                    android:layout_width="@dimen/dp_21"
                                    android:layout_height="@dimen/dp_21"
                                    android:src="@drawable/img_my_registration" />


                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/dp_19"
                                    android:text="我的报名"
                                    android:textColor="#ff333333"
                                    android:textSize="12sp" />
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/ll_yanshi"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="@dimen/dp_24"
                                android:gravity="center_horizontal"
                                android:onClick="@{v->listener.onClick(v)}"
                                android:orientation="vertical">


                                <ImageView
                                    android:layout_width="@dimen/dp_21"
                                    android:layout_height="@dimen/dp_21"
                                    android:src="@drawable/img_yanshi" />


                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/dp_19"
                                    android:text="裁判员演示"
                                    android:textColor="#ff333333"
                                    android:textSize="12sp" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </androidx.core.widget.NestedScrollView>
        </LinearLayout>
    </LinearLayout>
</layout>