                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:onClick="@{v->listener.onClick(v)}"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="@dimen/dp_32"
                                android:layout_height="@dimen/dp_37"
                                android:src="@drawable/icon_home_page_search" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="@dimen/dp_13"
                                android:gravity="center"
                                android:text="搜索"
                                android:textColor="#ff333333"
                                android:textSize="12sp" />
                        </LinearLayout>


                        <LinearLayout
                            android:id="@+id/ll_ranking_list"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:onClick="@{v->listener.onClick(v)}"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="@dimen/dp_32"
                                android:layout_height="@dimen/dp_37"
                                android:src="@drawable/icon_ranking_list" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="@dimen/dp_13"
                                android:gravity="center"
                                android:text="排行榜"
                                android:textColor="#ff333333"
                                android:textSize="12sp" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:visibility="visible"
                        android:id="@+id/ll_live"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:onClick="@{v->listener.onClick(v)}"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="@dimen/dp_32"
                            android:layout_height="@dimen/dp_37"
                            android:src="@drawable/img_live" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/dp_13"
                            android:gravity="center"
                            android:text="直播"
                            android:textColor="#ff333333"
                            android:textSize="12sp" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_mygame"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:onClick="@{v->listener.onClick(v)}"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_12"
                    android:layout_marginTop="@dimen/dp_15"
                    android:layout_marginRight="@dimen/dp_12"
                    android:background="@color/white"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingTop="@dimen/dp_20"
                        android:paddingBottom="@dimen/dp_10">

                        <View
                            android:layout_width="@dimen/dp_3"
                            android:layout_height="@dimen/dp_17"
                            android:layout_marginLeft="@dimen/dp_10"
                            android:background="#FDD463" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_6"
                            android:text="我的比赛"
                            android:textColor="#ff333333"
                            android:textSize="18sp" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_0_5"
                        android:layout_marginBottom="@dimen/dp_15"
                        android:background="#F6F6F6" />

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_150"

                        android:layout_marginBottom="@dimen/dp_15">

                        <ImageView
                            android:id="@+id/iv_logo"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_150"
                            android:scaleType="centerCrop"
                            android:src="@drawable/icon_test_one" />

                        <TextView
                            android:id="@+id/tv_title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_10"
                            android:layout_marginTop="@dimen/dp_15"
                            android:layout_marginRight="@dimen/dp_9"
                            android:text="2020盐湖区乒乓球友谊赛暨小亮智乒app推广活动
启动"
                            android:textColor="#ffffffff"
                            android:textSize="15sp" />
                    </FrameLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dp_14"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="@dimen/dp_12"
                            android:layout_height="@dimen/dp_12"
                            android:layout_marginLeft="@dimen/dp_10"
                            android:src="@drawable/icon_sponsor" />

                        <TextView
                            android:id="@+id/tv_zhubanfang"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_10"
                            android:text="主办方：盐湖区体育事业发展中心"
                            android:textColor="#ff656565"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dp_14"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="@dimen/dp_12"
                            android:layout_height="@dimen/dp_12"
                            android:layout_marginLeft="@dimen/dp_10"
                            android:src="@drawable/icon_match_time" />

                        <TextView
                            android:id="@+id/tv_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_10"
                            android:text="比赛时间：2020-05-30"
                            android:textColor="#ff656565"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dp_14"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="@dimen/dp_12"
                            android:layout_height="@dimen/dp_12"
                            android:layout_marginLeft="@dimen/dp_10"
                            android:src="@drawable/icon_competition_site" />

                        <TextView
                            android:id="@+id/tv_address"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_10"
                            android:text="山西省，运城市，盐湖区，宏亮俱乐部"
                            android:textColor="#ff656565"
                            android:textSize="12sp" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_agent_game"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_12"
                    android:layout_marginTop="@dimen/dp_15"
                    android:layout_marginRight="@dimen/dp_12"
                    android:layout_marginBottom="@dimen/dp_15"
                    android:background="@color/white"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingTop="@dimen/dp_20"
                        android:paddingBottom="@dimen/dp_10">
                        <LinearLayout
                            android:layout_gravity="center_vertical"
                            android:gravity="center_vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <View
                                android:layout_width="@dimen/dp_3"
                                android:layout_height="@dimen/dp_17"
                                android:layout_marginLeft="@dimen/dp_10"
                                android:background="#FDD463" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/dp_6"
                                android:text="近期比赛"
                                android:textColor="#ff333333"
                                android:textSize="18sp" />


                        </LinearLayout>
                        <View
                            android:layout_width="0dp"
                            android:layout_height="@dimen/dp_1"
                            android:layout_weight="1"/>
                        <LinearLayout
                            android:layout_marginTop="@dimen/dp_5"
                            android:id="@+id/ll_recent_more"
                            android:onClick="@{v->listener.onClick(v)}"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:paddingBottom="@dimen/dp_10">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="更多"
                                android:textColor="#ff666666"
                                android:textSize="15sp" />

                            <ImageView
                                android:layout_width="@dimen/dp_7"
                                android:layout_height="@dimen/dp_13"
                                android:layout_marginLeft="@dimen/dp_10"
                                android:layout_marginRight="@dimen/dp_10"
                                android:src="@drawable/icon_right_back" />
                        </LinearLayout>

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_0_5"
                        android:layout_marginBottom="@dimen/dp_15"
                        android:background="#F6F6F6" />


                    <com.ms.banner.Banner
                        android:id="@+id/mine_banner"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_150"
                        android:layout_marginLeft="@dimen/dp_12"
                        android:layout_marginRight="@dimen/dp_12"
                        android:layout_marginBottom="@dimen/dp_15"
                        android:onClick="onClick" />

                    <TextView
                        android:id="@+id/tv_jinqi_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_marginBottom="@dimen/dp_10"
                        android:text="“小亮杯”乒乓球友谊赛"
                        android:textColor="#ff333333"
                        android:textSize="15sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dp_14"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="@dimen/dp_12"
                            android:layout_height="@dimen/dp_12"
                            android:layout_marginLeft="@dimen/dp_10"
                            android:src="@drawable/icon_sponsor" />

                        <TextView
                            android:id="@+id/tv_jinqi_zhubanfang"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_10"
                            android:text="主办方：盐湖区体育事业发展中心"
                            android:textColor="#ff656565"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dp_14"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="@dimen/dp_12"
                            android:layout_height="@dimen/dp_12"
                            android:layout_marginLeft="@dimen/dp_10"
                            android:src="@drawable/icon_match_time" />

                        <TextView
                            android:id="@+id/tv_jinqi_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_10"
                            android:text="比赛时间：2020-05-30"
                            android:textColor="#ff656565"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dp_14"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="@dimen/dp_12"
                            android:layout_height="@dimen/dp_12"
                            android:layout_marginLeft="@dimen/dp_10"
                            android:src="@drawable/icon_competition_site" />

                        <TextView
                            android:id="@+id/tv_jinqi_address"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_10"
                            android:text="山西省，运城市，盐湖区，宏亮俱乐部"
                            android:textColor="#ff656565"
                            android:textSize="12sp" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_10"
                    android:background="@color/white"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <LinearLayout
                        android:id="@+id/ll_saishi"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:onClick="@{v->listener.onClick(v)}"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="horizontal"
                            android:paddingTop="@dimen/dp_20"
                            android:paddingBottom="@dimen/dp_10">

                            <View
                                android:layout_width="@dimen/dp_3"
                                android:layout_height="@dimen/dp_17"
                                android:layout_marginLeft="@dimen/dp_10"
                                android:background="#FDD463" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/dp_6"
                                android:text="赛事新闻"
                                android:textColor="#ff333333"
                                android:textSize="18sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingTop="@dimen/dp_20"
                            android:paddingBottom="@dimen/dp_10">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="更多"
                                android:textColor="#ff666666"
                                android:textSize="15sp" />

                            <ImageView
                                android:layout_width="@dimen/dp_7"
                                android:layout_height="@dimen/dp_13"
                                android:layout_marginLeft="@dimen/dp_10"
                                android:layout_marginRight="@dimen/dp_10"
                                android:src="@drawable/icon_right_back" />
                        </LinearLayout>
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_0_5"
                        android:background="#F4F4F4" />

                    <com.scwang.smartrefresh.layout.SmartRefreshLayout
                        android:id="@+id/sw_fresh"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <androidx.recyclerview.widget.RecyclerView

                            android:id="@+id/mRecyclerView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/dp_35"
                            android:background="@color/white" />
                    </com.scwang.smartrefresh.layout.SmartRefreshLayout>

                </LinearLayout>

            </LinearLayout>


        </androidx.core.widget.NestedScrollView>


    </LinearLayout>

</layout>
