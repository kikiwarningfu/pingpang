<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        //关键点1
        <import type="heyong.intellectPinPang.bean.competition.NearFetureBean"/>
        //关键点2
        <variable
            name="peronInfo"
            type="NearFetureBean" />



        <variable
            name="listener"
            type="android.view.View.OnClickListener" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <LinearLayout
            android:layout_marginTop="@dimen/dp_20"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:orientation="horizontal"
            android:paddingTop="@dimen/dp_10"
            android:paddingBottom="@dimen/dp5">


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"

                android:layout_weight="1">

                <ImageView
                    android:layout_width="@dimen/dp_17"
                    android:layout_height="@dimen/dp_17"
                    android:layout_marginLeft="@dimen/dp_13"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginBottom="@dimen/dp_18"
                    android:src="@drawable/icon_location_homepage" />

                <TextView
                    android:id="@+id/tv_city"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/dp_12"
                    android:textColor="#ff333333"
                    android:textSize="14sp" />

            </LinearLayout>

            <TextView

                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:text="小亮智乒"
                android:textColor="#ff333333"
                android:textSize="19sp" />

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_qr_code"
                    android:onClick="@{v->listener.onClick(v)}"
                    android:visibility="visible"
                    android:layout_width="@dimen/dp_19"
                    android:layout_height="@dimen/dp_15"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:layout_marginRight="@dimen/dp_12"
                    android:src="@drawable/icon_qr_code" />
            </RelativeLayout>

        </LinearLayout>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/color_f5"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/rl_banner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="onClick">

                    <!--                    <FrameLayout-->
                    <!--                            android:layout_width="match_parent"-->
                    <!--                            android:layout_height="@dimen/dp_200">-->
                    <LinearLayout
                        android:id="@+id/ll_content"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_40"
                        android:background="#333333"
                        android:orientation="vertical"
                        android:visibility="gone">


                        <com.superluo.textbannerlibrary.TextBannerView
                            android:id="@+id/mMarqueeView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="#4286DB"
                            android:paddingLeft="@dimen/dp_10"
                            app:setTextColor="#fff" />

                        <ImageView
                            android:layout_width="@dimen/dp_12"
                            android:layout_height="@dimen/dp_21"
                            android:layout_gravity="center_vertical"
                            android:layout_marginRight="@dimen/dp_12"
                            android:src="@drawable/img_right_back_white"
                            android:visibility="gone">

                        </ImageView>
                    </LinearLayout>

                    <com.ms.banner.Banner
                        android:id="@+id/banner"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_200"
                        android:layout_below="@id/ll_content"
                        android:layout_marginLeft="@dimen/dp_12"
                        android:layout_marginTop="@dimen/dp_1"
                        android:layout_marginRight="@dimen/dp_12"
                        android:onClick="onClick" />


                    <!--                    </FrameLayout>-->


                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_12"
                    android:layout_marginRight="@dimen/dp_12"
                    android:background="@color/white"
                    android:orientation="horizontal"
                    android:paddingTop="@dimen/dp_34"
                    android:paddingBottom="@dimen/dp_15">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/ll_create_game"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:onClick="@{v->listener.onClick(v)}"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="@dimen/dp_32"
                                android:layout_height="@dimen/dp_37"
                                android:src="@drawable/icon_create_event" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="@dimen/dp_13"
                                android:gravity="center"
                                android:text="创建比赛"
                                android:textColor="#ff333333"
                                android:textSize="12sp" />
                        </LinearLayout>


                        <LinearLayout
                            android:id="@+id/ll_create_club"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:onClick="@{v->listener.onClick(v)}"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="@dimen/dp_32"
                                android:layout_height="@dimen/dp_37"
                                android:src="@drawable/icon_create_event" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="@dimen/dp_13"
                                android:gravity="center"
                                android:text="创建俱乐部"
                                android:textColor="#ff333333"
                                android:textSize="12sp" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:orientation="horizontal">

                        <LinearLayout
