<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="listener"
            type="android.view.View.OnClickListener" />
    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"

        android:orientation="vertical"
        tools:context=".ui.homepage.activity.CreateEventsActivity">


        <heyong.handong.framework.widget.TopBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:centerText="确认比赛成绩" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="#F6F6F6" />

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_15"
                    android:layout_marginBottom="@dimen/dp_24"
                    android:gravity="center"
                    android:textColor="#ff666666"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_32"
                    android:layout_marginRight="@dimen/dp_26"
                    android:layout_marginBottom="@dimen/dp_20"

                    android:textColor="#ff333333"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp_20"
                    android:gravity="center"
                    android:textColor="#ff333333"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <!--第一个-->
                    <LinearLayout
                        android:id="@+id/ll_one_content"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">


                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/dp_165"
                                android:layout_marginBottom="@dimen/dp_20"
                                android:background="@drawable/img_sports_bg">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/dp_50"

                                    android:gravity="center"
                                    android:orientation="vertical">

                                    <de.hdodenhof.circleimageview.CircleImageView
                                        android:id="@+id/view_left_oval"
                                        android:layout_width="@dimen/dp_50"

                                        android:layout_height="@dimen/dp_50"
                                        android:layout_marginTop="@dimen/dp_18"
                                        android:src="@drawable/img_default_avatar" />

                                    <TextView
                                        android:id="@+id/tv_left_name"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_below="@id/view_right_oval"
                                        android:layout_alignLeft="@id/view_right_oval"
                                        android:layout_alignParentRight="true"
                                        android:layout_marginTop="@dimen/dp_17"
                                        android:text=""
                                        android:textColor="#ff333333"
                                        android:textSize="14sp" />

                                    <TextView
                                        android:id="@+id/tv_one_content_left_club_name"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_below="@id/tv_right_name"
                                        android:layout_alignParentRight="true"
                                        android:layout_gravity="center"
                                        android:layout_marginTop="@dimen/dp_8"
                                        android:text=""
                                        android:textColor="#ff999999"
                                        android:textSize="12sp"
                                        android:visibility="visible" />
                                </LinearLayout>


                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerHorizontal="true"
                                    android:layout_marginTop="@dimen/dp_48"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:id="@+id/tv_one_content_left_win_count"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginRight="@dimen/dp_14"
                                        android:text="0"
                                        android:textColor="#ff333333"
                                        android:textSize="40sp" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text=":"
                                        android:textColor="#ff333333"
                                        android:textSize="40sp" />

                                    <TextView
                                        android:id="@+id/tv_one_content_right_win_count"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="@dimen/dp_14"
                                        android:text="0"
                                        android:textColor="#ff333333"
                                        android:textSize="40sp" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:layout_marginRight="@dimen/dp_50"
                                    android:orientation="vertical">

                                    <de.hdodenhof.circleimageview.CircleImageView
                                        android:id="@+id/view_right_oval"
                                        android:layout_width="@dimen/dp_50"

                                        android:layout_height="@dimen/dp_50"
                                        android:layout_marginTop="@dimen/dp_18"
                                        android:src="@drawable/img_default_avatar" />

                                    <TextView
                                        android:id="@+id/tv_right_name"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_below="@id/view_right_oval"
                                        android:layout_alignLeft="@id/view_right_oval"
                                        android:layout_alignParentRight="true"
                                        android:layout_marginLeft="@dimen/dp_5"
                                        android:layout_marginTop="@dimen/dp_17"
                                        android:text=""
                                        android:textColor="#ff333333"
                                        android:textSize="14sp" />

                                    <TextView
                                        android:id="@+id/tv_one_content_right_club_name"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_below="@id/tv_right_name"
                                        android:layout_alignParentRight="true"
                                        android:layout_gravity="center"
                                        android:layout_marginTop="@dimen/dp_8"
                                        android:text=""
                                        android:textColor="#ff999999"
                                        android:textSize="12sp"
                                        android:visibility="visible" />
                                </LinearLayout>

                            </RelativeLayout>


                        </FrameLayout>

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1">


                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/rv_one_content_list"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="@dimen/dp_30"
                                android:layout_weight="1" />

                            <ImageView
                                android:id="@+id/iv_one_content_zhang"
                                android:layout_width="@dimen/dp_85"
                                android:layout_height="@dimen/dp_85"
                                android:visibility="gone"
                                android:layout_gravity="center_horizontal|bottom"
                                android:layout_marginBottom="@dimen/dp_40"
                                android:src="@drawable/img_zhuanpan_zhuo" />
                        </FrameLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_26"
                            android:layout_marginRight="@dimen/dp_26"
                            android:layout_marginBottom="@dimen/dp_20"
                            android:paddingBottom="@dimen/dp_20"
                            android:background="@color/color_f5"
                            android:orientation="horizontal"
                            android:visibility="gone">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="vertical">

                                <ImageView
                                    android:id="@+id/iv_sign_one"
                                    android:layout_width="@dimen/dp_110"
                                    android:layout_height="@dimen/dp_50"
                                    android:scaleType="centerCrop" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/dp_20"
                                    android:text="运动员签名"
                                    android:textColor="#ff333333"
                                    android:textSize="15sp" />

                                <TextView
                                    android:id="@+id/tv_left_club_name_two"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/dp_10"
                                    android:text="（宏亮俱乐部）"
                                    android:textColor="#ff999999"
                                    android:textSize="10sp" />
                            </LinearLayout>

                            <View
                                android:layout_width="@dimen/dp_30"
                                android:layout_height="10dp" />

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="vertical">

                                <ImageView
                                    android:id="@+id/iv_sign_two"
                                    android:layout_width="@dimen/dp_110"
                                    android:layout_height="@dimen/dp_50"
                                    android:scaleType="centerCrop" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/dp_20"
                                    android:text="裁判员签名"
                                    android:textColor="#ff333333"
                                    android:textSize="15sp" />

                                <TextView
                                    android:visibility="invisible"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/dp_10"
                                    android:text="（宏亮俱乐部）"
                                    android:textColor="#ff999999"
                                    android:textSize="10sp" />
                            </LinearLayout>

                            <View
                                android:layout_width="@dimen/dp_30"
                                android:layout_height="10dp" />

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="vertical">

                                <ImageView
                                    android:id="@+id/iv_sign_three"
                                    android:layout_width="@dimen/dp_110"
                                    android:layout_height="@dimen/dp_50"
                                    android:scaleType="centerCrop" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/dp_20"
                                    android:text="运动员签名"
                                    android:textColor="#ff333333"
                                    android:textSize="15sp" />

                                <TextView
                                    android:id="@+id/tv_right_club_name_two"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/dp_10"
                                    android:text="（宏亮俱乐部）"
                                    android:textColor="#ff999999"
                                    android:textSize="10sp" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                    <!--  第二个-->
                    <LinearLayout
                        android:id="@+id/ll_two_content"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">


                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/dp_255"
                                android:layout_marginBottom="@dimen/dp_20"
                                android:background="@drawable/img_sports_bg">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center_horizontal"
                                    android:orientation="horizontal">

                                    <LinearLayout
                                        android:layout_width="@dimen/dp_120"
                                        android:layout_height="@dimen/dp_180"
                                        android:layout_marginTop="@dimen/dp_16"
                                        android:layout_marginRight="@dimen/dp_15"
                                        android:background="@drawable/shape_double_score_corners"
                                        android:orientation="vertical">

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="0dp"
                                            android:layout_weight="1" />

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:gravity="center_horizontal"
                                            android:orientation="vertical">

                                            <de.hdodenhof.circleimageview.CircleImageView
                                                android:id="@+id/iv_left1_logo"
                                                android:layout_width="@dimen/dp_40"
                                                android:layout_height="@dimen/dp_40"
                                                android:src="@drawable/img_default_avatar" />

                                            <TextView
                                                android:id="@+id/tv_left1_name"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_marginTop="@dimen/dp_9"
                                                android:text="彭于晏123123"
                                                android:textColor="#ff333333"
                                                android:textSize="12sp" />

                                            <de.hdodenhof.circleimageview.CircleImageView
                                                android:id="@+id/iv_left2_logo"
                                                android:layout_width="@dimen/dp_40"
                                                android:layout_height="@dimen/dp_40"
                                                android:layout_marginTop="@dimen/dp_23"
                                                android:src="@drawable/img_default_avatar" />

                                            <TextView
                                                android:id="@+id/tv_left2_name"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_marginTop="@dimen/dp_9"
                                                android:text="彭于晏123123"
                                                android:textColor="#ff333333"
                                                android:textSize="12sp" />
                                        </LinearLayout>

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="0dp"
                                            android:layout_weight="1" />
                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:orientation="horizontal">

                                        <TextView
                                            android:id="@+id/tv_left_win_count"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginRight="@dimen/dp_15"
                                            android:text="0"
                                            android:textColor="#ff333333"
                                            android:textSize="40sp" />

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text=":"
                                            android:textColor="#ff333333"
                                            android:textSize="40sp" />

                                        <TextView
                                            android:id="@+id/tv_right_win_count"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginLeft="@dimen/dp_15"
                                            android:text="0"
                                            android:textColor="#ff333333"
                                            android:textSize="40sp" />
                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="@dimen/dp_120"
                                        android:layout_height="@dimen/dp_180"
                                        android:layout_marginLeft="@dimen/dp_15"
                                        android:layout_marginTop="@dimen/dp_16"
                                        android:background="@drawable/shape_double_score_corners"
                                        android:orientation="vertical">

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="0dp"
                                            android:layout_weight="1" />

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:gravity="center_horizontal"
                                            android:orientation="vertical">

                                            <de.hdodenhof.circleimageview.CircleImageView
                                                android:id="@+id/iv_right1_logo"
                                                android:layout_width="@dimen/dp_40"
                                                android:layout_height="@dimen/dp_40"
                                                android:src="@drawable/img_default_avatar" />

                                            <TextView
                                                android:id="@+id/tv_right1_name"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_marginTop="@dimen/dp_9"
                                                android:text="彭于晏123123"
                                                android:textColor="#ff333333"
                                                android:textSize="12sp" />

                                            <de.hdodenhof.circleimageview.CircleImageView
                                                android:id="@+id/iv_right2_logo"
                                                android:layout_width="@dimen/dp_40"
                                                android:layout_height="@dimen/dp_40"
                                                android:layout_marginTop="@dimen/dp_23"
                                                android:src="@drawable/img_default_avatar" />

                                            <TextView
                                                android:id="@+id/tv_right2_name"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_marginTop="@dimen/dp_9"
                                                android:text="彭于晏123123"
                                                android:textColor="#ff333333"
                                                android:textSize="12sp" />
                                        </LinearLayout>

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="0dp"
                                            android:layout_weight="1" />
                                    </LinearLayout>
                                </LinearLayout>


                            </RelativeLayout>


                        </FrameLayout>

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1">


                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/rv_list"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginBottom="@dimen/dp_70"
                                android:layout_weight="1" />


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="bottom"
                                android:layout_marginLeft="@dimen/dp_26"
                                android:layout_marginRight="@dimen/dp_26"
                                android:layout_marginBottom="@dimen/dp_20"
                                android:background="@color/color_f5"
                                android:orientation="horizontal"
                                android:visibility="visible">

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:id="@+id/iv_left_one"
                                        android:layout_width="@dimen/dp_110"
                                        android:layout_height="@dimen/dp_50"
                                        android:scaleType="centerCrop" />


                                </LinearLayout>

                                <View
                                    android:layout_width="@dimen/dp_30"
                                    android:layout_height="10dp" />


                                <View
                                    android:layout_width="@dimen/dp_30"
                                    android:layout_height="10dp" />

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:id="@+id/iv_right_one"
                                        android:layout_width="wrap_content"
                                        android:layout_height="@dimen/dp_50"
                                        android:scaleType="centerCrop" />


                                </LinearLayout>
                            </LinearLayout>

                            <ImageView
                                android:id="@+id/iv_zhang"
                                android:layout_width="@dimen/dp_85"
                                android:layout_height="@dimen/dp_85"
                                android:layout_gravity="center_horizontal|bottom"
                                android:layout_marginBottom="@dimen/dp_10"
                                android:scaleType="centerCrop"
                                android:src="@drawable/img_default_avatar" />
                        </FrameLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_26"
                            android:layout_marginRight="@dimen/dp_26"
                            android:layout_marginBottom="@dimen/dp_20"
                            android:background="@color/color_f5"
                            android:orientation="horizontal"
                            android:visibility="visible">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="vertical">

                                <ImageView
                                    android:id="@+id/iv_left_two"
                                    android:layout_width="@dimen/dp_110"
                                    android:layout_height="@dimen/dp_50"
                                    android:scaleType="centerCrop" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/dp_20"
                                    android:text="运动员签名"
                                    android:textColor="#ff333333"
                                    android:textSize="15sp" />

                                <TextView
                                    android:id="@+id/tv_left_club_name"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/dp_10"
                                    android:text="（宏亮俱乐部）"
                                    android:textColor="#ff999999"
                                    android:textSize="10sp" />
                            </LinearLayout>

                            <View
                                android:layout_width="@dimen/dp_30"
                                android:layout_height="10dp" />

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="vertical">

                                <ImageView
                                    android:id="@+id/iv_refree"
                                    android:layout_width="@dimen/dp_110"
                                    android:layout_height="@dimen/dp_50"
                                    android:scaleType="centerCrop" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/dp_20"
                                    android:text="裁判员签名"
                                    android:textColor="#ff333333"
                                    android:textSize="15sp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/dp_10"
                                    android:text="（宏亮俱乐部）"
                                    android:textColor="#ff999999"
                                    android:textSize="10sp"
                                    android:visibility="invisible" />
                            </LinearLayout>

                            <View
                                android:layout_width="@dimen/dp_30"
                                android:layout_height="10dp" />

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="vertical">

                                <ImageView
                                    android:id="@+id/iv_right_two"
                                    android:layout_width="wrap_content"
                                    android:layout_height="@dimen/dp_50"
                                    android:scaleType="centerCrop" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/dp_20"
                                    android:text="运动员签名"
                                    android:textColor="#ff333333"
                                    android:textSize="15sp" />

                                <TextView
                                    android:id="@+id/tv_right_club_name"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/dp_10"
                                    android:text="（宏亮俱乐部）"
                                    android:textColor="#ff999999"
                                    android:textSize="10sp" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_confirm_grade"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_40"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/dp_12"
                    android:layout_marginRight="@dimen/dp_12"
                    android:layout_marginBottom="@dimen/dp_40"
                    android:background="@drawable/shape_club_blue"
                    android:gravity="center"
                    android:text="确认比赛成绩"
                    android:textColor="#ffffffff"
                    android:textSize="15sp" />
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </LinearLayout>
</layout>