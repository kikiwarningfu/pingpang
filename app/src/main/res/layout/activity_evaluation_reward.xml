<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="listener"
            type="android.view.View.OnClickListener" />
    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_f5"
        android:orientation="vertical">


        <heyong.handong.framework.widget.TopBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:centerText="评价悬赏" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="#F6F6F6" />

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_300"
                    android:layout_marginLeft="@dimen/dp_12"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_12"
                    android:background="@drawable/shape_write_corners_5"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_match_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_10"
                        android:gravity="center"
                        android:textColor="#ff333333"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/tv_group_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_7"
                        android:layout_marginBottom="@dimen/dp_8"
                        android:gravity="center"
                        android:textColor="#ff666666"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv_player_show"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dp_14"
                        android:gravity="center"
                        android:textColor="#ff333333"
                        android:textSize="14sp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_1"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_marginRight="@dimen/dp_10"
                        android:background="#F6F6F6" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="@dimen/dp_14"
                        android:paddingBottom="@dimen/dp_14">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="@dimen/dp_10"
                            android:layout_marginRight="@dimen/dp_26"
                            android:gravity="center"
                            android:text="直播评分"
                            android:textColor="#ffce2626"
                            android:textSize="14sp" />

                        <ImageView
                            android:id="@+id/iv_stars_one"
                            android:onClick="@{v->listener.onClick(v)}"
                            android:layout_width="@dimen/dp_27"
                            android:layout_height="@dimen/dp_27"
                            android:layout_marginRight="@dimen/dp_8"
                            android:src="@drawable/img_stars_select" />

                        <ImageView
                            android:id="@+id/iv_stars_two"
                            android:onClick="@{v->listener.onClick(v)}"

                            android:layout_width="@dimen/dp_27"
                            android:layout_height="@dimen/dp_27"
                            android:layout_marginRight="@dimen/dp_8"
                            android:src="@drawable/img_starts_unselect" />

                        <ImageView
                            android:id="@+id/iv_stars_three"
                            android:onClick="@{v->listener.onClick(v)}"

                            android:layout_width="@dimen/dp_27"
                            android:layout_height="@dimen/dp_27"
                            android:layout_marginRight="@dimen/dp_8"

                            android:src="@drawable/img_starts_unselect" />

                        <ImageView
                            android:id="@+id/iv_stars_four"
                            android:onClick="@{v->listener.onClick(v)}"

                            android:layout_width="@dimen/dp_27"
                            android:layout_height="@dimen/dp_27"

                            android:layout_marginRight="@dimen/dp_8"
                            android:src="@drawable/img_starts_unselect" />

                        <ImageView
                            android:onClick="@{v->listener.onClick(v)}"

                            android:id="@+id/iv_stars_five"
                            android:layout_width="@dimen/dp_27"
                            android:layout_height="@dimen/dp_27"
                            android:src="@drawable/img_starts_unselect" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_1"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_marginRight="@dimen/dp_10"
                        android:background="#F6F6F6" />

                    <EditText
                        android:id="@+id/et_comment"
                        android:paddingLeft="@dimen/dp_10"
                        android:paddingRight="@dimen/dp_10"
                        android:paddingTop="@dimen/dp_15"
                        android:background="@null"
                        android:gravity="top"
                        android:hint="您可以写下40字的直播评语"
                        android:maxLength="40"
                        android:textSize="15sp"
                        android:textColorHint="#CCCCCC"
                        android:textColor="@color/black"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1" />
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>
                <TextView
                    android:id="@+id/tv_commit"
                    android:onClick="@{v->listener.onClick(v)}"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_40"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/dp_12"
                    android:layout_marginRight="@dimen/dp_12"
                    android:layout_marginBottom="@dimen/dp_20"
                    android:background="@drawable/shape_club_blue"
                    android:gravity="center"
                    android:text="提交评价"
                    android:textColor="@color/white" />

            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </LinearLayout>
</layout>
