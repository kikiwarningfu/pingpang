<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="listener"
            type="android.view.View.OnClickListener" />
    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F5F5F5"
        android:orientation="vertical"
        tools:context=".ui.homepage.activity.CreateEventsActivity">


        <heyong.handong.framework.widget.TopBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:centerText="拍摄教学" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="#F6F6F6" />

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/ll_team_step"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:visibility="gone">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_7"
                        android:background="@color/white"
                        android:orientation="vertical">

                        <TextView

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_10"
                            android:layout_marginTop="@dimen/dp_15"
                            android:text="第一步：支架摆放位置及高度"
                            android:textColor="#ff333333"
                            android:textSize="13sp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_10"
                            android:layout_marginTop="@dimen/dp_20"
                            android:layout_marginRight="@dimen/dp_34"
                            android:text="1、将支架摆放在球场的四个角落的位置上，拍摄球台全景及
      两名运动员全景，镜头正面需面向下单人选择的人 "
                            android:textColor="#ff868686"
                            android:textSize="12sp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_10"
                            android:layout_marginTop="@dimen/dp_14"
                            android:layout_marginBottom="@dimen/dp_14"
                            android:text="2、支架高度调整至合适高度170cm"
                            android:textColor="#ff868686"
                            android:textSize="12sp" />

                        <ImageView

                            android:layout_width="@dimen/dp_252"
                            android:layout_height="@dimen/dp_152"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="@dimen/dp_14"
                            android:layout_marginBottom="@dimen/dp_14"
                            android:src="@drawable/img_teach_one" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_7"
                        android:background="@color/white"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_10"
                            android:layout_marginTop="@dimen/dp_15"
                            android:text="第一步：支架摆放位置及高度"
                            android:textColor="#ff333333"
                            android:textSize="13sp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_10"
                            android:layout_marginTop="@dimen/dp_20"
                            android:text="1、录制过程中尽量使用横屏，以便展示更大画面空间 "
                            android:textColor="#ff868686"
                            android:textSize="12sp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_10"
                            android:layout_marginTop="@dimen/dp_14"
                            android:layout_marginRight="@dimen/dp_10"
                            android:layout_marginBottom="@dimen/dp_13"
                            android:text="2、选择光线较好的位置摆放支架，确保直播过程中手机电量充足"
                            android:textColor="#ff868686"
                            android:textSize="12sp" />

                        <ImageView
                            android:layout_width="@dimen/dp_252"
                            android:layout_height="@dimen/dp_152"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginBottom="@dimen/dp_13"
                            android:src="@drawable/img_teach_two" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/dp_42"
                        android:layout_marginBottom="@dimen/dp_20"
                        android:background="@drawable/shape_order_track_blue"
                        android:paddingLeft="@dimen/dp_98"
                        android:paddingTop="@dimen/dp_13"
                        android:paddingRight="@dimen/dp_98"
                        android:paddingBottom="@dimen/dp_13"
                        android:text="下一步"
                        android:textColor="#ffffffff"
                        android:textSize="15sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_teach_next"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_7"
                        android:background="@color/white"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_10"
                            android:layout_marginTop="@dimen/dp_18"
                            android:layout_marginBottom="@dimen/dp_17"
                            android:text="请依照上一步的要求录制一段3分钟以上的视频并上传用于审核"
                            android:textColor="#ff666666"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:layout_marginTop="@dimen/dp_17"
                        android:background="@color/white"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/dp_20"
                            android:layout_marginLeft="@dimen/dp_10"
                            android:layout_marginTop="@dimen/dp_14"
                            android:text="上传试拍视频"
                            android:textColor="#ff333333"
                            android:textSize="13sp" />
                        <ImageView
                            android:src="@drawable/img_teach_upload_video"
                            android:layout_marginBottom="@dimen/dp_15"
                            android:layout_marginLeft="@dimen/dp_10"
                            android:layout_width="@dimen/dp_75"
                            android:layout_height="@dimen/dp_75"/>

                        <TextView
                            android:layout_marginLeft="@dimen/dp_21"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="点击上传"
                            android:layout_marginBottom="@dimen/dp_14"
                            android:textColor="#ff666666"
                            android:textSize="12sp"
                            />
                        <View
                            android:layout_marginBottom="@dimen/dp_15"
                            android:layout_marginLeft="@dimen/dp_10"
                            android:layout_marginRight="@dimen/dp_15"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_0_5"
                            android:background="#999999"/>
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_marginLeft="@dimen/dp_10"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="视频要求"
                                android:textColor="#ff333333"
                                android:textSize="13sp"
                                />
                            <TextView
                                android:layout_marginRight="@dimen/dp_10"
                                android:layout_alignParentRight="true"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="《小亮智乒视频直播协议》"
                                android:textColor="#ff4795ed"
                                android:textSize="12sp"
                                />
                        </RelativeLayout>
                        <TextView
                            android:layout_marginTop="@dimen/dp_20"
                            android:layout_marginLeft="@dimen/dp_10"
                            android:layout_marginRight="@dimen/dp_10"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="1、严禁上传违反《小亮智乒视频直播协议》的视频内容，违者则
取消接单员身份"
                            android:textColor="#ff868686"
                            android:textSize="12sp"
                            />
                        <TextView
                            android:layout_marginTop="@dimen/dp_20"
                            android:layout_marginLeft="@dimen/dp_10"

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="2、视频时长不得少于3分钟，会影响拍摄效果，审核可能不通过"
                            android:textColor="#ff868686"
                            android:textSize="12sp"
                            />
                        <TextView
                            android:layout_marginTop="@dimen/dp_19"
                            android:layout_marginBottom="@dimen/dp_14"
                            android:layout_marginLeft="@dimen/dp_10"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="3、视频内容最好时动态画面 ，不能拍摄静物，乒乓球赛事最佳"
                            android:textColor="#ff868686"
                            android:textSize="12sp"
                            />
                    </LinearLayout>
                    <TextView
                        android:background="@drawable/shape_order_track_gray_bg"
                        android:layout_marginTop="@dimen/dp_164"
                        android:layout_marginBottom="@dimen/dp_20"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center_horizontal"
                        android:paddingTop="@dimen/dp_12"
                        android:paddingBottom="@dimen/dp_12"
                        android:paddingLeft="@dimen/dp_105"
                        android:paddingRight="@dimen/dp_105"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="提交"
                        android:textColor="#ffffffff"
                        android:textSize="15sp"
                        />
                </LinearLayout>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

    </LinearLayout>
</layout>