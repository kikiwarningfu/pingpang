<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="listener"
            type="android.view.View.OnClickListener" />
    </data>

    <RelativeLayout
        android:id="@+id/activity_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:id="@+id/local_preview_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <ImageView
            android:id="@+id/iv_finish_logo"
            android:layout_width="@dimen/dp_10"
            android:layout_height="@dimen/dp_18"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_marginTop="@dimen/dp_33"
            android:onClick="@{v->listener.onClick(v)}"
            android:src="@drawable/img_left_back_write" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_55"
            android:layout_below="@id/iv_finish_logo"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_marginTop="@dimen/dp_13"
            android:layout_marginRight="@dimen/dp_12"
            android:background="@drawable/shape_live_write_stroke">

            <ImageView
                android:id="@+id/iv_left_logo"
                android:layout_width="@dimen/dp_42"
                android:layout_height="@dimen/dp_42"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_7"
                android:scaleType="centerCrop"
                android:src="@drawable/morentouxiang"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_left_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_14"
                android:layout_toRightOf="@id/iv_left_logo"
                android:text=""
                android:textColor="#fffefefe"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_score"
                android:visibility="invisible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="0:0"
                android:textColor="#fffefefe"
                android:textSize="30sp" />


            <TextView
                android:id="@+id/tv_right_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_14"
                android:text=""
                android:textColor="#fffefefe"
                android:textSize="15sp" />

            <ImageView

                android:id="@+id/img_right_logo"
                android:layout_width="@dimen/dp_42"
                android:layout_height="@dimen/dp_42"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_7"
                android:layout_toLeftOf="@id/tv_right_name"
                android:src="@drawable/morentouxiang"
                android:visibility="gone" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/ll_right_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/dp_42"
            android:layout_marginRight="@dimen/dp_11"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="观看人数："
                android:textColor="#ffffffff"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_see_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="11W"
                android:textColor="#FF7500"
                android:textSize="12sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_room_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_42"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_28"
            android:layout_toLeftOf="@id/ll_right_container"
            android:text=""
            android:textColor="#ffcecece"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/live_prepare_go_live_btn"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_36"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/dp_27"
            android:layout_marginRight="@dimen/dp_27"
            android:layout_marginBottom="@dimen/dp_126"
            android:background="@drawable/shape_start_live_blue"
            android:gravity="center"
            android:onClick="@{v->listener.onClick(v)}"
            android:text="开始直播"
            android:textColor="#FFFFFF"
            android:textSize="15sp" />

        <LinearLayout
            android:id="@+id/ll_xieyi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/dp_27"
            android:layout_marginBottom="@dimen/dp_80"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_xieyi"
                android:layout_width="@dimen/dp_13"
                android:layout_height="@dimen/dp_13"
                android:src="@drawable/img_live_no_select" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_14"
                    android:text="开播代表你已阅读并同意"
                    android:textColor="#ffffff"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="《小亮智乒直播协议》"
                    android:textColor="#4795ED"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_switch_camera"
            android:layout_width="@dimen/dp_32"
            android:layout_height="@dimen/dp_32"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_11"
            android:onClick="@{v->listener.onClick(v)}"
            android:src="@drawable/img_switch_camera" />
    </RelativeLayout>
</layout>

