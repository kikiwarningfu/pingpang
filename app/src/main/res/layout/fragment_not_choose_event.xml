<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="listener"
            type="android.view.View.OnClickListener" />
    </data>
    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/sw_fresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:id="@+id/ll_no_select_game"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="visible">



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="vertical">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_46"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/dp_12"
                            android:layout_marginTop="@dimen/dp_10"
                            android:layout_marginBottom="@dimen/dp_10"
                            android:layout_weight="1">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/shape_search_name"
                                android:orientation="vertical">

                                <EditText
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"

                                    android:background="@null"
                                    android:hint="请输入运动员姓名"
                                    android:paddingLeft="@dimen/dp_11"
                                    android:paddingTop="@dimen/dp_6"
                                    android:paddingRight="@dimen/dp_11"
                                    android:textColor="#ff999999"
                                    android:textColorHint="#999999"

                                    android:textSize="12sp" />
                            </LinearLayout>
                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_marginLeft="@dimen/dp_10"
                            android:layout_marginRight="@dimen/dp_12"
                            android:gravity="center"
                            android:text="搜索"
                            android:textColor="#ff999999"
                            android:textSize="13sp" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_0_5"
                        android:background="#E5E5E5" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/ll_zubie"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_8"
                            android:layout_marginBottom="@dimen/dp_8"
                            android:orientation="horizontal"
                            android:visibility="gone">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/dp_12"
                                android:layout_marginTop="@dimen/dp_7"
                                android:layout_marginBottom="@dimen/dp_7"
                                android:text="组别"
                                android:textColor="#333333"
                                android:textSize="13sp" />

                            <com.zhy.view.flowlayout.TagFlowLayout
                                android:id="@+id/rv_group"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/dp_19"
                                app:max_select="-1">

                            </com.zhy.view.flowlayout.TagFlowLayout>
                        </LinearLayout>


                        <LinearLayout
                            android:id="@+id/ll_sex"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            android:layout_marginBottom="@dimen/dp_8"
                            android:orientation="horizontal"
                            android:visibility="gone">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/dp_12"
                                android:layout_marginTop="@dimen/dp_7"
                                android:layout_marginBottom="@dimen/dp_7"
                                android:text="性别"
                                android:textColor="#ff333333"
                                android:textSize="14sp" />

                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/rv_sex"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/dp_28" />

                        </LinearLayout>


                        <LinearLayout
                            android:id="@+id/ll_project"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_8"

                            android:layout_marginBottom="@dimen/dp_8"
                            android:orientation="horizontal"
                            android:visibility="gone">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/dp_12"
                                android:layout_marginTop="@dimen/dp_7"
                                android:layout_marginBottom="@dimen/dp_7"
                                android:text="项目"
                                android:textColor="#ff333333"
                                android:textSize="14sp" />

                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/rv_project"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />

                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_0_5"
                            android:background="#E5E5E5" />

                        <RelativeLayout
                            android:id="@+id/rl_recycler_and_elimination"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_10"
                            android:layout_marginBottom="@dimen/dp_15"
                            android:visibility="gone">

                            <LinearLayout

                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/tv_stage_one"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/shape_club_item_gray"
                                    android:onClick="@{v->listener.onClick(v)}"
                                    android:paddingLeft="@dimen/dp_26"
                                    android:paddingTop="@dimen/dp_7"
                                    android:paddingRight="@dimen/dp_26"
                                    android:paddingBottom="@dimen/dp_8"
                                    android:text="第一阶段"
                                    android:textColor="#ff666666"
                                    android:textSize="12sp" />

                                <TextView
                                    android:id="@+id/tv_stage_two"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/dp_63"
                                    android:background="@drawable/shape_club_blue"
                                    android:onClick="@{v->listener.onClick(v)}"
                                    android:paddingLeft="@dimen/dp_26"
                                    android:paddingTop="@dimen/dp_7"
                                    android:paddingRight="@dimen/dp_26"
                                    android:paddingBottom="@dimen/dp_8"
                                    android:text="第二阶段"
                                    android:textColor="#FFFFFF"
                                    android:textSize="12sp" />
                            </LinearLayout>
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/rl_single"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_10"
                            android:layout_marginBottom="@dimen/dp_15"
                            android:onClick="@{v->listener.onClick(v)}"
                            android:visibility="gone">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/tv_recycler"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/dp_63"
                                    android:layout_marginRight="@dimen/dp_63"
                                    android:background="@drawable/shape_club_blue"
                                    android:paddingLeft="@dimen/dp_26"
                                    android:paddingTop="@dimen/dp_7"
                                    android:paddingRight="@dimen/dp_26"
                                    android:paddingBottom="@dimen/dp_8"
                                    android:text="循环赛"
                                    android:textColor="#FFFFFF"
                                    android:textSize="12sp"
                                    android:visibility="visible" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/dp_63"
                                    android:background="@drawable/shape_club_blue"
                                    android:paddingLeft="@dimen/dp_26"
                                    android:paddingTop="@dimen/dp_7"
                                    android:paddingRight="@dimen/dp_26"
                                    android:paddingBottom="@dimen/dp_8"
                                    android:text="第二阶段"
                                    android:textColor="#FFFFFF"
                                    android:textSize="12sp"
                                    android:visibility="invisible" />
                            </LinearLayout>
                        </RelativeLayout>

                        <LinearLayout
                            android:id="@+id/ll_round"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingTop="@dimen/dp_4"

                            android:visibility="gone">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/dp_12"
                                android:layout_marginTop="@dimen/dp_7"
                                android:layout_marginBottom="@dimen/dp_21"
                                android:text="轮次"
                                android:textColor="#ff333333"
                                android:textSize="14sp" />

                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/rv_lunci"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/dp_28" />


                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ll_little_group"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_8"
                            android:layout_marginBottom="@dimen/dp_8"
                            android:orientation="horizontal"
                            android:visibility="gone">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/dp_12"
                                android:layout_marginTop="@dimen/dp_7"
                                android:layout_marginBottom="@dimen/dp_7"
                                android:text="小组"
                                android:textColor="#333333"
                                android:textSize="13sp" />

                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/rv_xiaozu"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                            </androidx.recyclerview.widget.RecyclerView>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_order_list"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/dp_7" />


        </LinearLayout>

    </androidx.core.widget.NestedScrollView>
    </com.scwang.smartrefresh.layout.SmartRefreshLayout>
</layout>