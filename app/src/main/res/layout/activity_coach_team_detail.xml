<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="listener"
            type="android.view.View.OnClickListener" />
    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_f5"
        android:orientation="vertical">


        <heyong.handong.framework.widget.TopBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:centerText="教练员带队详情" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="#F6F6F6" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_15"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/ll_under_way"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@drawable/shape_left_corners_blue"
                    android:gravity="center"
                    android:onClick="@{v->listener.onClick(v)}">

                    <TextView
                        android:id="@+id/tv_under_way"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="进行中"
                        android:textColor="#ffffffff"
                        android:textSize="15sp" />
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/ll_finished"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@drawable/shape_right_corners_gray_e5"
                    android:gravity="center"
                    android:onClick="@{v->listener.onClick(v)}">

                    <TextView
                        android:id="@+id/tv_finished"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="已结束"
                        android:textColor="#666666"
                        android:textSize="15sp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="@dimen/dp_30"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_26"
                    android:layout_marginRight="@dimen/dp_24"
                    android:text="性别"
                    android:textColor="#ff4795ed"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_sex_type_nan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_group_solid_stroke"
                    android:onClick="@{v->listener.onClick(v)}"
                    android:paddingLeft="@dimen/dp_8"
                    android:paddingTop="@dimen/dp_7"
                    android:paddingRight="@dimen/dp_8"
                    android:paddingBottom="@dimen/dp_7"
                    android:text="男子"
                    android:textColor="#ff4795ed"
                    android:textSize="15sp" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp_27"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/tv_sex_type_nv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_gray_corners_stroke"
                    android:onClick="@{v->listener.onClick(v)}"
                    android:paddingLeft="@dimen/dp_8"
                    android:paddingTop="@dimen/dp_7"
                    android:paddingRight="@dimen/dp_8"
                    android:paddingBottom="@dimen/dp_7"
                    android:text="女子"
                    android:textColor="#666666"
                    android:textSize="15sp" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp_27"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/tv_sex_type_hunhe"
                    android:onClick="@{v->listener.onClick(v)}"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_gray_corners_stroke"
                    android:paddingLeft="@dimen/dp_8"
                    android:paddingTop="@dimen/dp_7"
                    android:paddingRight="@dimen/dp_8"
                    android:paddingBottom="@dimen/dp_7"
                    android:text="混合"
                    android:textColor="#666666"
                    android:textSize="15sp" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp_27"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/tv_sex_type_hunshuang"
                    android:onClick="@{v->listener.onClick(v)}"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dp_40"
                    android:background="@drawable/shape_gray_corners_stroke"
                    android:paddingLeft="@dimen/dp_8"
                    android:paddingTop="@dimen/dp_7"
                    android:paddingRight="@dimen/dp_8"
                    android:paddingBottom="@dimen/dp_7"
                    android:text="混双"
                    android:textColor="#666666"
                    android:textSize="15sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="@dimen/dp_30"
                android:layout_marginBottom="@dimen/dp_20"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_26"
                    android:layout_marginRight="@dimen/dp_24"
                    android:text="项目"
                    android:textColor="#ff4795ed"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_tuanti"
                    android:onClick="@{v->listener.onClick(v)}"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_group_solid_stroke"
                    android:paddingLeft="@dimen/dp_8"
                    android:paddingTop="@dimen/dp_7"
                    android:paddingRight="@dimen/dp_8"
                    android:paddingBottom="@dimen/dp_7"
                    android:text="团体"
                    android:textColor="#ff4795ed"
                    android:textSize="15sp" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp_27"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/tv_danda"
                    android:onClick="@{v->listener.onClick(v)}"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_gray_corners_stroke"
                    android:paddingLeft="@dimen/dp_8"
                    android:paddingTop="@dimen/dp_7"
                    android:paddingRight="@dimen/dp_8"
                    android:paddingBottom="@dimen/dp_7"
                    android:text="单打"
                    android:textColor="#666666"
                    android:textSize="15sp" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp_27"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/tv_shuangda"
                    android:onClick="@{v->listener.onClick(v)}"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_gray_corners_stroke"
                    android:paddingLeft="@dimen/dp_8"
                    android:paddingTop="@dimen/dp_7"
                    android:paddingRight="@dimen/dp_8"
                    android:paddingBottom="@dimen/dp_7"
                    android:text="双打"
                    android:textColor="#666666"
                    android:textSize="15sp" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp_27"
                    android:layout_weight="1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dp_40"
                    android:background="@drawable/shape_gray_corners_stroke"
                    android:paddingLeft="@dimen/dp_8"
                    android:paddingTop="@dimen/dp_7"
                    android:paddingRight="@dimen/dp_8"
                    android:paddingBottom="@dimen/dp_7"
                    android:text="混双"
                    android:textColor="#666666"
                    android:textSize="15sp"
                    android:visibility="invisible" />
            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <com.scwang.smartrefresh.layout.SmartRefreshLayout
                android:id="@+id/sw_fresh"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_coach_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_12"
                android:layout_marginRight="@dimen/dp_12" />
            </com.scwang.smartrefresh.layout.SmartRefreshLayout>

            <LinearLayout
                android:id="@+id/ll_empty_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/dp_88"
                    android:layout_height="@dimen/dp_77"
                    android:src="@drawable/img_empty_message" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_20"
                    android:text="您还未参加任何赛事"
                    android:textColor="#ff4795ed"
                    android:textSize="15sp" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</layout>