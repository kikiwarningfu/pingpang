                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:background="@drawable/shape_club_blue"
                        android:gravity="center"
                        android:onClick="@{v->listener.onClick(v)}">

                        <TextView
