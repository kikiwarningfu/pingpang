                        android:layout_height="@dimen/dp_16"
                        android:layout_marginRight="@dimen/dp_26"
                        android:background="@null"
                        android:button="@null"
                        android:drawableLeft="@drawable/check_log"
                        android:onClick="@{v->listener.onClick(v)}" />
                </LinearLayout>


            </LinearLayout>

            <View
