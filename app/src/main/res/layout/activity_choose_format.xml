                        android:textSize="15sp" />

                    <LinearLayout
                        android:id="@+id/ll_the_third_name"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:background="@drawable/shape_club_blue"
                        android:gravity="center"
                        android:onClick="@{v->listener.onClick(v)}">

                        <TextView
                            android:id="@+id/tv_third_game"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/dp_14"
                            android:text="选择"
                            android:textColor="#ffffffff"
                            android:textSize="15sp" />

                        <ImageView
                            android:layout_width="@dimen/dp_13"
                            android:layout_height="@dimen/dp_9"
                            android:src="@drawable/img_white_drop_down" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_40"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/dp_34"
                    android:layout_marginRight="@dimen/dp_37"
                    android:layout_marginBottom="@dimen/dp_15"
