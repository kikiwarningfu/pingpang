<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
                name="listener"
                type="android.view.View.OnClickListener" />
    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/color_f5"
            android:orientation="vertical">


        <heyong.handong.framework.widget.TopBar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:centerText="运动员比赛经历" />

        <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="#F6F6F6" />

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">

            <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_40"
                    android:layout_marginLeft="@dimen/dp_22"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_22"
                    android:layout_marginBottom="@dimen/dp_17"
                    android:background="@drawable/shape_search_title"
                    android:orientation="horizontal">

                <TextView
                        android:id="@+id/tv_sports_man"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/shape_left_corners_blue"
                        android:gravity="center"
                        android:onClick="@{v->listener.onClick(v)}"
                        android:paddingTop="@dimen/dp_7"
                        android:paddingBottom="@dimen/dp_7"
                        android:text="一周内"
                        android:textColor="#fff" />

                <View
                        android:id="@+id/view_sport_man"
                        android:layout_width="@dimen/dp_1"
                        android:layout_height="@dimen/dp_20"
                        android:layout_marginTop="@dimen/dp_5"
                        android:layout_marginBottom="@dimen/dp_5"
                        android:background="#CDCDCD" />

                <TextView
                        android:id="@+id/tv_club"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/shape_search_title"
                        android:gravity="center"
                        android:onClick="@{v->listener.onClick(v)}"
                        android:paddingTop="@dimen/dp_7"
                        android:paddingBottom="@dimen/dp_7"
                        android:text="一月内"
                        android:textColor="#666666" />

                <View
                        android:id="@+id/view_fight"
                        android:layout_width="@dimen/dp_1"
                        android:layout_height="@dimen/dp_20"
                        android:layout_marginTop="@dimen/dp_5"
                        android:layout_marginBottom="@dimen/dp_5"
                        android:background="#CDCDCD" />

                <TextView
                        android:id="@+id/tv_fight"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/shape_search_title"
                        android:gravity="center"
                        android:onClick="@{v->listener.onClick(v)}"
                        android:paddingTop="@dimen/dp_7"
                        android:paddingBottom="@dimen/dp_7"
                        android:text="全部"
                        android:textColor="#666666" />

            </LinearLayout>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:layout_weight="1">
            <com.scwang.smartrefresh.layout.SmartRefreshLayout
                android:id="@+id/sw_fresh"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/mRecyclerView"
                    android:layout_marginTop="@dimen/dp_5"
                    android:layout_marginBottom="@dimen/dp_20"
                    android:background="@color/color_f5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </com.scwang.smartrefresh.layout.SmartRefreshLayout>
            <TextView
                android:id="@+id/tv_club_empty"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_50"
                android:gravity="center"
                android:text="该运动员近一周内没有参加比赛"
                android:textColor="#ff4795ed"
                android:textSize="15sp" />
        </LinearLayout>

    </LinearLayout>
</layout>