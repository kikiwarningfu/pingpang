<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="listener"
            type="android.view.View.OnClickListener" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_f5"
        android:orientation="vertical"
        tools:context=".ui.mine.activity.live.OrderTackerSettingActivity">


        <heyong.handong.framework.widget.TopBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:centerText="解除接单员身份" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="#F6F6F6" />

        <LinearLayout
            android:id="@+id/ll_container_apply"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="visible">

            <LinearLayout
                android:visibility="visible"
                android:id="@+id/ll_container_result"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_marginTop="@dimen/dp_16"
                    android:src="@drawable/img_explain_unbind"
                    android:layout_width="@dimen/dp_38"
                    android:layout_height="@dimen/dp_38" />
                <TextView
                    android:layout_marginTop="@dimen/dp_13"
                    android:layout_marginBottom="@dimen/dp_15"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="您的接单员身份已解除"
                    android:textColor="#ff333333"
                    android:textSize="14sp"
                    />
                <TextView
                    android:gravity="center"
                    android:layout_marginBottom="@dimen/dp_60"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="您的阶段员身份已解除，如需恢复身份请点击下方重新申请按钮"
                    android:textColor="#ff999999"
                    android:textSize="11sp"
                    />
            </LinearLayout>





            <TextView
                android:id="@+id/tv_submit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_15"
                android:layout_marginBottom="@dimen/dp_14"
                android:layout_marginTop="@dimen/dp_47"
                android:background="@drawable/shape_order_track_blue"
                android:gravity="center"
                android:onClick="@{v->listener.onClick(v)}"
                android:paddingTop="@dimen/dp_14"
                android:paddingBottom="@dimen/dp_14"
                android:text="重新申请"
                android:textColor="#ffffffff"
                android:textSize="16sp" />

        </LinearLayout>


    </LinearLayout>
</layout>