<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
                name="listener"
                type="android.view.View.OnClickListener" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/color_f5"
            android:orientation="vertical">


        <heyong.handong.framework.widget.TopBar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:centerText="执裁经历" />

        <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="#F6F6F6" />

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">


            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_40"
                    android:layout_marginLeft="@dimen/dp_22"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_22"
                    android:orientation="horizontal">

                <LinearLayout
                        android:id="@+id/ll_under_way"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:background="@drawable/shape_left_corners_blue"
                        android:gravity="center"
                        android:onClick="@{v->listener.onClick(v)}">

                    <TextView
                            android:id="@+id/tv_under_way"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="裁判员"
                            android:textColor="#ffffffff"
                            android:textSize="15sp" />
                </LinearLayout>


                <LinearLayout
                        android:id="@+id/ll_finished"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:background="@drawable/shape_right_corners_gray_e5"
                        android:gravity="center"
                        android:onClick="@{v->listener.onClick(v)}">

                    <TextView
                            android:id="@+id/tv_finished"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="裁判长"
                            android:textColor="#666666"
                            android:textSize="15sp" />
                </LinearLayout>
            </LinearLayout>

            <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:layout_marginTop="@dimen/dp_17"
                    android:background="#F6F6F6" />

            <TextView
                android:id="@+id/tv_all_chang"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginBottom="@dimen/dp_14"
                android:gravity="center"
                android:text="共计：0场"
                android:textColor="#ff666666"
                android:textSize="17sp" />
        </LinearLayout>
        <com.scwang.smartrefresh.layout.SmartRefreshLayout
            android:id="@+id/sw_fresh"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_referee_experience"
                android:layout_marginBottom="@dimen/dp_10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_12"
                android:layout_marginRight="@dimen/dp_12" />
        </com.scwang.smartrefresh.layout.SmartRefreshLayout>
    </LinearLayout>
</layout>