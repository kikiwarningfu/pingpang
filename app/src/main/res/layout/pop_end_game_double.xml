<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent_20"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:id="@+id/ll_out"
        android:layout_gravity="center"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:background="@drawable/shape_message_dialog"
        android:gravity="center_vertical"
        >
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginBottom="@dimen/dp_20"
            android:gravity="center"
            android:text="是否结束本盘比赛？"
            android:textColor="#ff333333"
            android:textSize="18sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/dp_30"
            android:gravity="center"
            android:text="结束后裁判员只可再更改一次比赛成绩，之后\n
只能请裁判长更改！"
            android:textColor="#ff666666"
            android:textSize="12sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/dp_35"
            android:gravity="center">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dp_36">

                <TextView
                    android:id="@+id/tv_winner_left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="胜"
                    android:textColor="#fffb312f"
                    android:textSize="20sp"
                    android:textStyle="bold" />
                <LinearLayout
                    android:layout_below="@id/tv_winner_left"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <RelativeLayout
                        android:layout_marginRight="@dimen/dp_10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/img_left1_logo"
                            android:layout_width="@dimen/dp_50"
                            android:layout_height="@dimen/dp_50"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="@dimen/dp_7"
                            android:src="@drawable/img_default_avatar" />

                        <TextView
                            android:id="@+id/tv_left1_name"
                            android:layout_width="wrap_content"
                            android:maxEms="5"
                            android:ellipsize="end"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/img_left1_logo"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="@dimen/dp_9"
                            android:text="陈胜云"
                            android:textColor="#ff666666"
                            android:textSize="15sp" />
                    </RelativeLayout>
                    <RelativeLayout

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/img_left2_logo"
                            android:layout_width="@dimen/dp_50"
                            android:layout_height="@dimen/dp_50"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="@dimen/dp_7"
                            android:src="@drawable/img_default_avatar" />

                        <TextView
                            android:id="@+id/tv_left2_name"
                            android:layout_width="wrap_content"
                            android:maxEms="5"
                            android:ellipsize="end"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/img_left2_logo"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="@dimen/dp_9"
                            android:text="陈胜云"
                            android:textColor="#ff666666"
                            android:textSize="15sp" />
                    </RelativeLayout>
                </LinearLayout>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_left_score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="11"
                    android:textColor="#ff4895ed"
                    android:textSize="27sp"
                    android:textStyle="bold" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=":"
                    android:textColor="#ff4895ed"
                    android:textSize="27sp"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/tv_right_score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="6"
                    android:textColor="#ff4895ed"
                    android:textSize="27sp"
                    android:textStyle="bold" />
            </LinearLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_36">

                <TextView
                    android:id="@+id/tv_winner_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="负"
                    android:textColor="#333333"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_below="@id/tv_winner_right"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <RelativeLayout
                        android:layout_marginRight="@dimen/dp_10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/img_right1_logo"
                            android:layout_width="@dimen/dp_50"
                            android:layout_height="@dimen/dp_50"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="@dimen/dp_7"
                            android:src="@drawable/img_default_avatar" />

                        <TextView
                            android:id="@+id/tv_right1_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/img_right1_logo"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="@dimen/dp_9"
                            android:maxEms="5"
                            android:ellipsize="end"
                            android:text="陈胜云"
                            android:textColor="#ff666666"
                            android:textSize="15sp" />
                    </RelativeLayout>
                    <RelativeLayout

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/img_right2_logo"
                            android:layout_width="@dimen/dp_50"
                            android:layout_height="@dimen/dp_50"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="@dimen/dp_7"
                            android:src="@drawable/img_default_avatar" />

                        <TextView
                            android:id="@+id/tv_right2_name"
                            android:layout_width="wrap_content"
                            android:maxEms="5"
                            android:ellipsize="end"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/img_right2_logo"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="@dimen/dp_9"
                            android:text="陈胜云"
                            android:textColor="#ff666666"
                            android:textSize="15sp" />
                    </RelativeLayout>
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_25"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_sure"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_30"
                android:layout_marginRight="@dimen/dp_20"
                android:layout_weight="1.1"
                android:background="@drawable/shape_club_blue"
                android:gravity="center"
                android:paddingTop="@dimen/dp_11"
                android:paddingBottom="@dimen/dp_11"
                android:text="确定"
                android:textColor="#ffffffff"
                android:textSize="18sp" />

            <View
                android:id="@+id/view_divider"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_40"
                android:layout_weight="0.4"
                android:visibility="visible" />

            <TextView
                android:id="@+id/tv_cancel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_30"
                android:layout_weight="1.1"
                android:background="@drawable/shape_club_gray"
                android:gravity="center"
                android:paddingTop="@dimen/dp_11"
                android:paddingBottom="@dimen/dp_11"
                android:text="取消"
                android:textColor="#ffffffff"
                android:textSize="18sp"
                android:visibility="visible" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
