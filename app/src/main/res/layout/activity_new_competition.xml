<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="listener"
            type="android.view.View.OnClickListener" />
    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical"
        tools:context=".ui.homepage.activity.CreateEventsActivity">


        <heyong.handong.framework.widget.TopBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:centerText="新建比赛项目" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="#F6F6F6" />

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:fillViewport="true">

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/tv_group_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_15"
                    android:gravity="center"
                    android:text="成人甲组"
                    android:textColor="#ff333333"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_0_5"
                    android:layout_marginLeft="@dimen/dp_12"
                    android:layout_marginTop="@dimen/dp_14"
                    android:layout_marginRight="@dimen/dp_12"
                    android:background="#F6F6F6" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_12"
                    android:layout_marginTop="@dimen/dp_15"
                    android:layout_marginBottom="@dimen/dp_20"
                    android:text="性别"
                    android:textColor="#ff333333"
                    android:textSize="15sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dp_12"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/ll_man"
                        android:layout_marginLeft="@dimen/dp_29"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="@{v->listener.onClick(v)}"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/iv_man"
                            android:layout_width="@dimen/dp_15"
                            android:layout_height="@dimen/dp_15"
                            android:layout_marginRight="@dimen/dp_15"
                            android:src="@drawable/icon_login_unselected" />

                        <TextView
                            android:id="@+id/tv_man"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/dp_35"
                            android:text="男"
                            android:textColor="#ff333333"
                            android:textSize="15sp" />
                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/ll_woman"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="@{v->listener.onClick(v)}"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/iv_woman"
                            android:layout_width="@dimen/dp_15"
                            android:layout_height="@dimen/dp_15"
                            android:layout_marginRight="@dimen/dp_15"
                            android:src="@drawable/icon_login_unselected" />

                        <TextView
                            android:id="@+id/tv_woman"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/dp_35"
                            android:text="女"
                            android:textColor="#ff333333"
                            android:textSize="15sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_hunhe"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="@{v->listener.onClick(v)}"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/iv_hunhe"
                            android:layout_width="@dimen/dp_15"
                            android:layout_height="@dimen/dp_15"
                            android:layout_marginRight="@dimen/dp_15"
                            android:src="@drawable/icon_login_unselected" />

                        <TextView
                            android:id="@+id/tv_hunhe"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="混合"
                            android:textColor="#ff333333"
                            android:textSize="15sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_hunshuang"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_34"
                        android:onClick="@{v->listener.onClick(v)}"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/iv_hunshuang"
                            android:layout_width="@dimen/dp_15"
                            android:layout_height="@dimen/dp_15"
                            android:layout_marginRight="@dimen/dp_10"
                            android:src="@drawable/icon_login_unselected" />

                        <TextView
                            android:id="@+id/tv_hunshuang"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_9"
                            android:text="混双"
                            android:textColor="#ff333333"
                            android:textSize="15sp" />
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_0_5"
                    android:layout_marginLeft="@dimen/dp_12"
                    android:layout_marginTop="@dimen/dp_14"
                    android:layout_marginRight="@dimen/dp_12"
                    android:background="#F6F6F6" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_12"
                    android:layout_marginTop="@dimen/dp_14"
                    android:layout_marginBottom="@dimen/dp_18"
                    android:text="比赛项目"
                    android:textColor="#ff333333"
                    android:textSize="15sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_29"
                    android:layout_marginRight="@dimen/dp_30"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/ll_tuanti"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="@{v->listener.onClick(v)}"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/iv_tuanti"
                            android:layout_width="@dimen/dp_15"
                            android:layout_height="@dimen/dp_15"
                            android:layout_marginRight="@dimen/dp_10"
                            android:src="@drawable/icon_login_unselected" />

                        <TextView
                            android:id="@+id/tv_tuanti"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="团体"
                            android:textColor="#ff333333"
                            android:textSize="15sp" />
                    </LinearLayout>

                    <View
                        android:layout_width="0dp"
                        android:layout_height="@dimen/dp_10"
                        android:layout_weight="1" />

                    <LinearLayout
                        android:id="@+id/ll_danda"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="@{v->listener.onClick(v)}"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/iv_danda"
                            android:layout_width="@dimen/dp_15"
                            android:layout_height="@dimen/dp_15"
                            android:layout_marginRight="@dimen/dp_10"
                            android:src="@drawable/icon_login_unselected" />

                        <TextView
                            android:id="@+id/tv_danda"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="单打"
                            android:textColor="#ff333333"
                            android:textSize="15sp" />
                    </LinearLayout>

                    <View
                        android:layout_width="0dp"
                        android:layout_height="@dimen/dp_10"
                        android:layout_weight="1" />

                    <LinearLayout
                        android:id="@+id/ll_shuangda"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="@{v->listener.onClick(v)}"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/iv_shuangda"
                            android:layout_width="@dimen/dp_15"
                            android:layout_height="@dimen/dp_15"
                            android:layout_marginRight="@dimen/dp_10"
                            android:src="@drawable/icon_login_unselected" />

                        <TextView
                            android:id="@+id/tv_shuangda"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="双打"
                            android:textColor="#ff333333"
                            android:textSize="15sp" />
                    </LinearLayout>

                    <View
                        android:layout_width="0dp"
                        android:layout_height="@dimen/dp_10"
                        android:layout_weight="1" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:visibility="invisible">

                        <ImageView
                            android:layout_width="@dimen/dp_15"
                            android:layout_height="@dimen/dp_15"
                            android:layout_marginRight="@dimen/dp_10"
                            android:src="@drawable/icon_login_unselected" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="混双"
                            android:textColor="#ff333333"
                            android:textSize="15sp" />
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_0_5"
                    android:layout_marginLeft="@dimen/dp_12"
                    android:layout_marginTop="@dimen/dp_14"
                    android:layout_marginRight="@dimen/dp_12" />

                <LinearLayout
                    android:layout_width="match_parent"

                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:paddingTop="@dimen/dp_14"
                        android:paddingBottom="@dimen/dp_14"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_12"
                        android:text="年龄范围"
                        android:textColor="#ff333333"
                        android:textSize="15sp" />
                    <LinearLayout
                        android:id="@+id/ll_no_limit_age"

                        android:onClick="@{v->listener.onClick(v)}"
                        android:layout_marginLeft="@dimen/dp_45"
                        android:gravity="center"
                        android:paddingTop="@dimen/dp_14"
                        android:paddingBottom="@dimen/dp_14"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <ImageView
                            android:id="@+id/iv_no_limit_age"
                            android:src="@drawable/icon_login_unselected"
                            android:layout_width="@dimen/dp_15"
                            android:layout_height="@dimen/dp_15"/>
                        <TextView
                            android:id="@+id/tv_no_limit_age"
                            android:layout_marginLeft="@dimen/dp_9"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="不限年龄"
                            android:textColor="#ff333333"
                            android:textSize="15sp"
                            />
                    </LinearLayout>
                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/rl_team_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_12"
                    android:layout_marginTop="@dimen/dp_20"
                    android:layout_marginRight="@dimen/dp_12"
                    android:onClick="@{v->listener.onClick(v)}"
                    android:visibility="visible">

                    <TextView
                        android:id="@+id/tv_team_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="请选择"
                        android:textColor="#ffb2b2b2"
                        android:textSize="15sp" />

                    <ImageView
                        android:layout_width="@dimen/dp_10"
                        android:layout_height="@dimen/dp_16"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/icon_right_back_black" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_0_5"
                        android:layout_marginLeft="@dimen/dp_12"
                        android:layout_marginTop="@dimen/dp_15"
                        android:layout_marginRight="@dimen/dp_12"
                        android:layout_marginBottom="@dimen/dp_14" />
                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/ll_nan_woman_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/ll_man_time_select"
                        android:onClick="@{v->listener.onClick(v)}"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_12"
                        android:layout_marginTop="@dimen/dp_20"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="男"
                            android:textColor="#ff333333"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/tv_man_time"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_35"
                            android:layout_weight="1"
                            android:text="请选择"
                            android:textColor="#999999"
                            android:textSize="15sp" />

                        <ImageView
                            android:layout_width="@dimen/dp_10"
                            android:layout_height="@dimen/dp_16"
                            android:layout_marginRight="@dimen/dp_11"
                            android:src="@drawable/icon_right_back_black" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_0_5"
                        android:layout_marginLeft="@dimen/dp_12"
                        android:layout_marginTop="@dimen/dp_14"
                        android:layout_marginRight="@dimen/dp_12"
                        android:layout_marginBottom="@dimen/dp_14" />

                    <LinearLayout
                        android:id="@+id/ll_woman_time_select"
                        android:onClick="@{v->listener.onClick(v)}"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_12"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="女"
                            android:textColor="#ff333333"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/tv_woman_select"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_35"
                            android:layout_weight="1"
                            android:text="请选择"
                            android:textColor="#999999"
                            android:textSize="15sp" />

                        <ImageView
                            android:layout_width="@dimen/dp_10"
                            android:layout_height="@dimen/dp_16"
                            android:layout_marginRight="@dimen/dp_11"
                            android:src="@drawable/icon_right_back_black" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_0_5"
                        android:layout_marginLeft="@dimen/dp_12"
                        android:layout_marginTop="@dimen/dp_14"
                        android:layout_marginRight="@dimen/dp_12"
                        android:layout_marginBottom="@dimen/dp_14" />
                </LinearLayout>


            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

        <TextView
            android:id="@+id/ll_add_project"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_marginRight="@dimen/dp_12"
            android:layout_marginBottom="@dimen/dp_30"
            android:background="@drawable/shape_club_blue"
            android:gravity="center"
            android:onClick="@{v->listener.onClick(v)}"
            android:paddingTop="@dimen/dp_12"
            android:paddingBottom="@dimen/dp_13"
            android:text="确定"
            android:textColor="#fffefefe"
            android:textSize="15sp" />
    </LinearLayout>
</layout>