<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="listener"
            type="android.view.View.OnClickListener" />
    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical"
        tools:context=".ui.homepage.activity.CreateEventsActivity">


        <heyong.handong.framework.widget.TopBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:centerText="搜索" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="#F6F6F6" />

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#F5F5F5"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="vertical">

                    <LinearLayout

                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_30"
                        android:layout_marginLeft="@dimen/dp_22"
                        android:layout_marginTop="@dimen/dp_25"
                        android:layout_marginRight="@dimen/dp_22"
                        android:layout_marginBottom="@dimen/dp_25"
                        android:background="@drawable/shape_search_title"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_sports_man"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/shape_left_corners_blue"
                            android:gravity="center"
                            android:onClick="@{v->listener.onClick(v)}"
                            android:paddingTop="@dimen/dp_7"
                            android:paddingBottom="@dimen/dp_7"
                            android:text="运动员"
                            android:textColor="#fff" />

                        <View
                            android:id="@+id/view_sport_man"
                            android:layout_width="@dimen/dp_1"
                            android:layout_height="@dimen/dp_20"
                            android:layout_marginTop="@dimen/dp_5"
                            android:layout_marginBottom="@dimen/dp_5"
                            android:background="#CDCDCD" />

                        <TextView
                            android:id="@+id/tv_club"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/shape_search_title"
                            android:gravity="center"
                            android:onClick="@{v->listener.onClick(v)}"
                            android:paddingTop="@dimen/dp_7"
                            android:paddingBottom="@dimen/dp_7"
                            android:text="俱乐部"
                            android:textColor="#666666" />

                        <View
                            android:id="@+id/view_fight"
                            android:layout_width="@dimen/dp_1"
                            android:layout_height="@dimen/dp_20"
                            android:layout_marginTop="@dimen/dp_5"
                            android:layout_marginBottom="@dimen/dp_5"
                            android:background="#CDCDCD" />

                        <TextView
                            android:id="@+id/tv_fight"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/shape_search_title"
                            android:gravity="center"
                            android:onClick="@{v->listener.onClick(v)}"
                            android:paddingTop="@dimen/dp_7"
                            android:paddingBottom="@dimen/dp_7"
                            android:text="对战"
                            android:textColor="#666666" />

                    </LinearLayout>
                </LinearLayout>
                <!--运动员-->
                <LinearLayout
                    android:id="@+id/ll_sports_man"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_23"
                        android:layout_marginRight="@dimen/dp_23"
                        android:layout_marginBottom="@dimen/dp_20"
                        android:background="@drawable/shape_sports_name"
                        android:orientation="vertical"
                        android:paddingTop="@dimen/dp_8"
                        android:paddingBottom="@dimen/dp_8">

                        <EditText
                            android:id="@+id/et_sports_name"
                            android:imeOptions="actionSearch"
                            android:layout_width="match_parent"

                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:hint="请输入运动员姓名"
                            android:inputType="text"
                            android:paddingLeft="@dimen/dp_12"
                            android:textColor="@color/black"
                            android:textColorHint="#CCCCCC">

                        </EditText>

                        <ImageView
                            android:id="@+id/iv_sports_search"
                            android:layout_width="@dimen/dp_21"
                            android:layout_height="@dimen/dp_21"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="@dimen/dp_12"
                            android:src="@drawable/img_search_icon" />


                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:background="#F5F5F5"
                        android:orientation="vertical">

                        <com.scwang.smartrefresh.layout.SmartRefreshLayout
                            android:id="@+id/sw_fresh_sports"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <androidx.recyclerview.widget.RecyclerView

                                android:id="@+id/rv_sports_man"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dp_20"
                                android:background="@color/white" />
                        </com.scwang.smartrefresh.layout.SmartRefreshLayout>
                        <!--test-->
                        <TextView
                            android:id="@+id/tv_sports_man_empty"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_50"
                            android:gravity="center"
                            android:text="没有找到您搜索的人!"
                            android:textColor="#ff4795ed"
                            android:textSize="15sp" />
                    </LinearLayout>


                </LinearLayout>
                <!--俱乐部-->
                <LinearLayout
                    android:id="@+id/ll_club"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_23"
                        android:layout_marginRight="@dimen/dp_23"
                        android:layout_marginBottom="@dimen/dp_20"
                        android:background="@drawable/shape_sports_name"
                        android:orientation="vertical"
                        android:paddingTop="@dimen/dp_8"
                        android:paddingBottom="@dimen/dp_8">

                        <EditText
                            android:id="@+id/et_club_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:hint="请输入俱乐部名称"
                            android:imeOptions="actionSearch"
                            android:inputType="text"
                            android:paddingLeft="@dimen/dp_12"
                            android:textColor="@color/black"
                            android:textColorHint="#CCCCCC">

                        </EditText>

                        <ImageView
                            android:id="@+id/iv_club_search"
                            android:layout_width="@dimen/dp_21"
                            android:layout_height="@dimen/dp_21"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="@dimen/dp_12"
                            android:src="@drawable/img_search_icon" />


                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:background="#F5F5F5"
                        android:orientation="vertical">

                        <com.scwang.smartrefresh.layout.SmartRefreshLayout
                            android:id="@+id/sw_fresh_club"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/rv_club"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginTop="@dimen/dp_20"
                                android:background="@color/color_f5"
                                android:paddingLeft="@dimen/dp_12"
                                android:paddingRight="@dimen/dp_12" />
                        </com.scwang.smartrefresh.layout.SmartRefreshLayout>

                        <!--test-->
                        <TextView
                            android:id="@+id/tv_club_empty"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_50"
                            android:gravity="center"
                            android:text="没有找到您搜索的俱乐部，请换个名字再试试！"
                            android:textColor="#ff4795ed"
                            android:textSize="15sp" />
                    </LinearLayout>


                </LinearLayout>
                <!--对战记录-->
                <LinearLayout
                    android:id="@+id/ll_fight"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="@color/color_f5"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:paddingBottom="@dimen/dp_20">

                        <EditText

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/dp_20"
                            android:background="@drawable/shape_search_fight"
                            android:hint="李四"
                            android:inputType="text"
                            android:maxLength="5"
                            android:paddingLeft="@dimen/dp_30"
                            android:paddingTop="@dimen/dp_8"
                            android:paddingRight="@dimen/dp_30"
                            android:paddingBottom="@dimen/dp_8"
                            android:textColor="#666666"
                            android:textColorHint="#666666"
                            android:textSize="@dimen/sp_15" />

                        <ImageView
                            android:layout_width="@dimen/dp_21"
                            android:layout_height="@dimen/dp_21"
                            android:src="@drawable/img_fight_icon" />

                        <EditText
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_20"
                            android:background="@drawable/shape_search_fight"
                            android:hint="李四"
                            android:inputType="text"
                            android:maxLength="5"
                            android:paddingLeft="@dimen/dp_30"
                            android:paddingTop="@dimen/dp_8"
                            android:paddingRight="@dimen/dp_30"
                            android:paddingBottom="@dimen/dp_8"
                            android:textColor="#666666"
                            android:textColorHint="#666666"
                            android:textSize="@dimen/sp_15" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_23"
                            android:background="@drawable/shape_limit_people_blue"
                            android:paddingLeft="@dimen/dp_8"
                            android:paddingTop="@dimen/dp_8"
                            android:paddingRight="@dimen/dp_8"
                            android:paddingBottom="@dimen/dp_8"
                            android:text="搜索"
                            android:textColor="#ff4795ed"
                            android:textSize="15sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_search_against_result"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_12"
                        android:layout_marginTop="@dimen/dp_15"
                        android:layout_marginRight="@dimen/dp_12"
                        android:background="@drawable/shape_search_result_bg"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/dp_20"
                                android:paddingTop="@dimen/dp_15"
                                android:paddingBottom="@dimen/dp_21"
                                android:text="对战总场次"
                                android:textColor="#ff333333"
                                android:textSize="15sp"
                                android:visibility="invisible" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="张三"
                                android:textColor="#ff4795ed"
                                android:textSize="18sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="@dimen/dp_40"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="李四"
                                android:textColor="#fff0180c"
                                android:textSize="18sp"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_1"
                            android:layout_marginLeft="@dimen/dp_20"
                            android:layout_marginRight="@dimen/dp_20"
                            android:background="#F6F6F6" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/dp_20"
                                android:paddingTop="@dimen/dp_15"
                                android:paddingBottom="@dimen/dp_21"
                                android:text="对战总场次"
                                android:textColor="#ff333333"
                                android:textSize="15sp"
                                android:visibility="visible" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="16"
                                android:textColor="#ff4795ed"
                                android:textSize="18sp" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="@dimen/dp_40"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="16"
                                android:textColor="#fff0180c"
                                android:textSize="18sp" />
                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_1"
                            android:layout_marginLeft="@dimen/dp_20"
                            android:layout_marginRight="@dimen/dp_20"
                            android:background="#F6F6F6" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/dp_20"
                                android:gravity="center"
                                android:minWidth="@dimen/dp_74"
                                android:paddingTop="@dimen/dp_15"
                                android:paddingBottom="@dimen/dp_21"
                                android:text="胜"
                                android:textColor="#ff333333"
                                android:textSize="15sp"
                                android:visibility="visible" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="10"
                                android:textColor="#ff4795ed"
                                android:textSize="18sp" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginRight="@dimen/dp_40"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="6"
                                android:textColor="#fff0180c"
                                android:textSize="18sp" />
                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_1"
                            android:layout_marginLeft="@dimen/dp_20"
                            android:layout_marginRight="@dimen/dp_20"
                            android:background="#F6F6F6" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/dp_20"
                                android:gravity="center"
                                android:minWidth="@dimen/dp_74"
                                android:paddingTop="@dimen/dp_15"
                                android:paddingBottom="@dimen/dp_21"
                                android:text="负"
                                android:textColor="#ff333333"
                                android:textSize="15sp"
                                android:visibility="visible" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="6"
                                android:textColor="#4795ED"
                                android:textSize="18sp" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginRight="@dimen/dp_40"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="10"
                                android:textColor="#fff0180c"
                                android:textSize="18sp" />
                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_1"
                            android:layout_marginLeft="@dimen/dp_20"
                            android:layout_marginRight="@dimen/dp_20"
                            android:background="#F6F6F6" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/dp_20"
                                android:gravity="center"
                                android:minWidth="@dimen/dp_74"
                                android:paddingTop="@dimen/dp_15"
                                android:paddingBottom="@dimen/dp_21"
                                android:text="胜率"
                                android:textColor="#ff333333"
                                android:textSize="15sp"
                                android:visibility="visible" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="62.5%"
                                android:textColor="#4795ED"
                                android:textSize="18sp" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginRight="@dimen/dp_40"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="37.5%"
                                android:textColor="#fff0180c"
                                android:textSize="18sp" />
                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_1"
                            android:layout_marginLeft="@dimen/dp_20"
                            android:layout_marginRight="@dimen/dp_20"
                            android:background="#F6F6F6" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_20"
                            android:layout_marginTop="@dimen/dp_30"
                            android:layout_marginBottom="@dimen/dp_20"
                            android:text="对战记录"
                            android:textColor="#ff333333"
                            android:textSize="15sp"
                            android:textStyle="bold" />

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rv_against_record"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/dp_20"
                            android:layout_marginRight="@dimen/dp_20"
                            android:layout_marginBottom="@dimen/dp_11" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/dp_12">

                            <ImageView
                                android:layout_width="@dimen/dp_25"
                                android:layout_height="@dimen/dp_16"
                                android:layout_centerInParent="true"
                                android:src="@drawable/img_assert_record_next" />
                        </RelativeLayout>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_against_record_empty"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_51"
                        android:gravity="center"
                        android:text="没有找到您搜索的人!"
                        android:textColor="#ff4795ed"
                        android:textSize="15sp" />

                </LinearLayout>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </LinearLayout>
</layout>