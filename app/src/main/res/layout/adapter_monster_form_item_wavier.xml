<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/dp_89"
    android:id="@+id/ll_content"
    android:background="@drawable/shape_item_title_top_left_write_solid"
    android:layout_height="@dimen/dp_44"
    android:orientation="vertical"
    android:gravity="center"
 >
    <TextView
        android:id="@+id/tv_wavier_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#fffb2a2a"
        android:textSize="14sp"
        />
    <View
        android:id="@+id/tv_wavier_divider"
        android:layout_marginBottom="@dimen/dp_5"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_width="@dimen/dp_45"
        android:layout_height="@dimen/dp_1"
        android:background="#FB2A2A"/>
    <TextView
        android:id="@+id/tv_wavier_bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#fffb2a2a"
        android:textSize="11sp"
        />
</LinearLayout>