<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="listener"
            type="android.view.View.OnClickListener" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_logo"
            android:layout_width="@dimen/dp_38"
            android:layout_height="@dimen/dp_38"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_marginTop="@dimen/dp_5"
            android:src="@drawable/img_default_avatar" />

        <TextView
            android:id="@+id/tv_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_11"
            android:layout_marginTop="@dimen/dp_22"
            android:layout_toRightOf="@id/iv_logo"
            android:text="斯皮尔伯格"
            android:textColor="#ff666666"
            android:textSize="12sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_12"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_dianzan"

                android:layout_width="@dimen/dp_21"
                android:layout_height="@dimen/dp_21"
                android:src="@drawable/img_circle_not_agree" />

            <TextView
                android:id="@+id/tv_dianzan_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_6"
                android:text="16"
                android:textColor="#ff666666"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_content"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_31"
            android:layout_below="@id/tv_user_name"
            android:layout_marginLeft="@dimen/dp_57"
            android:layout_marginTop="@dimen/dp_6"
            android:layout_marginRight="@dimen/dp_12"
            android:background="@drawable/shape_comment_gray_corners_2"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_reply_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp_13"
                android:gravity="center_vertical"
                android:text="斯皮尔伯格：Why is your shooting so good！"
                android:textColor="#FF333333"
                android:textSize="12sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_contents"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ll_content"
            android:layout_marginLeft="@dimen/dp_57"
            android:layout_marginTop="@dimen/dp_6"
            android:layout_marginRight="@dimen/dp_12"
            android:text="你说的不错"
            android:textColor="#ff333333"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/iv_picture"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_width="@dimen/dp_80"
            android:layout_height="@dimen/dp_80"
            android:layout_below="@id/tv_contents"
            android:layout_marginLeft="@dimen/dp_57"
            android:layout_marginBottom="@dimen/dp_5"
            />

        <TextView
            android:id="@+id/tv_reply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_picture"
            android:layout_marginLeft="@dimen/dp_57"
            android:layout_marginTop="@dimen/dp_6"
            android:text="回复 ＞"
            android:textColor="#ff3582c9"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_reply"
            android:layout_marginLeft="@dimen/dp_57"
            android:layout_marginTop="@dimen/dp_2"
            android:text="1-16 00:36"
            android:textColor="#ff999999"
            android:textSize="12sp" />

        <View
            android:id="@+id/view_divider"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0_5"
            android:layout_below="@id/tv_time"
            android:layout_marginLeft="@dimen/dp_57"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_marginRight="@dimen/dp_12"
            android:background="#FF979797" />
    </RelativeLayout>
</layout>