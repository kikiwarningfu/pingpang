<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="listener"
            type="android.view.View.OnClickListener" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical"
        tools:context=".ui.homepage.activity.CreateEventsActivity">


        <heyong.handong.framework.widget.TopBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:centerText="裁判员详情" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="#F6F6F6" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_70"
            android:background="@color/white">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/iv_logo"
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                android:layout_marginLeft="@dimen/dp_12"
                android:layout_marginTop="@dimen/dp_15"
                android:src="@drawable/img_default_avatar" />

            <ImageView
                android:id="@+id/iv_sex"
                android:layout_width="@dimen/dp_15"
                android:layout_height="@dimen/dp_15"
                android:layout_alignBottom="@id/iv_logo"
                android:layout_marginLeft="@dimen/dp_45" />

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_toRightOf="@id/iv_logo"
                android:text=""
                android:textColor="#ff333333"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/iv_logo"
                android:layout_marginLeft="@dimen/dp_72"
                android:text=""
                android:textColor="#ff999999"
                android:textSize="12sp" />


        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_15"
            android:background="@color/color_f5" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_marginRight="@dimen/dp_12"
            android:background="@drawable/shape_write_corners_5"
            android:orientation="vertical">

            <LinearLayout
                android:layout_marginLeft="@dimen/dp_35"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/iv_diamond"
                        android:layout_width="@dimen/dp_46"
                        android:layout_height="@dimen/dp_41"
                        android:layout_marginTop="@dimen/dp_18"
                        android:src="@drawable/img_diamond_icon_yellow" />

                    <TextView
                        android:id="@+id/tv_apply_status"
                        android:layout_marginTop="@dimen/dp_10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/iv_diamond"
                        android:gravity="center"
                        android:text="您还不是裁判员"
                        android:textColor="#ff333333"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_marginBottom="@dimen/dp_12"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/iv_diamond"
                        android:layout_marginTop="@dimen/dp_12"
                        android:gravity="center"
                        android:minWidth="@dimen/dp_47"
                        android:text="裁判等级"
                        android:textColor="#ff666666"
                        android:textSize="12sp" />
                </LinearLayout>

                <View
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp_1"
                    android:layout_weight="1" />

                <LinearLayout
                    android:layout_marginRight="@dimen/dp_35"
                    android:layout_width="wrap_content"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <ImageView
                        android:id="@+id/iv_grade_icon"
                        android:layout_width="@dimen/dp_46"
                        android:layout_height="@dimen/dp_41"
                        android:layout_marginTop="@dimen/dp_18"
                        android:src="@drawable/img_grade_yellow_icon" />

                    <TextView
                        android:id="@+id/tv_match_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_10"
                        android:text="0分"
                        android:textColor="#ff333333"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_marginTop="@dimen/dp_12"
                        android:layout_marginBottom="@dimen/dp_21"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="裁判积分"
                        android:textColor="#ff666666"
                        android:textSize="12sp" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/tv_apply_caipan"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dp_25"
                android:layout_marginRight="@dimen/dp_25"
                android:layout_marginBottom="@dimen/dp_20"
                android:background="@drawable/shape_club_blue"
                android:gravity="center"
                android:onClick="@{v->listener.onClick(v)}"
                android:text="申请成为裁判员"
                android:textColor="@color/white" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_15"
            android:background="@color/color_f5" />

        <LinearLayout
            android:id="@+id/ll_caipan_certificate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:background="@color/white"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginBottom="@dimen/dp_15"
                android:gravity="center"
                android:text="裁判员证书"
                android:textColor="#ff333333"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/iv_caipan_detail"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_140"
                android:layout_marginLeft="@dimen/dp_12"
                android:layout_marginRight="@dimen/dp_12"
                android:layout_marginBottom="@dimen/dp_25"
                android:scaleType="centerCrop"
                android:src="@drawable/img_referee_certification_icon" />

            <TextView
                android:id="@+id/tv_caipan_jingli"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_45"
                android:layout_marginRight="@dimen/dp_45"
                android:background="@drawable/shape_blue_stroke_write_solid"
                android:gravity="center"
                android:onClick="@{v->listener.onClick(v)}"
                android:paddingTop="@dimen/dp_13"
                android:paddingBottom="@dimen/dp_13"
                android:text="执裁经历"
                android:textColor="#4795ED" />
        </LinearLayout>
    </LinearLayout>
</layout>