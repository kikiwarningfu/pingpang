<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_write_corners_5"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_96"
            android:background="@drawable/shape_club_blue">

            <ImageView
                android:id="@+id/iv_logo"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_8"
                android:layout_marginTop="@dimen/dp_7"
                android:text="2020-09-01"
                android:textColor="#ffffffff"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/tv_people_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/dp_7"
                android:layout_marginRight="@dimen/dp_8"
                android:text="2000"
                android:textColor="#ffffffff"
                android:textSize="11sp" />

            <ImageView
                android:layout_width="@dimen/dp_12"
                android:layout_height="@dimen/dp_12"
                android:layout_marginTop="@dimen/dp_6"
                android:layout_marginRight="@dimen/dp_6"
                android:layout_toLeftOf="@id/tv_people_num"
                android:src="@drawable/img_live_logo_write" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:gravity="center"
                android:paddingLeft="@dimen/dp_3"
                android:paddingRight="@dimen/dp_3"
                android:paddingTop="@dimen/dp_2"
                android:paddingBottom="@dimen/dp_2"
                android:layout_alignParentBottom="true"
                android:background="@drawable/shape_live_corners_5"
                android:layout_marginLeft="@dimen/dp_8"
                android:layout_marginBottom="@dimen/dp_10"
                android:orientation="horizontal">

                <View
                    android:id="@+id/view_live"
                    android:layout_marginRight="@dimen/dp_3"
                    android:layout_width="@dimen/dp_2"
                    android:layout_height="@dimen/dp_2"
                    android:background="@drawable/shape_red_circle" />
                <TextView
                    android:id="@+id/tv_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="直播中"
                    android:textColor="#ff333333"
                    android:textSize="6sp"
                    />
            </LinearLayout>
        </RelativeLayout>

    </LinearLayout>

</layout>