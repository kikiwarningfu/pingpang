<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="listener"
            type="android.view.View.OnClickListener" />
    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical"
        tools:context=".ui.homepage.activity.CreateEventsActivity">


        <heyong.handong.framework.widget.TopBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:centerText="更换绑定手机号" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="#F6F6F6" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_59"
            android:layout_marginBottom="@dimen/dp_44"
            android:gravity="center"
            android:text="新手机号"
            android:textColor="#ff333333"
            android:textSize="16sp" />

        <LinearLayout
            android:id="@+id/ll_code_certify"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_50"
                android:layout_marginRight="@dimen/dp_50"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/et_tel"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp_30"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="请输入手机号"
                    android:textColor="#ff333333"
                    android:textSize="15sp" />



                <heyong.handong.framework.widget.CountDownButton
                    android:id="@+id/btn_get_verify_code"
                    android:layout_width="@dimen/dp_90"
                    android:layout_height="@dimen/dp_32"
                    android:background="@drawable/shape_solid_blue"
                    android:gravity="center"
                    android:onClick="@{v->listener.onClick(v)}"
                    android:text="获取验证码"
                    android:textColor="#4795ED"
                    android:textSize="@dimen/sp_14" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:layout_marginLeft="@dimen/dp_50"
                android:layout_marginTop="@dimen/dp_4"
                android:layout_marginRight="@dimen/dp_50"
                android:layout_marginBottom="@dimen/dp_28"
                android:background="#F5F5F5" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_50"
                android:layout_marginRight="@dimen/dp_50">

                <EditText
                    android:id="@+id/et_tel_code"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dp_60"
                    android:background="@null"
                    android:hint="验证码"
                    android:inputType="text"
                    android:maxLength="6"
                    android:paddingBottom="@dimen/dp_13"
                    android:textColor="#333333"
                    android:textSize="@dimen/sp_15"></EditText>

                <ImageView
                    android:id="@+id/iv_tel_code_clear"
                    android:layout_width="@dimen/dp_16"
                    android:layout_height="@dimen/dp_16"
                    android:layout_alignBottom="@id/et_tel_code"
                    android:layout_alignParentRight="true"
                    android:layout_marginBottom="@dimen/dp_13"
                    android:src="@drawable/img_clear_empty"
                    android:visibility="visible" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:layout_marginLeft="@dimen/dp_50"
                android:layout_marginRight="@dimen/dp_50"
                android:layout_marginBottom="@dimen/dp_64"
                android:background="#F5F5F5" />
        </LinearLayout>


        <TextView
            android:id="@+id/tv_login"
            android:layout_width="match_parent"
            android:layout_marginLeft="@dimen/dp_50"
            android:layout_marginRight="@dimen/dp_50"
            android:paddingTop="@dimen/dp_14"
            android:paddingBottom="@dimen/dp_13"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/shape_gray_corners_stroke"
            android:gravity="center"
            android:onClick="@{v->listener.onClick(v)}"
            android:text="下一步"
            android:textColor="#B2B2B2"
            android:textSize="@dimen/sp_15" />


    </LinearLayout>
</layout>