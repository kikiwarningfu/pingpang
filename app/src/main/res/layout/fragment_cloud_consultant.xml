<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="listener"
            type="android.view.View.OnClickListener" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/dp_10"
            android:background="@color/white"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dp_27"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_27"
                android:layout_marginBottom="@dimen/dp_10"
                android:background="@drawable/shape_search_gray_bg">

                <ImageView
                    android:layout_width="@dimen/dp_21"
                    android:layout_height="@dimen/dp_21"
                    android:layout_marginLeft="@dimen/dp_14"
                    android:layout_marginTop="@dimen/dp_4"
                    android:layout_marginBottom="@dimen/dp_4"
                    android:src="@drawable/icon_club_search" />

                <EditText
                    android:id="@+id/et_search_title"
                    android:layout_width="match_parent"
                    android:imeOptions="actionSearch"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dp_14"
                    android:layout_marginRight="@dimen/dp_5"
                    android:background="@null"
                    android:hint="输入赛事名称搜索"
                    android:inputType="text"
                    android:maxLines="1"
                    android:textColor="@color/black"
                    android:textColorHint="#999999"
                    android:textSize="@dimen/sp_14" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="#F6F6F6" />


        </LinearLayout>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/color_f5"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="vertical"
                    android:paddingLeft="@dimen/dp_12"
                    android:paddingTop="@dimen/dp_20"
                    android:paddingBottom="@dimen/dp_20">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dp_20"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_register_all_status"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/shape_club_blue"
                            android:onClick="@{v->listener.onClick(v)}"
                            android:paddingLeft="@dimen/dp_16"
                            android:paddingTop="@dimen/dp_9"
                            android:paddingRight="@dimen/dp_16"
                            android:paddingBottom="@dimen/dp_9"
                            android:text="全部状态"
                            android:textColor="@color/white" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="30dp"
                            android:layout_weight="38" />

                        <TextView
                            android:id="@+id/tv_register_of"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:onClick="@{v->listener.onClick(v)}"
                            android:paddingLeft="@dimen/dp_10"
                            android:paddingTop="@dimen/dp_9"
                            android:paddingRight="@dimen/dp_10"
                            android:paddingBottom="@dimen/dp_9"
                            android:text="报名中"
                            android:textColor="#ff333333"
                            android:textSize="12sp" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="30dp"
                            android:layout_weight="50" />

                        <TextView
                            android:id="@+id/tv_register_under_way"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:onClick="@{v->listener.onClick(v)}"
                            android:paddingLeft="@dimen/dp_10"
                            android:paddingTop="@dimen/dp_9"
                            android:paddingRight="@dimen/dp_10"
                            android:paddingBottom="@dimen/dp_9"
                            android:text="进行中"
                            android:textColor="#ff333333"
                            android:textSize="12sp" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="30dp"
                            android:layout_weight="50" />

                        <TextView
                            android:id="@+id/tv_register_end"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/dp_28"
                            android:onClick="@{v->listener.onClick(v)}"
                            android:paddingLeft="@dimen/dp_10"
                            android:paddingTop="@dimen/dp_9"
                            android:paddingRight="@dimen/dp_10"
                            android:paddingBottom="@dimen/dp_9"
                            android:text="已结束"
                            android:textColor="#ff333333"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dp_20"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_city_level_all"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/shape_club_blue"
                            android:onClick="@{v->listener.onClick(v)}"
                            android:paddingLeft="@dimen/dp_10"
                            android:paddingTop="@dimen/dp_9"
                            android:paddingRight="@dimen/dp_10"
                            android:paddingBottom="@dimen/dp_9"
                            android:text="全部城市级"
                            android:textColor="@color/white" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="30dp"
                            android:layout_weight="38" />

                        <TextView
                            android:id="@+id/tv_city_level_country"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:onClick="@{v->listener.onClick(v)}"
                            android:paddingLeft="@dimen/dp_10"
                            android:paddingTop="@dimen/dp_9"
                            android:paddingRight="@dimen/dp_10"
                            android:paddingBottom="@dimen/dp_9"
                            android:text="全国级"
                            android:textColor="#ff333333"
                            android:textSize="12sp" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="30dp"
                            android:layout_weight="48" />

                        <TextView
                            android:id="@+id/tv_city_level_province"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:onClick="@{v->listener.onClick(v)}"
                            android:paddingLeft="@dimen/dp_10"
                            android:paddingTop="@dimen/dp_9"
                            android:paddingRight="@dimen/dp_10"
                            android:paddingBottom="@dimen/dp_9"
                            android:text="省级"
                            android:textColor="#ff333333"
                            android:textSize="12sp" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="30dp"
                            android:layout_weight="50" />

                        <TextView
                            android:id="@+id/tv_city_level_city"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/dp_60"
                            android:onClick="@{v->listener.onClick(v)}"
                            android:paddingLeft="@dimen/dp_10"
                            android:paddingTop="@dimen/dp_9"
                            android:paddingRight="@dimen/dp_10"
                            android:paddingBottom="@dimen/dp_9"
                            android:text="市级"
                            android:textColor="#ff333333"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_level_all"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/shape_club_blue"
                            android:onClick="@{v->listener.onClick(v)}"
                            android:paddingLeft="@dimen/dp_10"
                            android:paddingTop="@dimen/dp_9"
                            android:paddingRight="@dimen/dp_10"
                            android:paddingBottom="@dimen/dp_9"
                            android:text="全部水平级"
                            android:textColor="@color/white" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="30dp"
                            android:layout_weight="39" />

                        <TextView
                            android:id="@+id/tv_level_professional"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:onClick="@{v->listener.onClick(v)}"
                            android:paddingLeft="@dimen/dp_10"
                            android:paddingTop="@dimen/dp_9"
                            android:paddingRight="@dimen/dp_10"
                            android:paddingBottom="@dimen/dp_9"
                            android:text="专业级"
                            android:textColor="#ff333333"
                            android:textSize="12sp" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="30dp"
                            android:layout_weight="48" />

                        <TextView
                            android:id="@+id/tv_level_amateur"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:onClick="@{v->listener.onClick(v)}"
                            android:paddingLeft="@dimen/dp_10"
                            android:paddingTop="@dimen/dp_9"
                            android:paddingRight="@dimen/dp_10"
                            android:paddingBottom="@dimen/dp_9"
                            android:text="业余级"
                            android:textColor="#ff333333"
                            android:textSize="12sp" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="30dp"
                            android:layout_weight="49" />

                        <TextView
                            android:visibility="invisible"
                            android:id="@+id/tv_level_children"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/dp_39"
                            android:onClick="@{v->listener.onClick(v)}"
                            android:paddingLeft="@dimen/dp_10"
                            android:paddingTop="@dimen/dp_9"
                            android:paddingRight="@dimen/dp_10"
                            android:paddingBottom="@dimen/dp_9"
                            android:text="少儿级"
                            android:textColor="#ff333333"
                            android:textSize="12sp" />
                    </LinearLayout>
                </LinearLayout>

                <com.scwang.smartrefresh.layout.SmartRefreshLayout
                    android:id="@+id/sw_fresh"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/mRecyclerView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/dp_12"
                        android:layout_marginTop="@dimen/dp_15"
                        android:layout_marginRight="@dimen/dp_12"
                        android:paddingBottom="@dimen/dp_46"
                        android:layout_marginBottom="@dimen/dp_125" />
                </com.scwang.smartrefresh.layout.SmartRefreshLayout>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </LinearLayout>

</layout>
