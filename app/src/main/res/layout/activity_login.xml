<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="listener"
            type="android.view.View.OnClickListener" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:gravity="right"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/tv_back_finish"
                            android:layout_width="@dimen/dp_21"
                            android:layout_height="@dimen/dp_21"
                            android:layout_marginTop="@dimen/dp_14"
                            android:layout_marginRight="@dimen/dp_12"
                            android:onClick="@{v->listener.onClick(v)}"
                            android:src="@drawable/icon_black_close" />

                    </LinearLayout>

                    <ImageView
                        android:layout_width="@dimen/dp_95"
                        android:layout_height="@dimen/dp_27"
                        android:layout_marginLeft="@dimen/dp_24"
                        android:layout_marginTop="@dimen/dp_4"
                        android:layout_marginBottom="@dimen/dp_12"
                        android:src="@drawable/icon_login_logo" />

                    <TextView
                        android:id="@+id/tv_title_login_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_25"
                        android:layout_marginBottom="@dimen/dp_13"
                        android:text="验证码登录"
                        android:textColor="#ff333333"
                        android:textSize="21sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:id="@+id/ll_login_password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <EditText
                                android:id="@+id/et_tel"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/dp_50"
                                android:layout_marginTop="@dimen/dp_44"
                                android:layout_marginRight="@dimen/dp_80"
                                android:background="@null"
                                android:hint="手机号"
                                android:inputType="number"
                                android:maxLength="11"
                                android:paddingBottom="@dimen/dp_13"
                                android:textColor="#333333"
                                android:textColorHint="#B2B2B2"
                                android:textSize="@dimen/sp_15"></EditText>

                            <ImageView
                                android:id="@+id/iv_tel_phone_clear"
                                android:layout_width="@dimen/dp_16"
                                android:layout_height="@dimen/dp_16"
                                android:layout_alignBottom="@id/et_tel"
                                android:layout_alignParentRight="true"
                                android:layout_marginRight="@dimen/dp_50"
                                android:layout_marginBottom="@dimen/dp_12"
                                android:src="@drawable/img_clear_empty"
                                android:visibility="gone" />
                        </RelativeLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_0_5"
                            android:layout_marginLeft="@dimen/dp_50"
                            android:layout_marginRight="@dimen/dp_50"
                            android:background="#F5F5F5" />

                        <TextView
                            android:id="@+id/tv_tel_password_error"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_50"
                            android:layout_marginTop="@dimen/dp_3"
                            android:text="手机号不正确"
                            android:textColor="#fff0180d"
                            android:textSize="10sp"
                            android:visibility="gone" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <EditText
                                android:id="@+id/et_password"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/dp_50"
                                android:layout_marginTop="@dimen/dp_15"
                                android:layout_marginRight="@dimen/dp_80"
                                android:background="@null"
                                android:hint="密码"
                                android:inputType="text"
                                android:paddingBottom="@dimen/dp_13"
                                android:textColor="#333333"
                                android:textColorHint="#B2B2B2"
                                android:textSize="@dimen/sp_15"></EditText>

                            <ImageView
                                android:id="@+id/iv_password_clear"
                                android:layout_width="@dimen/dp_16"
                                android:layout_height="@dimen/dp_16"
                                android:layout_alignBottom="@id/et_password"
                                android:layout_alignParentRight="true"
                                android:layout_marginRight="@dimen/dp_50"
                                android:layout_marginBottom="@dimen/dp_12"
                                android:src="@drawable/img_clear_empty"
                                android:visibility="gone" />

                        </RelativeLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_0_5"
                            android:layout_marginLeft="@dimen/dp_50"
                            android:layout_marginRight="@dimen/dp_50"
                            android:layout_marginBottom="@dimen/dp_20"
                            android:background="#F5F5F5" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/tv_forget_password"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_marginRight="@dimen/dp_50"
                                android:layout_marginBottom="@dimen/dp_26"
                                android:onClick="@{v->listener.onClick(v)}"
                                android:text="忘记密码"
                                android:textColor="#ff4795ed"
                                android:textSize="12sp" />
                        </RelativeLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_code_login"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="visible">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_25"
                            android:layout_marginBottom="@dimen/dp_50"
                            android:text="未注册手机号验证后自动注册"
                            android:textColor="#ff999999"
                            android:textSize="12sp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_50"
                            android:layout_marginRight="@dimen/dp_50"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <EditText
                                    android:id="@+id/et_tel_code_login"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="@dimen/dp_30"
                                    android:layout_weight="1"
                                    android:background="@null"
                                    android:hint="手机号"
                                    android:inputType="number"
                                    android:maxLength="11"
                                    android:textColor="#333333"
                                    android:textColorHint="#B2B2B2"
                                    android:textSize="@dimen/sp_15" />

                                <ImageView
                                    android:id="@+id/iv_tel_code_login_clear"
                                    android:layout_width="@dimen/dp_16"
                                    android:layout_height="@dimen/dp_16"
                                    android:layout_marginTop="@dimen/dp_6"
                                    android:src="@drawable/img_clear_empty"
                                    android:visibility="gone" />

                                <heyong.handong.framework.widget.CountDownButton
                                    android:id="@+id/btn_get_verify_code"
                                    android:layout_width="@dimen/dp_90"
                                    android:layout_height="@dimen/dp_32"
                                    android:visibility="visible"
                                    android:layout_marginLeft="@dimen/dp_20"
                                    android:background="@drawable/shape_solid_gray"
                                    android:gravity="center"
                                    android:onClick="@{v->listener.onClick(v)}"
                                    android:text="获取验证码"
                                    android:textColor="#cccccc"
                                    android:textSize="@dimen/sp_15" />


                            </LinearLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/dp_1"
                                android:layout_marginTop="@dimen/dp_8"
                                android:background="@color/color_f5" />

                            <TextView
                                android:id="@+id/tv_code_login_number_error"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dp_3"
                                android:text="手机号不正确"
                                android:textColor="#fff0180d"
                                android:textSize="10sp"
                                android:visibility="gone" />

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dp_15">

                                <EditText
                                    android:id="@+id/et_tel_code"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="@dimen/dp_60"
                                    android:background="@null"
                                    android:hint="验证码"
                                    android:inputType="number"
                                    android:maxLength="6"
                                    android:paddingBottom="@dimen/dp_13"
                                    android:textColor="#333333"
                                    android:textColorHint="#B2B2B2"
                                    android:textSize="@dimen/sp_15"></EditText>

                                <ImageView
                                    android:id="@+id/iv_tel_code_clear"
                                    android:layout_width="@dimen/dp_16"
                                    android:layout_height="@dimen/dp_16"
                                    android:layout_alignBottom="@id/et_tel_code"
                                    android:layout_alignParentRight="true"
                                    android:layout_marginBottom="@dimen/dp_13"
                                    android:src="@drawable/img_clear_empty"
                                    android:visibility="gone" />

                            </RelativeLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/dp_0_5"
                                android:layout_marginBottom="@dimen/dp_25"
                                android:background="@color/color_f5" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_43"
                        android:layout_marginRight="@dimen/dp_50"
                        android:layout_marginBottom="@dimen/dp_23"
                        android:orientation="horizontal">

                        <CheckBox
                            android:id="@+id/cb_check"
                            android:layout_width="@dimen/dp_22"
                            android:layout_height="@dimen/dp_22"
                            android:layout_marginTop="@dimen/dp_0_5"
                            android:layout_marginRight="@dimen/dp_2"
                            android:background="@null"
                            android:button="@null"
                            android:drawableLeft="@drawable/check_log"
                            android:onClick="@{v->listener.onClick(v)}" />

                        <LinearLayout
                            android:layout_marginTop="@dimen/dp_5"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="我已阅读并同意小亮智乒"
                                android:textColor="#000000"
                                android:textSize="@dimen/sp_11" />

                            <TextView
                                android:id="@+id/tv_user_agreement"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:onClick="@{v->listener.onClick(v)}"
                                android:text="用户协议"
                                android:textColor="#4795ED"
                                android:textSize="@dimen/sp_11" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="和"
                                android:textColor="#000000"
                                android:textSize="@dimen/sp_11" />

                            <TextView
                                android:id="@+id/tv_policy"
                                android:onClick="@{v->listener.onClick(v)}"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="隐私政策"
                                android:textColor="#4795ED"
                                android:textSize="@dimen/sp_11" />
                        </LinearLayout>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_login"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/dp_50"
                        android:layout_marginRight="@dimen/dp_50"
                        android:background="@drawable/shape_no_commit"
                        android:gravity="center"
                        android:onClick="@{v->listener.onClick(v)}"
                        android:paddingTop="@dimen/dp_14"
                        android:paddingBottom="@dimen/dp_13"
                        android:text="登录"
                        android:textColor="#B2B2B2"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tv_login_type"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_25"
                        android:gravity="center"
                        android:onClick="@{v->listener.onClick(v)}"
                        android:text="密码登录"
                        android:textColor="#ff4795ed"
                        android:textSize="12sp" />
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2.6">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="@dimen/dp_70"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginBottom="@dimen/dp_20"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <View
                                android:layout_width="@dimen/dp_70"
                                android:layout_height="@dimen/dp_0_5"
                                android:background="#333333" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/dp_5"
                                android:layout_marginRight="@dimen/dp_5"
                                android:text="其他登录方式"
                                android:textColor="#ff333333"
                                android:textSize="12sp" />

                            <View
                                android:layout_width="@dimen/dp_70"
                                android:layout_height="@dimen/dp_0_5"
                                android:background="#333333" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/iv_we_chat"
                                android:layout_width="@dimen/dp_41"
                                android:layout_height="@dimen/dp_41"
                                android:onClick="@{v->listener.onClick(v)}"
                                android:src="@drawable/icon_login_wechat" />
<!--                                android:layout_marginRight="@dimen/dp_56"
-->
                            <ImageView
                                android:visibility="gone"
                                android:id="@+id/iv_qq"
                                android:layout_width="@dimen/dp_41"
                                android:layout_height="@dimen/dp_41"
                                android:onClick="@{v->listener.onClick(v)}"
                                android:src="@drawable/icon_login_qq" />
                        </LinearLayout>
                    </LinearLayout>
                </RelativeLayout>

            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

    </LinearLayout>

</layout>
