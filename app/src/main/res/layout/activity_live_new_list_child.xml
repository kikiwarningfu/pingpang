<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="listener"
            type="android.view.View.OnClickListener" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">


        <RelativeLayout
            android:id="@+id/top_bar_relative"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/dp_22"
            android:background="@color/white">

            <ImageView
                android:id="@+id/iv_finish"
                android:onClick="@{v->listener.onClick(v)}"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/page_padding"
                android:paddingRight="@dimen/page_padding"
                android:src="@drawable/icon_left_back" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/ll_play_back"
                    android:layout_width="@dimen/dp_40"
                    android:layout_height="wrap_content"
                    android:onClick="@{v->listener.onClick(v)}"
                    android:orientation="vertical"
                    android:paddingTop="@dimen/dp_10">

                    <TextView
                        android:id="@+id/tv_play_back"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:paddingBottom="@dimen/dp_13"
                        android:text="回放"
                        android:textColor="#333333"
                        android:textSize="16sp" />

                    <View
                        android:id="@+id/view_play_back"
                        android:layout_width="@dimen/dp_40"
                        android:layout_height="@dimen/dp_2"
                        android:background="#4795ED"
                        android:visibility="gone" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_to_live"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_19"
                    android:onClick="@{v->listener.onClick(v)}"
                    android:orientation="vertical"
                    android:paddingTop="@dimen/dp_10">

                    <TextView
                        android:id="@+id/tv_to_live"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:paddingBottom="@dimen/dp_13"
                        android:text="直播"
                        android:textColor="#4795ED"
                        android:textSize="19sp"
                        android:textStyle="bold" />

                    <View
                        android:id="@+id/view_to_live"
                        android:layout_width="@dimen/dp_40"
                        android:layout_height="@dimen/dp_2"
                        android:background="#4795ED" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_to_buy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_19"
                    android:onClick="@{v->listener.onClick(v)}"
                    android:orientation="vertical"
                    android:paddingTop="@dimen/dp_10">

                    <TextView
                        android:id="@+id/tv_to_buy"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:paddingBottom="@dimen/dp_13"
                        android:text="已购买"
                        android:textColor="#333333"
                        android:textSize="16sp" />

                    <View
                        android:id="@+id/view_to_buy"
                        android:layout_width="@dimen/dp_40"
                        android:layout_height="@dimen/dp_2"
                        android:background="#4795ED"
                        android:visibility="gone" />
                </LinearLayout>
            </LinearLayout>

        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical">
            <TextView

                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2020盐湖区乒乓球友谊赛"
                android:textColor="#ff666666"
                android:textSize="18sp"
                />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_30"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dp_21"
                android:layout_marginTop="@dimen/dp_21"
                android:layout_marginRight="@dimen/dp_21"
                android:layout_marginBottom="@dimen/dp_15"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/tv_all"
                            android:onClick="@{v->listener.onClick(v)}"
                            android:paddingLeft="@dimen/dp_8"
                            android:paddingRight="@dimen/dp_8"
                            android:background="@drawable/shape_blue_corners_12"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingTop="@dimen/dp_4"
                            android:paddingBottom="@dimen/dp_4"
                            android:text="全部"
                            android:textColor="#ff4795ed"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/tv_danda"
                            android:onClick="@{v->listener.onClick(v)}"
                            android:layout_marginLeft="@dimen/dp_25"
                            android:paddingLeft="@dimen/dp_8"
                            android:paddingRight="@dimen/dp_8"
                            android:background="@drawable/shape_gray_corners_12"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingTop="@dimen/dp_4"
                            android:paddingBottom="@dimen/dp_4"
                            android:text="单打"
                            android:textColor="#FF999999"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/tv_shuangda"
                            android:onClick="@{v->listener.onClick(v)}"
                            android:layout_marginLeft="@dimen/dp_25"
                            android:paddingLeft="@dimen/dp_8"
                            android:paddingRight="@dimen/dp_8"
                            android:background="@drawable/shape_gray_corners_12"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingTop="@dimen/dp_4"
                            android:paddingBottom="@dimen/dp_4"
                            android:text="双打"
                            android:textColor="#FF999999"
                            android:textSize="15sp" />
                        <TextView
                            android:id="@+id/tv_hunshuang"
                            android:onClick="@{v->listener.onClick(v)}"
                            android:layout_marginLeft="@dimen/dp_25"
                            android:paddingLeft="@dimen/dp_8"
                            android:paddingRight="@dimen/dp_8"
                            android:background="@drawable/shape_gray_corners_12"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingTop="@dimen/dp_4"
                            android:paddingBottom="@dimen/dp_4"
                            android:text="混双"
                            android:textColor="#FF999999"
                            android:textSize="15sp" />
                        <TextView
                            android:id="@+id/tv_tuanti"
                            android:onClick="@{v->listener.onClick(v)}"
                            android:layout_marginLeft="@dimen/dp_25"
                            android:paddingLeft="@dimen/dp_8"
                            android:paddingRight="@dimen/dp_8"
                            android:background="@drawable/shape_gray_corners_12"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingTop="@dimen/dp_4"
                            android:paddingBottom="@dimen/dp_4"
                            android:text="团体"
                            android:textColor="#FF999999"
                            android:textSize="15sp" />
                    </LinearLayout>
                </HorizontalScrollView>

            </LinearLayout>


            <androidx.viewpager.widget.ViewPager
                android:id="@+id/viewPager"
                android:background="@color/color_f5"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" />


        </LinearLayout>
    </LinearLayout>

</layout>
