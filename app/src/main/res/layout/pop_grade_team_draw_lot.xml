<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:background="@color/transparent_20"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_132"
                android:layout_marginLeft="@dimen/dp_8"
                android:layout_marginTop="@dimen/dp_16"
                android:layout_marginRight="@dimen/dp_8"
                android:scaleType="centerCrop"
                android:src="@drawable/img_zhuanpan_zhuo" />

            <LinearLayout
                android:layout_marginLeft="@dimen/dp_21"
                android:layout_marginRight="@dimen/dp_21"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal">


                        <LinearLayout
                            android:id="@+id/ll_left_two"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/dp_100"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:visibility="visible">

                            <TextView
                                android:id="@+id/tv_left_two_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/iv_left_club_logo"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="@dimen/dp_14"
                                android:layout_marginBottom="@dimen/dp_11"
                                android:text="洪亮俱乐部"
                                android:textColor="#fffefefe"
                                android:textSize="12sp" />

                            <TextView
                                android:visibility="visible"
                                android:id="@+id/tv_left_one_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:text="洪亮俱乐部"
                                android:textColor="#fffefefe"
                                android:textSize="12sp" />
                        </LinearLayout>
                    </LinearLayout>


                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/dp_100"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:visibility="visible">

                            <TextView
                                android:id="@+id/tv_right_two_name"
                                android:visibility="visible"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/iv_left_club_logo"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="@dimen/dp_14"
                                android:layout_marginBottom="@dimen/dp_11"
                                android:text="洪亮俱乐部"
                                android:textColor="#fffefefe"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/tv_right_one_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:text="洪亮俱乐部"
                                android:textColor="#fffefefe"
                                android:textSize="12sp" />
                        </LinearLayout>
                    </LinearLayout>


                </RelativeLayout>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/img_zhizhen"
                    android:layout_width="@dimen/dp_72"
                    android:layout_height="@dimen/dp_122"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/dp_3"
                    android:src="@drawable/img_duinei_chouqian">

                </ImageView>

                <TextView
                    android:id="@+id/tv_start"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/dp_51"
                    android:onClick="@{v->listener.onClick(v)}"
                    android:text="抽签"
                    android:textColor="#ff4795ed"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:visibility="visible" />
            </RelativeLayout>
        </FrameLayout>

        <TextView
            android:id="@+id/tv_submit"
            android:visibility="invisible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dp_52"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_52"
            android:background="@drawable/shape_club_blue"
            android:gravity="center"
            android:onClick="@{v->listener.onClick(v)}"
            android:paddingTop="@dimen/dp_14"
            android:paddingBottom="@dimen/dp_13"
            android:text="开始比赛"
            android:textColor="#FFFFFF"
            android:textSize="14sp" />
    </LinearLayout>
</RelativeLayout>