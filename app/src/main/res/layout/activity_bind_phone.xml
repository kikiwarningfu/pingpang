<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
                name="listener"
                type="android.view.View.OnClickListener" />
    </data>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:gravity="right"
                android:orientation="horizontal">

            <ImageView
                    android:id="@+id/iv_close"
                    android:onClick="@{v->listener.onClick(v)}"
                    android:layout_width="@dimen/dp_21"
                    android:layout_height="@dimen/dp_21"
                    android:layout_marginTop="@dimen/dp_14"
                    android:layout_marginRight="@dimen/dp_12"
                    android:src="@drawable/icon_black_close"
                    android:visibility="visible" />

        </LinearLayout>

        <ImageView
                android:layout_width="@dimen/dp_95"
                android:layout_height="@dimen/dp_27"
                android:layout_marginLeft="@dimen/dp_24"
                android:layout_marginTop="@dimen/dp_4"
                android:layout_marginBottom="@dimen/dp_12"
                android:src="@drawable/icon_login_logo" />

        <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_25"
                android:layout_marginBottom="@dimen/dp_13"
                android:text="绑定手机号"
                android:textColor="#ff333333"
                android:textSize="21sp"
                android:textStyle="bold" />

        <TextView
                android:layout_marginLeft="@dimen/dp25"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="未注册手机号验证后自动注册"
                android:textColor="#ff999999"
                android:textSize="12sp" />

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_50"
                android:layout_marginTop="@dimen/dp_51"
                android:layout_marginRight="@dimen/dp_50"
                android:orientation="vertical">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                <EditText
                        android:id="@+id/et_tel"
                        android:inputType="number"
                        android:maxLength="11"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@null"
                        android:hint="手机号"
                        android:textSize="@dimen/sp_15" />

                <ImageView
                    android:visibility="gone"
                        android:id="@+id/iv_tel_close"
                        android:layout_width="@dimen/dp_16"
                        android:layout_height="@dimen/dp_16"
                        android:layout_marginTop="@dimen/dp_6"
                        android:src="@drawable/img_clear_empty" />

                <heyong.handong.framework.widget.CountDownButton
                        android:id="@+id/btn_get_verify_code"
                        android:layout_width="@dimen/dp_90"
                        android:layout_height="@dimen/dp_32"
                        android:layout_marginLeft="@dimen/dp_20"
                        android:background="@drawable/shape_solid_gray"
                        android:gravity="center"
                        android:onClick="@{v->listener.onClick(v)}"
                        android:text="获取验证码"
                        android:textColor="#cccccc"
                        android:textSize="@dimen/sp_15" />


            </LinearLayout>

            <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:layout_marginTop="@dimen/dp_8"
                    android:background="@color/color_f5" />

            <TextView
                    android:visibility="gone"
                    android:id="@+id/tv_tel_error"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_3"
                    android:text="手机号不正确"
                    android:textColor="#fff0180d"
                    android:textSize="10sp" />

            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_15">

                <EditText
                        android:id="@+id/et_tel_code"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:inputType="text"
                        android:hint="验证码"
                        android:paddingBottom="@dimen/dp_13"
                        android:textColor="#333333"
                        android:textSize="@dimen/sp_15"></EditText>

                <ImageView
                    android:visibility="gone"
                        android:id="@+id/iv_tel_code_close"
                        android:layout_width="@dimen/dp_16"
                        android:layout_height="@dimen/dp_16"
                        android:layout_alignBottom="@id/et_tel_code"
                        android:layout_alignParentRight="true"
                        android:layout_marginBottom="@dimen/dp_13"
                        android:src="@drawable/img_clear_empty" />

            </RelativeLayout>

            <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_0_5"
                    android:layout_marginBottom="@dimen/dp_25"
                    android:background="@color/color_f5" />

            <TextView
                    android:id="@+id/tv_login"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/shape_no_commit"
                    android:gravity="center"
                    android:onClick="@{v->listener.onClick(v)}"
                    android:paddingTop="@dimen/dp_14"
                    android:paddingBottom="@dimen/dp_13"
                    android:text="登录"
                    android:textColor="#B2B2B2"
                    android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>
</layout>
