<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent_20">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="@dimen/dp_27"
        android:layout_marginRight="@dimen/dp_27"
        android:background="@drawable/shape_write_corners_5"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_19"
            android:gravity="center"
            android:text="弃权"
            android:textColor="#ff333333"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll_one_give_up"
                android:layout_marginTop="@dimen/dp_18"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
               >
                <TextView
                    android:id="@+id/tv_give_up_left"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="@dimen/dp_53"
                    android:gravity="right"
                    android:layout_gravity="right"
                    android:layout_height="wrap_content"
                    android:text="宏亮俱乐部/一弃权"
                    android:textColor="#ff666666"
                    android:textSize="13sp"
                    />
                <ImageView
                    android:id="@+id/iv_left_give_up"
                    android:layout_marginLeft="@dimen/dp_42"
                    android:layout_marginRight="@dimen/dp_81"
                    android:src="@drawable/icon_login_unselected"
                    android:layout_width="@dimen/dp_16"
                    android:layout_height="@dimen/dp_16"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_two_give_up"
                android:layout_marginTop="@dimen/dp_18"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
             >
                <TextView
                    android:id="@+id/tv_give_up_right"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="@dimen/dp_53"
                    android:gravity="right"
                    android:layout_gravity="right"
                    android:layout_height="wrap_content"
                    android:text="宏亮俱乐部/二弃权"
                    android:textColor="#ff666666"
                    android:textSize="13sp"
                    />

                <ImageView
                    android:id="@+id/iv_right_give_up"
                    android:layout_marginRight="@dimen/dp_81"
                    android:layout_marginLeft="@dimen/dp_42"
                    android:src="@drawable/icon_login_unselected"
                    android:layout_width="@dimen/dp_16"
                    android:layout_height="@dimen/dp_16"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_double_give_up"
                android:layout_marginTop="@dimen/dp_18"
                android:layout_width="match_parent"
                android:layout_marginBottom="@dimen/dp_20"
                android:layout_height="wrap_content"
                android:gravity="center">
                <TextView
                    android:layout_marginLeft="@dimen/dp_53"

                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_gravity="right"
                    android:gravity="right"
                    android:layout_height="wrap_content"
                    android:text="双弃权"
                    android:textColor="#ff666666"
                    android:textSize="13sp"
                    />

                <ImageView
                    android:id="@+id/iv_all_give_up"
                    android:layout_marginRight="@dimen/dp_81"
                    android:layout_marginLeft="@dimen/dp_42"
                    android:src="@drawable/icon_login_unselected"
                    android:layout_width="@dimen/dp_16"
                    android:layout_height="@dimen/dp_16"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_19"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_sure"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_30"
                android:layout_marginRight="@dimen/dp_40"
                android:layout_weight="1.1"
                android:background="@drawable/shape_club_blue"
                android:gravity="center"
                android:paddingTop="@dimen/dp_11"
                android:paddingBottom="@dimen/dp_11"
                android:text="确定"
                android:textColor="#ffffffff"
                android:textSize="18sp" />



            <TextView
                android:id="@+id/tv_cancel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dp_30"
                android:layout_weight="1.1"
                android:background="@drawable/shape_club_gray"
                android:gravity="center"
                android:paddingTop="@dimen/dp_11"
                android:paddingBottom="@dimen/dp_11"
                android:text="取消"
                android:textColor="#ffffffff"
                android:textSize="18sp"
                android:visibility="visible" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>