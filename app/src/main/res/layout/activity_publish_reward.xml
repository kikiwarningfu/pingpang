<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="listener"
            type="android.view.View.OnClickListener" />
    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical"
        tools:context=".ui.homepage.activity.CreateEventsActivity">


        <heyong.handong.framework.widget.TopBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:centerText="发布悬赏令" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="#F6F6F6" />

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/color_f5"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_9"
                        android:layout_marginBottom="@dimen/dp_10"
                        android:background="@color/white"
                        android:orientation="vertical"
                        android:paddingTop="@dimen/dp_15">

                        <TextView
                            android:id="@+id/tv_match_title"

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/dp_15"
                            android:gravity="center"
                            android:text="2020盐湖区乒乓球友谊赛"
                            android:textColor="#ff333333"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/tv_group_title"

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/dp_15"
                            android:gravity="center"
                            android:text="成人组男子单打【第一阶段A组】"
                            android:textColor="#ff666666"
                            android:textSize="15sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:orientation="vertical">


                        <LinearLayout
                            android:id="@+id/ll_one"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_8"
                            android:layout_marginBottom="@dimen/dp_10"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:visibility="gone">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginRight="@dimen/dp_46"
                                android:gravity="center"
                                android:orientation="vertical">

                                <de.hdodenhof.circleimageview.CircleImageView
                                    android:id="@+id/view_left_logo"
                                    android:layout_width="@dimen/dp_52"
                                    android:layout_height="@dimen/dp_52"
                                    android:src="@drawable/img_default_avatar" />

                                <TextView
                                    android:id="@+id/tv_left_name"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/dp_13"
                                    android:text="郭德纲"
                                    android:textColor="#ff333333"
                                    android:textSize="15sp" />
                            </LinearLayout>

                            <ImageView
                                android:layout_width="@dimen/dp_30"
                                android:layout_height="@dimen/dp_17"
                                android:src="@drawable/img_versus_icon" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginLeft="@dimen/dp_46"
                                android:gravity="center"
                                android:orientation="vertical">

                                <de.hdodenhof.circleimageview.CircleImageView
                                    android:id="@+id/view_right_oval"
                                    android:layout_width="@dimen/dp_52"
                                    android:layout_height="@dimen/dp_52"
                                    android:src="@drawable/img_default_avatar" />

                                <TextView
                                    android:id="@+id/tv_right_name"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/dp_13"
                                    android:text="郭德纲"
                                    android:textColor="#ff333333"
                                    android:textSize="15sp" />
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ll_two"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_14"
                            android:layout_marginBottom="@dimen/dp_10"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:visibility="visible">

                            <LinearLayout
                                android:id="@+id/ll_left_one"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginRight="@dimen/dp_20"
                                android:gravity="center"
                                android:orientation="vertical">

                                <de.hdodenhof.circleimageview.CircleImageView
                                    android:id="@+id/iv_left_one_logo"
                                    android:layout_width="@dimen/dp_40"
                                    android:layout_height="@dimen/dp_40"
                                    android:src="@drawable/img_default_avatar" />

                                <TextView
                                    android:id="@+id/tv_left_name_one"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/dp_13"
                                    android:textColor="#ff333333"
                                    android:textSize="15sp" />
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/ll_left_two"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginRight="@dimen/dp_29"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:visibility="visible">

                                <de.hdodenhof.circleimageview.CircleImageView
                                    android:id="@+id/iv_left_two_logo"
                                    android:layout_width="@dimen/dp_40"
                                    android:layout_height="@dimen/dp_40"
                                    android:src="@drawable/img_default_avatar" />

                                <TextView
                                    android:id="@+id/tv_left_name_two"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/dp_13"
                                    android:textColor="#ff333333"
                                    android:textSize="15sp" />
                            </LinearLayout>

                            <ImageView
                                android:layout_width="@dimen/dp_30"
                                android:layout_height="@dimen/dp_17"
                                android:src="@drawable/img_versus_icon" />

                            <LinearLayout
                                android:id="@+id/ll_right_one"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginLeft="@dimen/dp_30"
                                android:gravity="center"
                                android:orientation="vertical">

                                <de.hdodenhof.circleimageview.CircleImageView
                                    android:id="@+id/iv_right_logo_one"
                                    android:layout_width="@dimen/dp_40"
                                    android:layout_height="@dimen/dp_40"
                                    android:src="@drawable/img_default_avatar" />

                                <TextView
                                    android:id="@+id/tv_right_name_one"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/dp_13"
                                    android:textColor="#ff333333"
                                    android:textSize="15sp" />
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/ll_right_two"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginLeft="@dimen/dp_20"
                                android:gravity="center"
                                android:orientation="vertical">

                                <de.hdodenhof.circleimageview.CircleImageView
                                    android:id="@+id/iv_right_logo_two"
                                    android:layout_width="@dimen/dp_40"
                                    android:layout_height="@dimen/dp_40"
                                    android:src="@drawable/img_default_avatar" />

                                <TextView
                                    android:id="@+id/tv_right_name_two"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/dp_13"
                                    android:textColor="#ff333333"
                                    android:textSize="15sp" />
                            </LinearLayout>
                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_1"
                            android:layout_marginLeft="@dimen/dp_20"
                            android:layout_marginRight="@dimen/dp_20"
                            android:background="#F6F6F6" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_14"
                            android:layout_marginBottom="@dimen/dp_20"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv_begin_time"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/dp_20"
                                android:text="比赛时间："
                                android:textColor="#999999"
                                android:textSize="12sp" />

                            <View
                                android:layout_width="0dp"
                                android:layout_height="@dimen/dp_1"
                                android:layout_weight="1" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="@dimen/dp_20"
                                android:textColor="#ff999999"
                                android:textSize="12sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingRight="@dimen/dp_20">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/dp_20"
                                android:layout_marginRight="@dimen/dp_80"
                                android:layout_marginBottom="@dimen/dp_19"
                                android:text="比赛地点："
                                android:textColor="#ff999999"
                                android:textSize="12sp" />

                            <View
                                android:layout_width="0dp"
                                android:layout_height="1dp"
                                android:layout_weight="1" />

                            <TextView
                                android:id="@+id/tv_address"

                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#ff999999"
                                android:textSize="12sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingRight="@dimen/dp_20">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/dp_20"
                                android:layout_marginRight="@dimen/dp_80"
                                android:layout_marginBottom="@dimen/dp_14"
                                android:text="比赛球台："
                                android:textColor="#ff999999"
                                android:textSize="12sp" />

                            <View
                                android:layout_width="0dp"
                                android:layout_height="1dp"
                                android:layout_weight="1" />

                            <TextView
                                android:id="@+id/tv_table_num"

                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#ff999999"
                                android:textSize="12sp" />
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_10"
                        android:background="@color/white"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/dp_20"
                                android:layout_marginTop="@dimen/dp_15"
                                android:text="是否要自己录制？"
                                android:textColor="#ff333333"
                                android:textSize="15sp" />

                            <View
                                android:layout_width="0dp"
                                android:layout_height="@dimen/dp_10"
                                android:layout_weight="1" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dp_16"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:orientation="horizontal">

                                    <LinearLayout
                                        android:id="@+id/ll_my_lubo"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:onClick="@{v->listener.onClick(v)}"
                                        android:orientation="horizontal">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginRight="@dimen/dp_9"
                                            android:text="是"
                                            android:textColor="#ff333333"
                                            android:textSize="15sp" />

                                        <ImageView
                                            android:id="@+id/iv_baoming_need_yes"
                                            android:layout_width="@dimen/dp_16"
                                            android:layout_height="@dimen/dp_16"
                                            android:layout_marginRight="@dimen/dp_24"
                                            android:onClick="@{v->listener.onClick(v)}"
                                            android:src="@drawable/icon_login_unselected" />
                                    </LinearLayout>

                                    <LinearLayout
                                        android:id="@+id/ll_no_lubo"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:onClick="@{v->listener.onClick(v)}"
                                        android:orientation="horizontal">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginRight="@dimen/dp_9"
                                            android:text="否"
                                            android:textColor="#ff333333"
                                            android:textSize="15sp" />

                                        <ImageView
                                            android:id="@+id/iv_baoming_need_no"
                                            android:layout_width="@dimen/dp_16"
                                            android:layout_height="@dimen/dp_16"
                                            android:layout_marginRight="@dimen/dp_19"
                                            android:onClick="@{v->listener.onClick(v)}"
                                            android:src="@drawable/icon_login_selected" />
                                    </LinearLayout>

                                </LinearLayout>

                            </LinearLayout>

                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_20"
                            android:layout_marginTop="@dimen/dp_10"
                            android:layout_marginBottom="@dimen/dp_15"
                            android:text="选择由自己录制将只收取平台费"
                            android:textColor="#ff999999"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_20"
                        android:layout_marginTop="@dimen/dp_15"
                        android:layout_marginBottom="@dimen/dp_14"
                        android:text="选择支付方式"
                        android:textColor="#ff999999"
                        android:textSize="12sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#FFFFFF"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/ll_cb_pay_wx"

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingLeft="@dimen/dp_19"
                            android:paddingTop="@dimen/dp_15"
                            android:paddingRight="@dimen/dp_19"
                            android:paddingBottom="@dimen/dp_15">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="微信支付"
                                android:textColor="#ff333333"
                                android:textSize="15sp" />

                            <View
                                android:layout_width="0dp"
                                android:layout_height="1dp"
                                android:layout_weight="1" />

                            <CheckBox
                                android:id="@+id/cb_pay_wx"
                                android:layout_width="@dimen/dp_25"
                                android:layout_height="@dimen/dp_25"
                                android:layout_marginRight="@dimen/dp_11"
                                android:background="@null"
                                android:button="@null"
                                android:drawableLeft="@drawable/check_log"
                                android:onClick="@{v->listener.onClick(v)}" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ll_cb_pay_zfb"

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingLeft="@dimen/dp_19"
                            android:paddingTop="@dimen/dp_15"
                            android:paddingRight="@dimen/dp_19"
                            android:paddingBottom="@dimen/dp_15">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="支付宝支付"
                                android:textColor="#ff333333"
                                android:textSize="15sp" />

                            <View
                                android:layout_width="0dp"
                                android:layout_height="1dp"
                                android:layout_weight="1" />

                            <CheckBox
                                android:id="@+id/cb_pay_zfb"
                                android:layout_width="@dimen/dp_25"
                                android:layout_height="@dimen/dp_25"
                                android:layout_marginRight="@dimen/dp_11"
                                android:background="@null"
                                android:button="@null"
                                android:drawableLeft="@drawable/check_log"
                                android:onClick="@{v->listener.onClick(v)}" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_54"
                    android:background="@color/white"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/dp_19">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="合计："
                        android:textColor="#ff333333"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/tv_money"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="¥10"
                        android:textColor="#E53333"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/tv_match_scount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/dp_11"
                        android:gravity="center"
                        android:text="（三局二胜制）"
                        android:textColor="#ff999999"
                        android:textSize="12sp" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="@dimen/dp_1"
                        android:layout_weight="1" />
                    <TextView
                        android:gravity="center"
                        android:background="#E03434"
                        android:text="提交订单"
                        android:textSize="18sp"
                        android:textColor="#FFFFFF"
                        android:layout_width="@dimen/dp_120"
                        android:layout_height="match_parent"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </LinearLayout>
</layout>