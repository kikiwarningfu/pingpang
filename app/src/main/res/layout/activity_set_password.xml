<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="listener"
            type="android.view.View.OnClickListener" />
    </data>

    <LinearLayout
        android:focusableInTouchMode="true"
        android:focusable="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:gravity="right"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_close"
                android:onClick="@{v->listener.onClick(v)}"
                android:layout_width="@dimen/dp_21"
                android:layout_height="@dimen/dp_21"
                android:layout_marginTop="@dimen/dp_14"
                android:layout_marginRight="@dimen/dp_12"
                android:src="@drawable/icon_black_close"
                android:visibility="visible" />

        </LinearLayout>

        <ImageView
            android:layout_width="@dimen/dp_95"
            android:layout_height="@dimen/dp_27"
            android:layout_marginLeft="@dimen/dp_24"
            android:layout_marginTop="@dimen/dp_4"
            android:layout_marginBottom="@dimen/dp_12"
            android:src="@drawable/icon_login_logo" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_25"
            android:layout_marginBottom="@dimen/dp_13"
            android:text="设置密码"
            android:textColor="#ff333333"
            android:textSize="21sp"
            android:textStyle="bold" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_25"
            android:layout_marginTop="@dimen/dp_45"
            android:layout_marginRight="@dimen/dp_50">

            <ImageView
                android:id="@+id/iv_eyes_one"
                android:layout_width="@dimen/dp_16"
                android:onClick="@{v->listener.onClick(v)}"
                android:layout_height="@dimen/dp_12"
                android:layout_marginTop="@dimen/dp_3"
                android:src="@drawable/img_password_invisible" />

            <EditText
                android:id="@+id/et_password_one"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_25"
                android:layout_marginRight="@dimen/dp_20"
                android:background="@null"
                android:hint="密码"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_15" />

            <ImageView
                android:visibility="gone"
                android:id="@+id/iv_close_one"
                android:layout_width="@dimen/dp_16"
                android:onClick="@{v->listener.onClick(v)}"

                android:layout_height="@dimen/dp_16"
                android:layout_alignParentRight="true"
                android:src="@drawable/img_clear_empty" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0_5"
            android:layout_marginLeft="@dimen/dp_50"
            android:layout_marginTop="@dimen/dp_12"
            android:layout_marginRight="@dimen/dp_50"
            android:background="@color/color_f5" />

        <TextView
            android:id="@+id/tv_password_one_tishi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_50"
            android:layout_marginTop="@dimen/dp_3"
            android:text="密码不能少于8位"
            android:textColor="#fff0180d"
            android:textSize="10sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_25"
            android:layout_marginTop="@dimen/dp_29"
            android:layout_marginRight="@dimen/dp_50">

            <ImageView

                android:id="@+id/iv_eyes_two"
                android:onClick="@{v->listener.onClick(v)}"
                android:layout_width="@dimen/dp_16"
                android:layout_height="@dimen/dp_12"
                android:layout_marginTop="@dimen/dp_3"
                android:src="@drawable/img_password_invisible"
                android:visibility="visible" />

            <EditText
                android:id="@+id/et_password_two"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_25"
                android:layout_marginRight="@dimen/dp_20"
                android:background="@null"
                android:hint="再次输入"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_15" />

            <ImageView
                android:visibility="gone"
                android:id="@+id/iv_close_two"
                android:onClick="@{v->listener.onClick(v)}"
                android:layout_width="@dimen/dp_16"
                android:layout_height="@dimen/dp_16"
                android:layout_alignParentRight="true"
                android:src="@drawable/img_clear_empty" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0_5"
            android:layout_marginLeft="@dimen/dp_50"
            android:layout_marginTop="@dimen/dp_12"
            android:layout_marginRight="@dimen/dp_50"
            android:background="#F5F5F5" />

        <TextView
            android:id="@+id/tv_password_two_tishi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_50"
            android:layout_marginTop="@dimen/dp_3"
            android:text="密码不一致"
            android:textColor="#fff0180d"
            android:textSize="10sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_50"
            android:layout_marginTop="@dimen/dp_26"
            android:layout_marginBottom="@dimen/dp_29"
            android:text="8-20位数字、字母或符号；不允许单一或重复"
            android:textColor="#ffcccccc"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/tv_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dp_50"
            android:layout_marginRight="@dimen/dp_50"
            android:background="@drawable/shape_club_blue"
            android:gravity="center"
            android:onClick="@{v->listener.onClick(v)}"
            android:paddingTop="@dimen/dp_14"
            android:paddingBottom="@dimen/dp_13"
            android:text="确定"
            android:textColor="#ffffffff"
            android:textSize="14sp" />
    </LinearLayout>

</layout>