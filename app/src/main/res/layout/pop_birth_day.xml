<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent_20">

    <LinearLayout

        android:id="@+id/ll_mr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/shape_birth_bg"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_12"
                android:layout_marginTop="@dimen/dp_14"
                android:layout_marginBottom="@dimen/dp_12"
                android:text="选择日期"
                android:textColor="#ff000000"
                android:textSize="16sp" />

            <ImageView
                android:layout_width="@dimen/dp_14"
                android:layout_height="@dimen/dp_14"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/dp_18"
                android:layout_marginRight="@dimen/dp_18"
                android:src="@drawable/img_bg_qur_close" />
        </RelativeLayout>

        <com.ycuwq.datepicker.date.DatePicker
            android:id="@+id/datePicker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_12"
            android:layout_marginBottom="@dimen/dp_20"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_club_blue_littile_stroke"
                android:paddingLeft="@dimen/dp_65"
                android:paddingTop="@dimen/dp_12"
                android:paddingRight="@dimen/dp_65"
                android:paddingBottom="@dimen/dp_12"
                android:text="取消"
                android:textColor="#ff3e8bd6"
                android:textSize="14sp" />

            <View
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_1"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/tv_sure"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_club_blue"
                android:paddingLeft="@dimen/dp_65"
                android:paddingTop="@dimen/dp_12"
                android:paddingRight="@dimen/dp_65"
                android:paddingBottom="@dimen/dp_12"
                android:text="确定"
                android:textColor="#FFFFFF"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>