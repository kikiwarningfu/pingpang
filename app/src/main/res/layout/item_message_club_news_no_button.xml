<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_16"
            android:layout_marginBottom="@dimen/dp_10"
            android:gravity="center"
            android:text="2020-09-01  09:30"
            android:textColor="#ff999999"
            android:textSize="12sp" />

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_marginRight="@dimen/dp_12"
            android:background="@drawable/shape_write_corners_5"
            android:orientation="vertical">

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_marginBottom="@dimen/dp_15"
                android:gravity="center"
                android:text="2020盐湖区乒乓球友谊赛"
                android:textColor="#ff333333"
                android:textSize="15sp" />

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <ImageView
                    android:id="@+id/iv_logo"

                    android:layout_width="@dimen/dp_41"
                    android:layout_height="@dimen/dp_41"
                    android:layout_marginLeft="@dimen/dp_19"
                    android:src="@drawable/img_default_avatar" />

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_toRightOf="@id/iv_logo"
                    android:text="放松心情"
                    android:textColor="#ff333333"
                    android:textSize="15sp" />

            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/iv_logo"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_toRightOf="@id/iv_logo"
                    android:orientation="horizontal">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="吴彦祖"
                        android:textColor="#ff666666"
                        android:textSize="14sp" />

                <ImageView
                        android:layout_width="@dimen/dp_16"
                        android:layout_height="@dimen/dp_16"
                        android:layout_marginLeft="@dimen/dp_9"
                        android:src="@drawable/img_sex_little_blue" />


            </LinearLayout>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/dp_21"
                    android:text="申请加入俱乐部"
                    android:textColor="#ff333333"
                    android:textSize="15sp" />
        </RelativeLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_35"
                android:layout_marginLeft="@dimen/dp_30"
                android:layout_marginTop="@dimen/dp_25"
                android:layout_marginRight="@dimen/dp_30"
                android:layout_marginBottom="@dimen/dp_20"
                android:orientation="horizontal">

            <LinearLayout
                    android:layout_width="@dimen/dp_110"
                    android:layout_height="@dimen/dp_35"
                    android:layout_gravity="center"
                    android:background="@drawable/shape_competition_yellow"
                    android:gravity="center"
                    android:orientation="horizontal">

                <ImageView
                        android:layout_marginRight="@dimen/dp_8"
                        android:layout_width="@dimen/dp_19"
                        android:layout_height="@dimen/dp_13"
                        android:src="@drawable/img_agree_write" />
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="同意"
                        android:textColor="#ffffffff"
                        android:textSize="15sp"
                        />
            </LinearLayout>
            <View
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp_10"
                android:layout_weight="1"/>
            <LinearLayout
                    android:layout_width="@dimen/dp_110"
                    android:layout_height="@dimen/dp_35"
                    android:layout_gravity="center"
                    android:background="@drawable/shape_competition_gray"
                    android:gravity="center"
                    android:orientation="horizontal">

                <ImageView
                        android:layout_marginRight="@dimen/dp_8"
                        android:layout_width="@dimen/dp_19"
                        android:layout_height="@dimen/dp_13"
                        android:src="@drawable/img_agree_write" />
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="拒绝"
                        android:textColor="#ffffffff"
                        android:textSize="15sp"
                        />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>