<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>

        <variable
            name="listener"
            type="android.view.View.OnClickListener" />
    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_f5"
        android:orientation="vertical">

        <heyong.handong.framework.widget.TopBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:centerText="试拍认证" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="#F6F6F6" />
        <LinearLayout
            android:id="@+id/ll_audit"
            android:visibility="gone"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:layout_marginTop="@dimen/dp_14"
                android:layout_marginBottom="@dimen/dp_14"
                android:layout_gravity="center"
                android:layout_width="@dimen/dp_39"
                android:layout_height="@dimen/dp_39"/>
            <TextView
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="13dp"
                android:layout_marginBottom="@dimen/dp_27"
                android:text="认证审核中"
                android:textColor="#ffffa400"
                android:textSize="14sp"
                />
            <TextView
                android:gravity="center"
                android:layout_marginBottom="@dimen/dp_54"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="您的试拍已上传，系统审核中，1-3个工作日内出结果，请耐心等待"
                android:textColor="#ff999999"
                android:textSize="11sp"
                />
        </LinearLayout>
        <LinearLayout
            android:visibility="visible"
            android:id="@+id/ll_real_fail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:visibility="gone"
                android:id="@+id/ll_fail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@color/white"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/dp_39"
                    android:layout_height="@dimen/dp_39"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/dp_14"
                    android:layout_marginBottom="@dimen/dp_14" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="@dimen/dp_13"
                    android:text="认证失败"
                    android:textColor="#fff33e3e"
                    android:textSize="14sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_0_5"
                    android:layout_marginLeft="@dimen/dp_12"
                    android:layout_marginRight="@dimen/dp_12"
                    android:background="#E6E6E6" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_12"
                    android:layout_marginTop="@dimen/dp_11"
                    android:layout_marginBottom="@dimen/dp_19"
                    android:text="您的试拍可能存在以下问题："
                    android:textColor="#ff333333"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_12"
                    android:layout_marginRight="@dimen/dp_12"
                    android:layout_marginBottom="@dimen/dp_15"
                    android:text="1、没有使用三脚架固定直播设备，试拍画面有明显抖动"
                    android:textColor="#fff33e3e"
                    android:textSize="12sp" />
            </LinearLayout>
            <LinearLayout
                android:visibility="gone"
                android:id="@+id/ll_success"
                android:layout_marginTop="@dimen/dp_10"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white">
                <ImageView
                    android:layout_marginBottom="@dimen/dp_14"
                    android:layout_marginTop="@dimen/dp_14"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="@dimen/dp_39"
                    android:layout_height="@dimen/dp_39"/>
                <TextView
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="@dimen/dp_26"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="认证成功"
                    android:textColor="#ff3ad031"
                    android:textSize="14sp"
                    />
                <TextView
                    android:layout_marginBottom="@dimen/dp_27"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="恭喜你，你的试拍通过了认证，现在可以去接单啦！"
                    android:textColor="#ff999999"
                    android:textSize="11sp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@color/white"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_12"
                    android:layout_marginTop="@dimen/dp_15"
                    android:layout_marginBottom="@dimen/dp_15"
                    android:text="你的试拍视频"
                    android:textColor="#ff333333"
                    android:textSize="13sp" />

                <RelativeLayout
                    android:layout_marginBottom="@dimen/dp_15"
                    android:layout_gravity="center"
                    android:layout_width="@dimen/dp_200"
                    android:layout_height="@dimen/dp_112">
                    <ImageView
                        android:layout_width="match_parent"
                        android:scaleType="centerCrop"
                        android:layout_height="match_parent"
                        android:src="@drawable/icon_test_one"/>
                    <RelativeLayout
                        android:background="#33000000"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <ImageView
                            android:layout_centerInParent="true"
                            android:layout_width="@dimen/dp_35"
                            android:layout_height="@dimen/dp_35"/>
                    </RelativeLayout>
                </RelativeLayout>
            </LinearLayout>
            <TextView
                android:id="@+id/tv_submit"
                android:onClick="@{v->listener.onClick(v)}"
                android:background="@drawable/shape_order_track_blue"
                android:layout_marginTop="@dimen/dp_33"
                android:layout_gravity="center"
                android:paddingTop="@dimen/dp_14"
                android:paddingBottom="@dimen/dp_14"
                android:paddingLeft="@dimen/dp_141"
                android:paddingRight="@dimen/dp_140"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="重新提交"
                android:textColor="#ffffffff"
                android:textSize="16sp"
                />
        </LinearLayout>

    </LinearLayout>
</layout>