<?xml version="1.0" encoding="utf-8"?>
<layout>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_f5"
        android:orientation="vertical"
        android:paddingBottom="@dimen/dp_20">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_95"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_marginRight="@dimen/dp_12"
            android:background="@drawable/shape_club_item">

        <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/iv_default_avatar"
                android:layout_width="@dimen/dp_56"
                android:layout_height="@dimen/dp_56"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_19"
                android:src="@drawable/img_default_avatar" />

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_toRightOf="@id/iv_default_avatar"
                android:orientation="horizontal">

            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_14"
                        android:text="张三"
                        android:textColor="#ff333333"
                        android:textSize="18sp" />

                <ImageView
                    android:id="@+id/iv_sex"
                        android:layout_width="@dimen/dp_15"
                        android:layout_height="@dimen/dp_15"
                        android:layout_marginLeft="@dimen/dp_14"
                        android:layout_marginTop="@dimen/dp_18"
                        android:src="@drawable/img_sex_avatar" />

            </LinearLayout>

            <LinearLayout

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:orientation="horizontal">

                <LinearLayout
                        android:layout_marginRight="@dimen/dp_30"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                    <TextView
                        android:id="@+id/tv_all_count"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1000"
                            android:textColor="#ff333333"
                            android:textSize="20sp" />
                    <TextView
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:layout_marginTop="@dimen/dp_18"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="参赛总场次"
                            android:textColor="#ff666666"
                            android:textSize="12sp"
                            />
                </LinearLayout>

                <LinearLayout
                        android:layout_marginRight="@dimen/dp_21"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                    <TextView
                        android:id="@+id/tv_win_count"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="600"
                            android:textColor="#ff333333"
                            android:textSize="20sp" />
                    <TextView
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:layout_marginTop="@dimen/dp_18"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="获胜"
                            android:textColor="#ff666666"
                            android:textSize="12sp"
                            />
                </LinearLayout>

                <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_marginRight="@dimen/dp_15"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                    <TextView
                        android:id="@+id/tv_win_rate"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="60%"
                            android:textColor="#4795ED"
                            android:textSize="20sp" />
                    <TextView
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:layout_marginTop="@dimen/dp_18"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="胜率"
                            android:textColor="#4795ED"
                            android:textSize="12sp"
                            />
                </LinearLayout>




            </LinearLayout>
        </RelativeLayout>


    </RelativeLayout>
</LinearLayout>

</layout>
