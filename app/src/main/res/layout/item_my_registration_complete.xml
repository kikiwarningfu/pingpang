<?xml version="1.0" encoding="utf-8"?>
<layout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_12"
        android:background="@color/white">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_210">

            <View
                android:id="@+id/view_divider"
                android:layout_width="@dimen/dp_8"
                android:layout_height="match_parent"
                android:background="@drawable/shape_left_corners_yellow" />

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_11"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_toRightOf="@id/view_divider"
                android:text="2020宏亮俱乐部队内乒乓球训练赛"
                android:textColor="#ff333333"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/tv_heji"
                android:layout_marginTop="@dimen/dp_19"
                android:layout_marginLeft="@dimen/dp_48"
                android:layout_below="@id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="合计"
                android:textColor="#ff333333"
                android:textSize="18sp"
                />


            <TextView
                android:id="@+id/tv_price"
                android:layout_marginTop="@dimen/dp_19"
                android:layout_below="@id/tv_title"
                android:layout_marginLeft="@dimen/dp_65"
                android:layout_toRightOf="@id/tv_heji"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¥2800"
                android:textColor="#333333"
                android:textSize="20sp"
                />
            <TextView
                android:id="@+id/tv_sign_status"
                android:layout_marginRight="@dimen/dp_18"
                android:layout_below="@id/tv_title"
                android:layout_marginTop="@dimen/dp_19"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="报名成功"
                android:textColor="#CE2626"
                android:textSize="18sp"
                />
            <TextView
                android:id="@+id/tv_time"
                android:layout_marginTop="@dimen/dp_19"
                android:layout_below="@id/tv_heji"
                android:layout_marginLeft="@dimen/dp_19"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="报名截止时间：2020-10-21"
                android:textColor="#ff333333"
                android:textSize="15sp"
                />
            <LinearLayout
                android:gravity="center"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="@dimen/dp_14"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_tuisai"
                    android:background="@drawable/shape_club_blue"
                    android:paddingTop="@dimen/dp_11"
                    android:paddingBottom="@dimen/dp_11"
                    android:paddingLeft="@dimen/dp_24"
                    android:paddingRight="@dimen/dp_24"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="我要退赛"
                    android:textColor="#ffffffff"
                    android:textSize="18sp"
                    />

                <TextView
                    android:id="@+id/tv_sign_up_detail"
                    android:background="@drawable/shape_club_yellow"
                    android:layout_marginLeft="@dimen/dp_30"
                    android:paddingTop="@dimen/dp_11"
                    android:paddingBottom="@dimen/dp_11"
                    android:paddingLeft="@dimen/dp_24"
                    android:paddingRight="@dimen/dp_24"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="报名详情"
                    android:textColor="#ffffffff"
                    android:textSize="18sp"
                    />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

</layout>