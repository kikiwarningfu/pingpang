<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="listener"
            type="android.view.View.OnClickListener" />
    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical"
        tools:context=".ui.homepage.activity.CreateEventsActivity">


        <RelativeLayout
            android:id="@+id/top_bar_relative"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center">

            <ImageView
                android:id="@+id/iv_finish"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/page_padding"
                android:paddingRight="@dimen/page_padding"
                android:src="@drawable/icon_left_back"
                android:visibility="visible" />

            <TextView
                android:id="@+id/tv_center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:ellipsize="marquee"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:gravity="center"
                android:singleLine="true"
                android:text="优先选择权抽签"
                android:textColor="#FF333333"
                android:textSize="17sp" />

            <ImageView
                android:id="@+id/iv_right_add"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_toLeftOf="@+id/iv_right"
                android:padding="@dimen/dp_13"
                android:scaleType="center"
                android:visibility="gone"
                tools:src="@drawable/morentouxiang" />

            <ImageView
                android:id="@+id/iv_right"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:padding="@dimen/dp_13"
                android:scaleType="center"
                android:visibility="gone"
                tools:src="@drawable/morentouxiang" />

            <TextView
                android:id="@+id/tv_right"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/page_padding"
                android:paddingRight="@dimen/page_padding"

                android:textColor="#FF333333"
                android:textSize="14sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:layout_alignParentBottom="true"
                android:background="@color/divider"
                android:visibility="gone" />

        </RelativeLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="#F6F6F6" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:layout_marginBottom="@dimen/dp_20">

            <View
                android:layout_width="@dimen/dp_213"
                android:layout_height="@dimen/dp_10"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:background="@drawable/shape_little_blude_solid_5" />

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="@dimen/dp_6"
                android:text="成人组男子单打【第一阶段1组】"
                android:textColor="#ff333333"
                android:textSize="15sp"
                android:textStyle="bold" />
        </RelativeLayout>


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"

            android:layout_marginTop="@dimen/dp_73">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_132"
                android:layout_marginLeft="@dimen/dp_8"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_8"
                android:scaleType="centerCrop"
                android:src="@drawable/img_zhuanpan_zhuo" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_30"

                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/ll_left_one"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:orientation="vertical">

                            <de.hdodenhof.circleimageview.CircleImageView
                                android:id="@+id/iv_left_one_logo"
                                android:layout_width="@dimen/dp_40"
                                android:layout_height="@dimen/dp_40"
                                android:layout_centerHorizontal="true"
                                android:src="@drawable/img_default_avatar" />

                            <TextView
                                android:id="@+id/tv_left_one_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:lines="1"
                                android:ellipsize="end"
                                android:layout_below="@id/iv_left_club_logo"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="@dimen/dp_11"
                                android:text=""
                                android:textColor="#fffefefe"
                                android:textSize="12sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ll_left_two"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="@dimen/dp_10"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:visibility="gone">

                            <de.hdodenhof.circleimageview.CircleImageView
                                android:id="@+id/iv_left_two_logo"
                                android:layout_width="@dimen/dp_40"
                                android:layout_height="@dimen/dp_40"
                                android:layout_centerHorizontal="true"
                                android:src="@drawable/img_default_avatar" />

                            <TextView
                                android:id="@+id/tv_left_two_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:lines="1"
                                android:ellipsize="end"
                                android:layout_below="@id/iv_left_club_logo"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="@dimen/dp_11"
                                android:text="洪亮俱乐部"
                                android:textColor="#fffefefe"
                                android:textSize="12sp" />
                        </LinearLayout>
                    </LinearLayout>


                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_30"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/ll_right_two"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="@dimen/dp_10"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:visibility="invisible">

                            <de.hdodenhof.circleimageview.CircleImageView
                                android:id="@+id/iv_right_two_logo"
                                android:layout_width="@dimen/dp_40"
                                android:layout_height="@dimen/dp_40"
                                android:layout_centerHorizontal="true"
                                android:src="@drawable/img_default_avatar" />

                            <TextView
                                android:id="@+id/tv_right_two_name"
                                android:layout_width="wrap_content"
                                android:lines="1"
                                android:ellipsize="end"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/iv_left_club_logo"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="@dimen/dp_11"
                                android:text="洪亮俱乐部"
                                android:textColor="#fffefefe"
                                android:textSize="12sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="@dimen/dp_10"
                            android:gravity="center"
                            android:orientation="vertical">

                            <de.hdodenhof.circleimageview.CircleImageView
                                android:id="@+id/iv_right_logo_one"
                                android:layout_width="@dimen/dp_40"
                                android:layout_height="@dimen/dp_40"
                                android:layout_centerHorizontal="true"
                                android:src="@drawable/img_default_avatar" />

                            <TextView
                                android:id="@+id/tv_right_one_name"
                                android:layout_width="wrap_content"
                                android:lines="1"
                                android:ellipsize="end"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/iv_left_club_logo"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="@dimen/dp_11"
                                android:text=""
                                android:textColor="#fffefefe"
                                android:textSize="12sp" />
                        </LinearLayout>
                    </LinearLayout>


                </RelativeLayout>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/img_zhizhen"
                    android:layout_width="@dimen/dp_72"
                    android:layout_height="@dimen/dp_122"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/dp_3"
                    android:src="@drawable/img_duinei_chouqian">

                </ImageView>

                <TextView
                    android:id="@+id/tv_start"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/dp_51"
                    android:onClick="@{v->listener.onClick(v)}"
                    android:text="抽签"
                    android:textColor="#ff4795ed"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:visibility="visible" />
            </RelativeLayout>
        </FrameLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_5"
            android:layout_marginTop="@dimen/dp_20"
            android:background="#FFF6F6F6" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_17"
                android:layout_marginBottom="@dimen/dp_40"
                android:gravity="center"
                android:text="抽签结果"
                android:textColor="#ff333333"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_40"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_first"
                        android:layout_width="@dimen/dp_15"
                        android:layout_height="@dimen/dp_15"
                        android:background="#4795ED"
                        android:gravity="center"
                        android:text="先"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_11" />

                    <LinearLayout
                        android:layout_width="@dimen/dp_125"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/dp_9"
                        android:layout_marginRight="@dimen/dp_35"
                        android:background="@drawable/shape_corners_storke_grays">

                        <TextView
                            android:id="@+id/tv_fist_name"
                            android:lines="1"
                            android:ellipsize="end"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text=""
                            android:textColor="#666666"
                            android:textSize="@dimen/sp_15" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_40"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="horizontal">


                    <LinearLayout
                        android:layout_width="@dimen/dp_125"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/dp_9"
                        android:layout_marginRight="@dimen/dp_9"
                        android:background="@drawable/shape_corners_storke_grays">

                        <TextView
                            android:id="@+id/tv_hou_name"
                            android:lines="1"
                            android:ellipsize="end"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text=""
                            android:textColor="#666666"
                            android:textSize="@dimen/sp_15" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_hou"
                        android:layout_width="@dimen/dp_15"
                        android:layout_height="@dimen/dp_15"
                        android:background="#4795ED"
                        android:gravity="center"

                        android:text="后"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_11" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>


        <TextView
            android:id="@+id/tv_start_competition"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_marginRight="@dimen/dp_12"
            android:layout_marginBottom="@dimen/dp_20"
            android:background="@drawable/shape_gray_corners_solid"
            android:gravity="center"
            android:onClick="@{v->listener.onClick(v)}"
            android:text="开始比赛"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/sp_15" />
    </LinearLayout>
</layout>