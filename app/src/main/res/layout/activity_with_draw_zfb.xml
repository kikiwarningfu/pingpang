<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="listener"
            type="android.view.View.OnClickListener" />
    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_f5"
        android:orientation="vertical">


        <heyong.handong.framework.widget.TopBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:centerText="提现" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="#F6F6F6" />
        <LinearLayout
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginLeft="@dimen/dp_13"
                android:layout_marginBottom="@dimen/dp_21"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="请输入提现支付宝账号"
                android:textColor="#ff333333"
                android:textSize="15sp"
                />
            <EditText
                android:layout_marginLeft="@dimen/dp_14"
                android:layout_marginRight="@dimen/dp_14"
                android:layout_marginBottom="@dimen/dp_10"
                android:background="@null"
                android:textSize="@dimen/sp_13"
                android:textColor="#999999"
                android:hint="请输入"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0_5"
                android:background="#F5F5F5"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_submit"
            android:onClick="@{v->listener.onClick(v)}"
            android:background="@drawable/shape_club_blue"
            android:layout_marginTop="@dimen/dp_79"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:paddingTop="@dimen/dp_13"
            android:paddingBottom="@dimen/dp_15"
            android:paddingLeft="@dimen/dp_144"
            android:paddingRight="@dimen/dp_144"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="提交"
            android:textColor="#ffffffff"
            android:textSize="16sp"
            />
    </LinearLayout>
</layout>