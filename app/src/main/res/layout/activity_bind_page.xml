<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="listener"
            type="android.view.View.OnClickListener" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_f5"
        android:orientation="vertical"
        tools:context=".ui.homepage.activity.CreateEventsActivity">


        <heyong.handong.framework.widget.TopBar
            android:id="@+id/top_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:centerText="绑定微信" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="#F6F6F6" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="@dimen/dp_260"
                android:layout_height="@dimen/dp_90"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dp_25"
                android:layout_marginBottom="@dimen/dp_28"
                android:background="@drawable/shape_color_bg">

                <ImageView
                    android:layout_width="@dimen/dp_52"
                    android:layout_height="@dimen/dp_52"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_26"
                    android:src="@drawable/img_bind_touxiang" />

                <LinearLayout
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/iv_logo_bind_status"
                        android:layout_marginTop="@dimen/dp_10"
                        android:src="@drawable/img_explore_bind"
                        android:layout_width="@dimen/dp_49"
                        android:layout_height="@dimen/dp_31"/>
                    <TextView
                        android:id="@+id/tv_text_bind_status"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_marginTop="@dimen/dp_7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="未绑定"
                        android:textColor="#ff999999"
                        android:textSize="11sp"
                        />
                </LinearLayout>
                <ImageView
                    android:id="@+id/iv_wx"
                    android:src="@drawable/img_bind_wx"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/dp_26"
                    android:layout_width="@dimen/dp_52"
                    android:layout_height="@dimen/dp_52"/>
            </RelativeLayout>
            <TextView
                android:id="@+id/tv_bind_text"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/dp_9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="绑定到微信账户"
                android:textColor="#ff333333"
                android:textSize="15sp"
                />
            <TextView
                android:id="@+id/tv_bind_explain"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/dp_27"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="将您的账户绑定到微信后，可以提现到微信"
                android:textColor="#ff999999"
                android:textSize="12sp"
                />
        </LinearLayout>
        <TextView
            android:id="@+id/tv_submit"
            android:onClick="@{v->listener.onClick(v)}"
            android:background="@drawable/shape_club_blue"
            android:layout_marginTop="@dimen/dp_30"
            android:paddingTop="@dimen/dp_13"
            android:paddingBottom="@dimen/dp_12"
            android:paddingLeft="@dimen/dp_90"
            android:paddingRight="@dimen/dp_90"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="绑定微信"
            android:textColor="#ffffffff"
            android:textSize="15sp"
            />
    </LinearLayout>
</layout>