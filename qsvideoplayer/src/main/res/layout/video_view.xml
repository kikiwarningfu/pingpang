<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/cover"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop" />

    <ProgressBar
        android:id="@id/help_progress"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="1.5dp"
        android:layout_alignParentBottom="true"
        android:max="100"
        android:progressDrawable="@drawable/jc_progress" />

    <LinearLayout
        android:id="@+id/layout_bottom"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bottom_backgroud"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@id/help_start"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerInParent="true"
            android:scaleType="center"
            android:src="@drawable/jc_click_play_selector" />
        <TextView
            android:id="@id/help_current"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:text="00:00"
            android:textColor="#ffffff" />

        <org.song.videoplayer.MySeekBar
            android:id="@id/help_seekbar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1.0"
            android:background="@null"
            android:max="100"
            android:maxHeight="4dp"
            android:minHeight="4dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:progressDrawable="@drawable/jc_seek_progress"
            android:thumb="@drawable/jc_seek_thumb" />

        <TextView
            android:id="@id/help_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:00"
            android:textColor="#ffffff" />

        <TextView
            android:id="@id/help_definition"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginLeft="8dp"
            android:gravity="center"
            android:text="高清"
            android:textColor="#ffffff" />


        <ImageView
            android:id="@id/help_fullscreen"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:paddingLeft="12dp"
            android:paddingRight="16dp"
            android:scaleType="center"
            android:src="@drawable/jc_enlarge" />
    </LinearLayout>



    <RelativeLayout
        android:id="@+id/layout_top"

        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:paddingStart="10dp"
        android:paddingLeft="10dp"
        android:visibility="visible">

        <ImageView
            android:id="@+id/help_back"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="12dp"
            android:padding="3dp"
            android:scaleType="centerInside"
            android:src="@drawable/jz_click_back_selector1" />

        <TextView
            android:id="@+id/help_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/help_back"
            android:layout_toRightOf="@+id/help_back"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="aaaa"
            android:layout_marginTop="2dp"
            android:textColor="#ffffff"
            android:textSize="11sp" />

        <LinearLayout
            android:layout_toRightOf="@id/help_title"
            android:layout_marginLeft="5dp"
            android:id="@+id/ll_top_travier_view"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_marginRight="18dp"
                android:layout_height="wrap_content"
                android:text="可试看60秒钟，完整版请购买观看"
                android:textColor="#ffffffff"
                android:textSize="10sp"
                />
            <TextView
                android:background="@drawable/shappe_solid_red_purcharse1"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="购买"
                android:textColor="#ffffffff"
                android:textSize="13sp"
                />
        </LinearLayout>

    </RelativeLayout>
    <FrameLayout
        android:id="@+id/buffering_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:visibility="gone"
        android:layout_centerHorizontal="true"
       >

        <ProgressBar
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:indeterminateDrawable="@drawable/jc_loading" />
    </FrameLayout>




    <FrameLayout
        android:id="@+id/loading_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#333333"
        android:visibility="invisible">

        <ProgressBar
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:indeterminateDrawable="@drawable/jc_loading" />
    </FrameLayout>

    <LinearLayout
        android:id="@+id/ll_center_purchase"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="试看60秒钟结束，完整版内容请购买观看"
            android:textColor="#ffffffff"
            android:textSize="15sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="25dp"
            android:background="@drawable/shappe_solid_red_purcharse1"
            android:gravity="center"
            android:paddingLeft="14dp"
            android:paddingTop="8dp"
            android:paddingRight="14dp"
            android:paddingBottom="8dp"
            android:text="购买全部：¥1"
            android:textColor="#ffffffff"
            android:textSize="14sp" />
    </LinearLayout>
    <FrameLayout
        android:id="@+id/error_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="#333333"
        android:visibility="invisible">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:scaleType="center"
            android:src="@drawable/jc_click_error_selector" />
    </FrameLayout>


    <ImageView
        android:id="@id/help_float_close"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:scaleType="fitCenter"
        android:src="@drawable/jc_click_back_tiny_selector" />

    <ImageView
        android:id="@id/help_float_goback"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:padding="6dp"
        android:scaleType="fitCenter"
        android:src="@drawable/qs_goback" />

</RelativeLayout>
