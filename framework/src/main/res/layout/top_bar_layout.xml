<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/top_bar_relative"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:layout_gravity="center"
    >

    <ImageView
        android:id="@+id/iv_finish"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/page_padding"
        android:paddingRight="@dimen/page_padding"
            android:src="@drawable/icon_left_back"
        />

    <TextView
        android:id="@+id/tv_center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:ellipsize="marquee"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:gravity="center"
        android:singleLine="true"
        android:textColor="#FF333333"
        android:textSize="17sp"
        />

    <ImageView
        android:id="@+id/iv_right_add"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:layout_toLeftOf="@+id/iv_right"
        android:padding="13dp"
        android:scaleType="center"
        android:visibility="gone"
        tools:src="@drawable/morentouxiang" />

    <ImageView
        android:id="@+id/iv_right"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:padding="13dp"
        android:scaleType="center"
        android:visibility="gone"
        tools:src="@drawable/morentouxiang" />

    <TextView
        android:id="@+id/tv_right"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/page_padding"
        android:paddingRight="@dimen/page_padding"
        android:textColor="#FF333333"
        android:textSize="14sp"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="@color/divider"
        android:visibility="gone"
        />

</RelativeLayout>
